@css {
/*
Stack Editor Header stylesheet
stackeditorheader.styl
*/
}

$accentColor                = #F2778A
$titleColor                 = #424242
$subtleColor                = #A59999
$borderColor                = #E3E3E3

.StackEditorView--header
  display                   flex
  flex-flow                 row nowrap
  justify-content           space-around
  margin-bottom             33px

  .edit-name
    color #67A2EE
    text-decoration none
    font-size 13px
    font-weight 300
    abs 81px 0 0 42px

  .cloned-from-text
    color #A59999
    abs()
    top 81px
    left 120px
    font-size 12px
    max-width 300px
    ellipsis()

    &:before
      content               ''
      rel()
      borderBox()
      dIBlock()
      border                3px solid #A59999
      rounded               100%
      top                   -1px
      margin-right          5px


  .cloned-from
    color #67A2EE
    cursor pointer
    display initial
    font-size 14px

  .buttons
    flex                    1 0 auto

  .GenericButton
    margin                  3px 0 0 10px
    padding                 12px 40px
    height                  43px
    &:not(.save-test)
      padding               12px 20px
    &.isntMine
      display               none

  .kdinput.text
    flex                    0 1 auto
    font-size               20px
    display                 block
    size                    auto 42px
    padding                 5px 0
    border                  1px solid transparent
    rounded                 3px
    color                   #424242
    bg                      color transparent
    max-width               50%
    font-weight             400
    outline                 none
    shadow                  none
    pointer-events          none
    &.isntMine
      opacity               .5
      pointer-events        none

    &:hover
      border                1px solid transparent

    &:focus
      pointer-events        auto
      padding-left          10px
      padding-right         10px
      outline               inherit
      bg                    color #FFFFFF
      border                1px solid $borderColor

