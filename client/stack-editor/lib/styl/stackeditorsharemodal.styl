.StackEditor-ShareModal.kdmodal
  -webkit-font-smoothing    antialiased
  -moz-osx-font-smoothing   grayscale

  header
    height                  70px
    line-height             70px

    h1
      font-size             20px
      font-weight           300
      color                 #bababa

  main
    margin                  100px 250px 100px 50px

    h1
      color                 #424242
      font-size             20px
      letter-spacing        0.2px

    p
      font-size             14px
      letter-spacing        0.2px
      color                 #a59999
      line-height           20px
      margin-top            15px

      label.kdlabel
        color               inherit
        line-height         inherit

  footer
    height                  70px
    text-align              right
    padding-right           20px

.StackEditor-ShareConfirmationModal.kdmodal

  main
    margin                  40px 40px 60px 40px

    h2
      text-align            left
      font-weight           600

    p
      padding-top           15px
      line-height           22px

  footer
    text-align              right
    padding-right           20px
