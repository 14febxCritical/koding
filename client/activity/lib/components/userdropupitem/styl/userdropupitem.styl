.UserDropupItem
  color                     #716f6d !important
  padding                   3px 16px
  margin-top                2px

  &:first-child
    margin-top              0px

  &.DropupItem-selected
    bg                      color, #ffeb9c

  .ProfilePicture
    rounded                 3px
    display                 block
    fl()
    margin-right            15px

.UserDropupItem-names
  padding-top               3px

.UserDropupItem-status
  size                      7px 7px
  rounded                   50%
  bg                        color, #d8d8d8
  margin                    0px 6px
  blockMid()

  &.UserDropupItem-online
    bg                      color, #00b057
