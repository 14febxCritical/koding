.Dropbox-container
  position                  relative
  width                     100%

.Dropbox
  abs()
  overflow                  auto
  width                     100%
  max-height                300px
  border                    1px solid #dcdcdc
  shadow                    0 5px 15px rgba(0,0,0,0.2)
  bg                        color, #fff
  borderBox()

.Dropbox-innerContainer
  rel()

.Dropbox-header
  color                     #b5adad
  text-transform            uppercase
  font-size                 11px
  padding                   9px 16px

