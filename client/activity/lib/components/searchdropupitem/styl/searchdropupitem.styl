.SearchDropupItem
  padding                   8px 20px 15px 20px
  color                     #605f63
  border-bottom             1px solid #f3f3f3
  font-size                 16px

  &:last-child
    border-bottom           none

  .SearchItemBody-matchedWord
    color                   #000000
    font-weight             bold

  .emoji
    size                    16px 16px
    blockMid()
    padding                 0

.SearchDropupItem-info
  color                     #a8a8a8

  &~.SearchDropupItem-info:before
    content                 ""
    size                    3px 3px
    rounded                 50%
    bg                      color, #a8a8a8
    margin                  0 5px
    blockMid()

.SearchDropupItem-profileLink a
  color                     #a1a1a1
  noTextDeco()

