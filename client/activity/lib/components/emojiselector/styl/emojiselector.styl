.EmojiSelector
  width                     365px !important

  .Dropbox
    right                   0px
    rounded                 3px
    width                   auto

  .Dropbox-scrollable
    max-height              none

.EmojiSelector-list
  max-height                306px
  width                     363px
  overflow                  auto
  padding                   18px 0 18px 18px
  borderBox()

.EmojiSelector-footer
  padding                   16px 17px
  bg                        color, #f8f8f8

.EmojiSelector-selectedItemIcon
  fl()
  margin-right              15px
  size                      36px 36px

  .emoji-wrapper
    size                    32px 32px

    .emoji-sprite
      size                  32px 32px
      sta()
      transform             none

    .emoji
      size                  32px 32px

.EmojiSelector-selectedItemName
  color                     #646565
  font-size                 16px
  line-height               36px

.EmojiSelectorSection
  clear                     left

  header
    padding-top             10px
    padding-bottom          5px
    font-size               20px
    font-weight             bold

.EmojiSelector-categoryFilters
  bg                        color, #f7f7f7
  border-bottom             1px solid rgba(0, 0, 0, 0.15);
  padding                   4px 0 0 7px
  boxSizing()

  .categoryFilterTab
    border-bottom           3px solid transparent
    border-radius           0.6rem 0.6rem 0 0
    color                   #9e9ea6
    display                 inline-block
    margin-right            3px
    padding                 4px 5.8px 6px

