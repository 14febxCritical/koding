.ChatInputWidget
  rel()
  min-height                44px
  bg                        color white
  border-top                1px solid #f2f2f2
  cursor                    text
  font-size                 0
  borderBox()

  &:before
    content                 ""
    r-sprite                activity widget-icon
    z-index                 2
    abs                     15px 0 0 21px

  > textarea
    bg                      color transparent
    bg                      image none
    border                  none
    margin                  0
    width                   100%
    font-size               14px
    line-height             19px
    min-height              44px
    max-height              196px
    padding                 13px 50px 12px 54px
    font-weight             400
    rounded                 0
    resize                  none
    &:focus
      outline               none
      shadow                none

  .ChatInputWidget-emojiButton
    abs()
    size                    20px 20px
    top                     13px
    right                   46px
    r-sprite                'activity', 'emoji'