$base-padding               = 18px

.FeedItem
  width                     100%
  max-width                 600px
  background                $white
  border-radius             $border-radius
  border                    1px solid #EAEAEA
  margin-bottom             10px
  padding                   0
  font-size                 $fs-regular

  &.is-disabled
    opacity                 .5 !important

.FeedItem-header
  padding                   $base-padding $base-padding 0 $base-padding

.FeedItem-headerContentWrapper
  overflow                  hidden

  .MediaObject-media
    fl()

  .FeedItem-authorName
    dBlock()

.FeedItem-messageDate
  rel()
  pointer()
  color                     $gray-10
  font-size                 12px
  font-weight               400
  line-height               20px

.FeedItem-date
  font-size                 $fs-small
  color                     $color-light-text

.FeedItem-date:before
  content                   ""
  display                   inline-block
  size                      3px, 3px
  rounded                   50%
  background                $color-light-text
  font-size                 8px
  margin                    0 6px
  vertical-align            middle

.FeedItem-body
  padding                   ($base-padding/2) $base-padding

.FeedItemAction
  float                     left
  margin-right              0
  font-size                 $fs-small

.FeedItemAction a
  color                     $color-light-text

.FeedItem-footer
  bg                        color #FBFAF9
  border-bottom             1px solid #EAEAEA
  border-radius             0 0 $border-radius $border-radius

.FeedItem-summary
  padding                   8px 18px
  font-size                 14px
  border-top                1px solid #EAEAEA
  border-bottom             1px solid #EAEAEA

  a
    noTextDeco()
    font-weight             600
    color                   $gray-8

.FeedItem-comment
  overflow                  hidden
  padding                   16px 16px 16px 18px

  .MediaObject-media
    fl()
    margin-right            8px

  .ProfilePicture
    width                   30px !important
    height                  30px !important

  .FeedItem-commentForm
    fl()
    rel()
    width                   calc(100% \- 50px)

    .FeedItem-commentInput
      borderBox()
      outline               none
      border                1px solid #EAEAEA
      resize                none
      width                 100%
      min-height            30px
      padding               5px 55px 5px 5px
      font-size             12px

      &:hover
        border              1px solid #dadada

    button
      abs                   0 4px 7px 0
      bg                    color, $gray-18
      color                 $gray-8
      border                none
      rounded               3px
      size                  45px 22px
      cursor                not-allowed
      outline               none

    button.green
      pointer()
      color                 $white
      bg                    color, $green

      &:hover
        bg                  color, #2dbea1

.FeedItem-footerActionContainer
  padding                   5px 18px 10px
  width                     100%
  overflow                  hidden
  bg                        color, $white
  borderBox()

  > a
    fl()
    pointer()
    font-size               14px
    color                   $gray-12
    font-weight             400

    &:first-child:before
      hidden()

    &:before
      dIBlock()
      content:                ""
      size                    3px 3px
      rounded                 50%
      bg                      color, $gray-12
      font-size               12px
      margin                  0 8px
      vertical-align          middle

