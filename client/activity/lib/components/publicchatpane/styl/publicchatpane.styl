.PublicChatPane
  bg                              color, $gray-19
  size                            100% 100%
  box-sizing                      border-box
  font-family                     $adelle-family
  font-size                       $fs-regular
  line-height                     $body-line-height

.PublicChatPane-contentWrapper
  dispFlex()
  bg                              color, #fcfcfc
  height                          100%
  flex-direction                  column

  .PublicChatPane-header
    height                        60px
    .PublicChatPane-NameLabel
      border-bottom               1px dashed #A49797
      display                     inline-block
      font-size                   20px
      line-height                 32px
      margin                      10px 0 0 25px
      color                       #A49797
      font-weight                 400

    .PublicChatPane-SettingsMenuButton
    .PublicChatPane-SearchWidget
      hidden()

    .PublicChatPane-SearchWidget
      abs()
      hidden()
      width                       200px
      height                      12px
      padding                     8px 20px
      right                       25px
      top                         15px
      border                      1px solid #A49797
      border-radius               25px

  .PublicChatPane-body
    rel()
    flex                          7
    overflow                      auto
    padding                       10px 0

    .PublicChatList
      max-width                   600px

      .ChatList
        width                     100%

        &.padded
          height                  auto
          abs                     0 0 0px 0

  .PublicChatPane-footer
    rel()
    height                        70px

    .ChatInputWidget
      abs()
      borderBox()
      bg                          color, #FCFCFC
      border                      none
      size                        100%, 100%
      padding                     0 25px 25px 25px
      right                       auto
      left                        0

      &:before
        left                      37px

      > textarea
        borderBox()
        padding-left              44px
        size                      100%, 42px
        min-height                0
        border                    1px solid #F2F2F2
