@import "../Framework/themes/default/kdfn"

#main-header
  &.black
    #koding-logo
      span
        bg position, -240px -720px

    #header-sign-in
      span
        color black !important

a
  outline           0

@keyframes fadeIn
  100%
    opacity 1

.intro-view
  top                   0
  background            url("../images/gunduz-varligi-yildizli.jpg") \
                        no-repeat center center fixed
  background-size       cover
  z-index               99
  opacity               0
  vendor                transition, opacity .6s ease-in\, background-position .5s ease

  abs()

  &.ghost
    background-position-y   -250px

  &.in
    opacity 1

  &.out
    vendor              animation, moveToTop .6s ease both

  .bottom-menu
    text-align          center
    bottom              0
    padding             40px
    padding-top          5px
    margin-left        -40px
    width               100%
    z-index             5
    abs()

    a
      background            none
      border                none
      text-shadow           none
      box-shadow            none
      font-size             14px
      text-transform        none
      font-weight           normal
      font-family           'Open Sans'
      padding-left          24px
      &.active
        font-weight         bold

    a:last-of-type
      border                none

    &.black
      a.active
        color               black

.kd-page

  text-align            center
  size                  100%, 100%
  left                  0
  top                   0
  padding-top           0
  background-color      white
  borderBox()
  abs()

  .slogan
    top                 41px
    left                144px
    font-size           22px
    color               #595959
    font-family         "Ubuntu"
    abs()

    span > span
      color           #ff9e3c

  .sub-slogan
    text-shadow         0 0 10px black
    line-height         40px
    font-weight         300
    margin-top         -60px
    font-size           30px
    width               100%
    color               #fff
    top                 50%
    abs()

  .content
    margin-left   -80px
    margin-top    -15px
    color         white
    font-size     30px
    top           50%
    left          50%
    abs()

  .details
    width          45%

  .slider-page
    display             table
    size                100%, 100%
    top                 0
    text-align          left

    figure
      height          50%
      width           50%
      position        relative
      max-width       600px
      fr()

      img
        size         100%, 100%
        min-height   200px
        rounded      0 0 4px 4px
        abs()

    &.left-aligned
      figure
        fl()
        margin-left     0
        margin-right    100px

    .wrapper
      display           table-cell
      vertical-align    middle
      width             100%
      max-width         1280px
      margin            0 auto
      padding           40px 60px 40px 60px
      borderBox()

    p
      // font-size         18px
      margin            40px 0 0 0
      // font-weight       300

    &.active
      opacity           1

    &#you-page
    &#developers-page
    &#business-page
    &#education-page
      text-align        left
      h3
        margin-top      100px

.entryPage

  background-color      rgba(0, 0, 0, 0)

  .top-slogan
    font-size           50px
    color               #fff
    font-weight         normal
    text-shadow         0 0 10px black
    margin-top         -160px
    width               100%
    top                 50%
    abs()

  .buttons
    text-align          center
    bottom              150px
    width               100%
    abs()

    button.kdbutton
      size              200px, 60px
      rounded           39px
      background        black
      border            2px solid transparent
      text-align        left
      font-size         16px
      line-height       22px
      padding           5px 0 0 0
      vendor            transition, background .3s ease \,\
                                    color      .3s ease
      borderBox()

      i
        display         block
        float           left
        size            40px, 40px
        sprite()
        margin          3px 10px 30px 10px

      span
        display         block
        font-size       20px

      &.email
        border-color    #df7400
        color           #df7400
        i
          bg            position, -680px -1px

        &:hover
          bg            color, #df7400
          color         #5c3108
          span
            color       #1c140c
          i
            bg            position, -680px -45px

      &.github
        border-color    #fff
        color           #a9a7a6
        margin          0 0 0 40px
        i
          bg            position, -630px -1px
        span
          color         #fff

        &:hover
          bg            color, #fff
          color         #b6b6b6
          span
            color       #545454
          i
            bg          position, -630px -45px


@media only screen and (max-width: 400px)
  .kd-page
    .details
      width           100%
    .slider-page
      figure
        width           0%