@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"

.previewer-body
  width                 100%
  height                100%

  iframe
    box-sizing          content-box
    height              100%
    width               100%
    overflow            auto

.viewer-header
  size                  auto 40px
  color                 #EEE
  margin                10px

  .viewer-title
    display             inline-block
    height              auto
    width               auto
    line-height         20px
    padding             9px 15px
    font-size           11px
    text-shadow         0 1px 0 #FFF

  &:hover
    a.refresh-link
      opacity           1

  a.refresh-link
    // vendor              transition, opacity .15s linear
    opacity             .3
    abs()
    top                 10px
    right               6px
    height              25px
    padding             2px
    size                16px, 16px
    kdfsprite()
    bg                  position, -1px -521px

  a.address-bar-icon
    abs()
    top                 10px
    left                8px
    size                20px, 20px
    bg                  position, -100px -379px
    kdfsprite()

  .kdinput.text.hitenterview
    size                100%, 40px
    font-size           14px
    line-height         inherit
    border              1px solid #252E30
    padding             0 0 0 22px
    bg                  image none
    bg                  color #1B2224
    noShadow()

    &:focus
      color             #3AAAAB
      border-color      #3AAAAB
      noShadow()

.kdcontextmenu.editor-advanced-settings-menu
  button.kdbutton.with-icon span.icon.cog-white
    bg          position,-81px -301px

  .kdcontextmenutreeview
    .kdtreeitemview
      input.kdinput.text
        display   block
        float     right
        margin    0 10px 0 0
        width     52px


