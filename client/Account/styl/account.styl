@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"



@css {
/*
Account SETTINGS stylesheet
app.settings.styl
*/
}

body.account

  #main-tab-view
    overflow                      visible

  .app-sidebar
    background                    #EFEFEF
    padding                       21px 16px 16px 34px

    nav
      a
        display                   block
        line-height               24px
        font-size                 14px
        color                     #4C4C4C
        font-weight               600
        opacity                   .99
        noTextDeco()

        &.selected
          text-decoration         underline

      .divider
        height                    24px

  .app-content
    padding                       34px 34px 0 0
    overflow                      visible

  .settings-list-wrapper

    &.email-notifications
    &.linked-accounts
      li
        size                      100%, 65px
        line-height               65px
        border-bottom             1px solid #DEDEDE
        padding                   0 4px 0 4px
        borderBox()

        &:last-of-type
          border-bottom           none

        .title
          fl()

        .koding-on-off
          margin-top              18px
          fr()

    &.payment-methods
      .payment-method
        height                    62px
        border-bottom             1px solid #DEDEDE
        line-height               19px
        font-size                 14px
        padding                   13px 0 0
        borderBox()

        .billing-link
          fl()

        .card-type
          color                   #7B7B7B
          opacity                 .99

        pre
          color                   #4C4C4C
          font-weight             600
          opacity                 .99

        .payment-method-controls
          fr()

          a
            display               block
            margin                10px 0 0 16px
            fr()

            &.edit
              r-sprite            'app', 'edit-gray-16'

            &.remove
              r-sprite            'app', 'delete-gray-16'
