@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"



@css {
/*
Account SETTINGS stylesheet
app.settings.styl
*/
}

body.account
  bg                      color, #E9E9E7

.kdtabpaneview.account

  color                   #828B8B

  .content-page
    min-height            100%
    max-width             850px
    padding-top           150px

  h2.kdheaderview
    border                none
    margin-bottom         60px
    line-height           40px
    color                 #828B8B
    span
      margin              0
      font-weight         300

  .kdinput.text.thin
    text-align            left
    bg                    color #F4F4F4
    padding               11px 20px

    &[readonly=true]
      opacity             .5

    &.half
      fl()
      width               50%
      &:first-child
        kalc              width, 50% \- 1px
        margin-right      1px

  .avatarview
    margin-top            11px
    rounded               6px
    fl()

  section
    overflow              hidden
    width                 auto
    padding               0 20px
    borderBox()

  .kdformview
    .formline
      border              none
      padding             11px 20px 11px 20px
      input.kdinput.text
        min-width         0

  .button-field
    bg                    color transparent
    .kdbutton.solid.green
      width               100%


  .email-notifications
    line-height           55px
    form.kdformview
      rel()
      border-bottom       1px solid #E1E1DF

    .koding-on-off
      abs()
      top                 10px
      right               0

.linked-accounts

  ul
    margin                0
    padding               0
    li
      list-style          none
      padding             13px 0
      borderBox()
      .title
        width             296px
        line-height       22px
        fl()
        cite
          font-size       16px
          font-weight     400
          margin-left     16px

      .kdinput.koding-on-off
        margin-top        6px
        fr()

      &.github .icon
        sprite            account 'ext-github'
      &.odesk .icon
        sprite            account 'ext-odesk'
      &.facebook .icon
        sprite            account 'ext-facebook'
      &.twitter .icon
        sprite            account 'ext-twitter'
      &.google .icon
        sprite            account 'ext-google'
      &.linkedin .icon
        sprite            account 'ext-linkedin'

      span
      cite
      a
        font-style        normal
        blockMid()

button.kdbutton.solid.green.account-header-button
  abs()
  top               6px
  right             16px
  margin            0
  color             #666
  height            40px
  &.with-icon
    padding         0 6px
  &.icon-only
    padding         0 6px
  span.icon
    rel()
    display         block
    padding         0
    margin          0
    border          none
    visibility      visible
    sprite          app '30-refresh-icon-white'
    &.plus
      sprite        app '30-plus-icon-white'

.delete-account-view
  padding                 10px 0
  color                   #888
  borderBox()
  button.delete-account
    left                  0
    vendor                transition, left .1s ease-in\, \
                                      width .1s ease-in
    &.escape
      left                -160px
