@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"



@css {
/*
Account SETTINGS stylesheet
app.settings.styl
*/
}

body.account
  // THIS IS TEMP - SY

  textarea.kdinput.text
    rel()
    z-index             1
    padding             11px 6px
    color               #3E4F55
    font-size           16px
    box-shadow          none
    font-weight         300
    height              150px
    line-height         33px
    rounded             6px
    width               100%
    text-align          left
    bg                  color #f4f4f4
    borderBox()

    input.kdinput.text.thin::-webkit-input-placeholder
      color               #93979a
      font-weight         300
    input.kdinput.text.thin:-moz-placeholder
      color               #93979a
      font-weight         300


.kdtabpaneview.account
  color                   #828B8B

  .content-page
    min-height            100%
    max-width             850px
    padding-top           150px

  h2.kdheaderview
    border                none
    margin-bottom         60px
    line-height           40px
    color                 #828B8B
    span
      margin              0
      font-weight         300

  .kdinput.text.thin
    text-align            left
    bg                    color #F4F4F4
    padding               11px 20px

    &[readonly=true]
      opacity             .5

    &.half
      fl()
      width               50%
      &:first-child
        kalc              width, 50% \- 1px
        margin-right      1px

  .avatarview
    margin-top            11px
    rounded               6px
    fl()

  section
    overflow              hidden
    width                 auto
    padding               0 20px
    borderBox()

  .kdformview
    .formline
      border              none
      padding             11px 0
      input.kdinput.text
        min-width         0

  .button-field
    bg                    color transparent
    .kdbutton.solid.green
      width               100%


  .email-notifications
    line-height           55px
    form.kdformview
      rel()
      border-bottom       1px solid #E1E1DF

    .koding-on-off
      abs()
      top                 10px
      right               0

.linked-accounts

  ul
    margin                0
    padding               0
    li
      list-style          none
      padding             13px 0
      borderBox()
      .title
        width             296px
        line-height       22px
        fl()
        cite
          font-size       16px
          font-weight     400
          margin-left     16px

      .kdinput.koding-on-off
        margin-top        6px
        fr()

      &.github .icon
        r-sprite          account 'ext-github'
      &.odesk .icon
        r-sprite          account 'ext-odesk'
      &.facebook .icon
        r-sprite          account 'ext-facebook'
      &.twitter .icon
        r-sprite          account 'ext-twitter'
      &.google .icon
        r-sprite          account 'ext-google'
      &.linkedin .icon
        r-sprite          account 'ext-linkedin'

      span
      cite
      a
        font-style        normal
        blockMid()

button.kdbutton.solid.green.account-header-button
  abs()
  top               6px
  right             0
  margin            0
  color             #666
  height            40px
  &.with-icon
    padding         0 6px
  &.icon-only
    padding         0 6px
  span.icon
    rel()
    display         block
    padding         0
    margin          0
    border          none
    visibility      visible
    r-sprite        app '30-refresh-icon-white'
    &.plus
      r-sprite      app '30-plus-icon-white'

.delete-account-view
  padding                 10px 0
  color                   #888
  borderBox()
  button.delete-account
    left                  0
    vendor                transition, left .1s ease-in\, \
                                      width .1s ease-in
    &.escape
      left                -160px

.referrer-modal
  line-height         1.8em
  p
    margin-bottom     15px
    &.center
      color           #999
      font-size       13px
      text-align      center
  .content .title
    margin-bottom     36px !important

  .share-url-input
    width           320px !important

  .share-url-label
    display         block
    font-weight     400
    font-size       12px

  .share-links
    size            140px 30px
    margin-top      -30px
    position        relative
    left            330px
    top             -13px

    .share-icon
      border        none
      size          30px 30px
      rounded       50%
      padding       0
      margin        0 0 0 8px
      background    none

      &.twitter
        r-sprite    "account", "inv-twitter"
      &.facebook
        r-sprite    "account", "inv-facebook"
      &.linkedin
        r-sprite    "account", "inv-linkedin"

  a.mail
    color           #606060
    font-weight     500
    position        relative
    line-height     40px

// FIX THESE STYLES FOR
// TOO MUCH REPITITION
// for .settings-list-wrapper - SY

.settings-list-wrapper
  height              auto
  min-height          50px

  header
    bg                color, rgba(0,0,0,.1)
    border-bottom     1px solid rgba(0,0,0,0.3)
    a.custom-link-view
      margin-left     15px
      text-decoration underline
      fl()
      span.title
        line-height   24px
        font-size     11px

  .no-item-found
    padding           10px 20px
    color             #888

  &.payment-methods
    .no-item-found
      padding         10px 0
      font-size       14px
      line-height     1.5

  &.ssh-keys
  &.koding-keys
  &.billing-history
  &.your-subscriptions
  &.referral-system
    .no-item-found
      font-size       14px
      line-height     1.5
      h2
        font-weight   400
        font-size     16px
        margin-bottom 20px
    a
      font-weight         300
      color               logoBg
      &:hover
        text-decoration   underline

    ul
      margin            0
      padding           0
      li
        list-style      none
        line-height     1.4
        borderBox()
        a
          margin-left   10px
          fr()
        .lightText
          color         rgba(255,255,255,.8)
        .darkText
          color         rgba(255,255,255,.5)

  &.your-subscriptions
    .kdlistitemview-subscription
      size              100%, auto
      padding           19px 22px
      background        #fff
      rounded           6px
      font-weight       400
      color             #6f6f6f
      margin            0 0 2px 0

      h4
        font-size       14px
        margin-bottom   4px

      p
        font-size       12px
        color           #c6c6c6
        min-height      20px

      .price
        display         block
        abs             0px 0px 0 0
        font-size       18px

      .controls
        abs             0 22px 19px 0

        .custom-link-view
          font-size     12px
          noTextDeco()

          &.red
            color       #ed492c

          &.green
            color       #01b05a

          &.yellow
            color       #eeb844




  &.referral-system
    header
      bg                  color transparent
      border              none
      margin-bottom       10px
      a.custom-link-view
        margin-left       0
        margin-right      20px
        span.title
          font-size       18px
          line-height     40px
    ul
      li
        a
          color           #999
          line-height     30px
          float           none
          margin-left     0
          noTextDeco()

  &.koding-keys
    li
      line-height     40px

  &.ssh-keys
    ul
      margin-top      70px

  &.billing-history
    table
      width           100%
      line-height     1.6
      margin-top      70px
    tr
      width           100%
      td
        width         20%
        &.ccard
          font-weight 600
      a.action-link
        display       table-cell
        text-align    right
        width         20%

  &.ssh-keys
    a.action-link
      abs()
      top             0px
      right           2px

.koding-keys
  code
    margin              10px 0
    display             block
    line-height         16px
    font-size           12px
    font-family         monoFamily
    padding             14px
    color               white
    bg                  color #28292A


.new-kdmodal.koding-keys
  p
    margin              10px 0
  strong
    font-weight         600
