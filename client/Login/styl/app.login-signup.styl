}

// swapping views for views
.kdview.login-screen
  background          #111617 url("../images/unsplash/15.jpg") no-repeat center center
  bg                  size, cover
  text-align          center
  position            fixed
  borderBox()
  &.shown
    top               0

  .flex-wrapper
    size             419px 281px
    margin           200px auto 0 auto
    rounded          5px
    bg               color #F4F4F4
    vendor           transition, height .1s ease-in-out\,\
                                 width  .4s ease-in-out\,\
                                 margin .4s ease-in-out
    rel()
  a
    noTextDeco()
    color               white
    font-size           14px
  i
    color               white
    font-size           10px
    font-style          normal
    margin              0 5px
    vertical-align      top
    line-height         19px


  footer
    fix()
    color               white
    margin-left         -210px
    size                419px auto
    bottom              0
    left                50%
    font-size           13px
    a
      color             #ddd
      span
        color           #aaa

  .login-form-holder
  .login-options-holder
  .back-to-login
  .regLink
  .recLink
  .logLink
  >section
    hidden()

  &.join
    .logLink
    .regLink
      visible()
    .flex-wrapper
      overflow            visible
      height              235px
      &.expanded
        width             400px
        height            310px
        p.request-thanks
          height          140px
          font-size       11px
          iframe
            margin-top    12px
          a:hover
            color         #ffb500
            text-decoration underline

    .rqf
      visible()
      >.kdview
        overflow          visible
      // .kdnotification.mini.register
      //   top               76px!important

  &.login
    // margin-top            -230px !important

    .lf
    .regLink
    .recLink
    .login-options-holder.log
      visible()

  &.register
    // margin-top            -300px !important

    .rf
    .logLink
    .login-options-holder.reg
      visible()
    .flex-wrapper
      height                353px
      &.taller
        height              470px

  &.redeem
    .rdf
      visible()
    .flex-wrapper
      height              193px
    .login-footer
      hidden()

  &.recover
    .rcf
    .logLink
      visible()
    .rcf > form
      margin-top          15px
    .flex-wrapper
      height              209px
    .rcf .kdnotification.mini.register
      top                 174px!important

  &.reset
    .rsf
    .logLink
      visible()
    .reset-link
      hidden()
    .flex-wrapper
      height              254px

  &.resendEmail
    .resend-confirmation-form
    .logLink
      visible()
    .resend-confirmation-form > form
      margin-top          15px
    .flex-wrapper
      height              198px

  .login-hint
    color                 #B4B3B3
    margin                0 auto 10px auto
    width                 78%
    font-size             11px

  .kdnotification.mini.register
    abs()
    top                   -1px !important
    padding               5px 10px

    .kdnotification-title
      font-size           10px
      line-height         10px
      padding             0
      color               #ccc

      img
        margin            0px 3px 0 0
        vertical-align    bottom
        size              12px, 11px

  .login-footer
    rel()
    size                  419px auto
    margin                0 auto
    padding               10px 0
    color                 white
    borderBox()
    .first-row
      margin-bottom       20px
    p
      line-height         24px
      font-size           12px
      color               rgba(255, 255, 255, .75)

.login-box-header
  rel()
  text-align              center
  overflow                visible
  height                  72px
  borderBox()
  .betatag
    text-indent           -9999px
    top                   -3px
    right                 -3px
    size                  64px,38px
    bg                    position,-400px -120px
    // sprite()
    abs()
    z-index               20002
  .logo
    font-size             0
    size                  110px 72px
    cursor                pointer
    rounded               0 0 5px 5px
    bg                    color, #111617
    blockMid()
    cite
      margin              19px auto 0 auto
      display             block
      sprite              app logo-login
  a.back-to-login
    font-size             11px
    abs()
    width                 100%
    bottom                10px
    left                  0
    noTextDeco()

.login-options-holder
  height                  72px
  overflow                visible
  margin-bottom           24px

  &.reg
    height                52px
    margin-top            22px

  &.log
    margin-bottom         34px


.login-options
  text-align    center
  margin        0

  li.koding
    bg(position,-440px -80px)
  li.github
    bg(position,-400px -40px)
  li
    // sprite()
    size          32px,32px
    border        1px solid rgba(0, 0, 0, 0.2)
    margin        0 5px
    shadow        inset 0 1px 0 rgba(0, 0, 0, 0.3), 0 1px 0 rgba(255, 255, 255, 0.2)
    rounded       5px
    text-indent   -9999px
    blockMid()
    &.active,
    &:hover
      shadow            0 0 9px rgba(255, 187, 4, 0.66)
      border            1px solid rgba(255, 187, 4, 0.56)
      cursor            pointer
    &:first-child
      margin-left       0
    &:last-child
      margin-right      0

.login-form-holder
  margin                  36px 0 25px 0
  padding-bottom          5px
  height                  auto

.login-form

  > section
  > div
    rel()
    text-align            center
    .kdview
      width               78%
      margin              0 auto 17px auto

      &.half-size
        display           inline-block
        width             38.5%
        &:first-child
          margin-right    1%

      &.validation-error
        .validation-icon
          bg              position, -80px -480px
          opacity         .3

      &.validation-passed
        .validation-icon
          bg              position, -80px -500px
          opacity         .5

  p
    size              78%, 0
    margin            0 auto
    color             #f2f2f2
    font-size         10px
    line-height       18px
    bg                color, rgba(0, 0, 0, 0.2)
    rounded           4px
    padding           0 6px
    text-shadow       0 1px 0 #111
    overflow          hidden
    vendor            transition, height .15s ease-out
    borderBox()

    h5
      font-size       12px
      font-weight     400
      margin          10px 0

  .password-confirm
    margin-bottom       0!important
    vendor              transition, height .15s ease-out

  input.kdinput.text
    text-align          center
    padding             11px 6px
    border              none
    color               #3E4F55
    font-size           18px
    box-shadow          none
    font-weight         300
    height              55px
    line-height         33px
    rounded             6px
    width               100%
    bg                  color, #BCC4C8
    borderBox()
    // &.validation-error
    //   bg                color,#ffe4bf

  input::-webkit-input-placeholder
    color               #666
  input:-moz-placeholder
    color               #666

  .validation-icon
    abs()
    right               5px
    top                 6px
    size                20px 20px
    bg                  position, -80px -480px
    // vendor              transition, opacity .15s ease-out
    opacity             0
    // sprite()

  .kdloader.input-loader
    abs()
    right               11px
    top                 11px
    z-index:            100

  .avatarview
    right               46px
    top                 72px
    rounded             0 6px 6px 0
    abs()
    fl()

  .invitation-field
    rel()
    text-align          left
    color               #B4B3B3
    margin              0 auto
    width               78%
    line-height         36px
    font-size           12px
    overflow            hidden
    border-bottom       1px solid rgba(255,255,255,.15)
    padding-bottom      4px
    margin-bottom       10px
    borderBox()

    .kdview.half-size
      abs()
      right             0
      top               0
      width             49.5%

    span.icon
      bg                position, -480px -80px
      size              40px, 20px
      margin            8px 0 0 2px
      fl()
      // sprite()
    .wrapper
      width             48.5%
      fr()

    .avatarview
      sta()
      border            1px solid #000
      margin            2px 10px 0 0
      padding           0
      shadow            inset 0 0 0 1px rgba(255,255,255,.3)
      fl()

    .profile
      max-width         100px
      display           block
      overflow          hidden
      height            36px
      text-overflow     ellipsis
      white-space       nowrap
      padding-right     5px

  button
    width               78%
    margin-top          5px
    padding             9px 0
    max-width           170px
    &.loading
      color             rgba(255,255,255,.8)
      &:hover
        shadow          0 1px 0 rgba(255,255,255,0.23)

p.login-tip
  line-height           16px
  color                 white

.kdnotification.login
  span
    size                43px, 43px
    bg                  position, -480px -120px
    display             inline-block
    margin-right        5px
    vertical-align      middle
    // sprite()

