  &:active
    bg                 color #36B298
    span.button-title
      color            white
  &:focus
    shadow             0 0 10px -2px #36b298

.kdbutton.solid.green
  bg                   color #36B298
  span.button-title
    color              white
  span.icon
    margin             18px 0 0 0
  &:hover
  &:active
  &:focus
    bg                 color #2DBEA1
    span.button-title
      color            white
  &:focus
    shadow             0 0 10px -2px #36b298


