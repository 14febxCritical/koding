.avatararea-popup
  height                    auto
  border                    none
  overflow                  visible
  top                       53px
  width                     280px
  z-index                   -1
  opacity                   0
  fix()
  &.active
    z-index                 1000
    opacity                 1

  .kdview.kdlistview
    margin                  0
  .tab
    cursor                  pointer
    border-bottom           none
    rel()
    top                     -54px
    text-align              center
    z-index                 1
    size                    55px 55px
    bg                      color,#212932
    span
      margin-top            22px
      size                  20px, 20px
      blockMid()
  .content
    margin-top              -55px
    shadow                  0 0 21px 10px rgba(0,0,0,0.18)
    size                    100%, auto
    bg                      color, #212932
    rounded                 0 0 5px 5px
    borderBox()

  &.notifications
    .content
      right                 225px

  &.notifications
    right                   69px
    .tab span
      margin                19px 0 0 3px
      sprite                app account-notifications

  &.group-switcher
    right                   54px
    width                   238px
    rounded                 0 0 5px 5px
    .tab
      hidden()
    .content
      margin-top            2px
      bg                    color, #212932
      color                 rgba(255, 255, 255, .8)
      shadow                none

    a.separator
      border-top           1px solid #3c4647

    .kdscrollview
      max-height            322px !important



    .avatararea-popup-list li a
    a.bottom
      display               block
      padding               10px 12px
      color                 white
      font-size             13px
      font-weight           300
      text-decoration       none
      &:hover
        text-decoration     underline
      span
        font-weight         300
        color               white

    .avatararea-popup-list
      li
        padding             0
        border-bottom       none
        a.fr
          abs()
          top               7px
          right             10px
        span.avatar
          border            1px solid #e3e3e3
          margin-right      10px
          size              20px, 20px
        .custom-link-view .icon.new-page
          bg                position, -180px -520px
          opacity           .2
        .custom-link-view .icon.dashboard-page
          bg                position, -180px -440px
          opacity           .2
        .buttons
          fr()
          button span.accept
            bg              position, -80px -500px
          button span.ignore
            bg              position, -80px -480px

  .sublink
    font-size             11px
    padding               7px 12px
    font-weight           400
    width                 auto
    text-align            center
    rounded               0 0 3px 3px
    bg                    color, #12171c
    &.top
      color               #8f98a1
      bg                  color, #212932
      border-top-width    0
      rounded             0
    span.icon
      top                 4px
      right               4px
      size                20px, 20px
      opacity             .5
      // sprite()
      abs()
      &.help
        bg                position, -140px -460px

  .sublink a
    color                 #8f98a1
    noTextDeco()

  .input-with-extras
    textarea
      font-size             12px !important
      color                 #5a5a5a !important


.avatararea-popup-list
  margin                    0

  li
    padding                 16px
    borderBox()

    &~li
      border-top            1px solid #323a41

    &.unread
      bg                    color, #2a3440

    .avatarview
      size                  45px 45px
      rounded               3px
      fl()

    p, time
      kalc                  width, 100% \- 56px
      fr()

    p
      font-size             12px
      color                 #8f98a1
      line-height           15px

      .link-group
        width               100%
        overflow            hidden
        text-overflow       ellipsis
        white-space         nowrap

        a
          font-weight       400
          font-size         14px
          display           inline
          color             #8f98a1
          noTextDeco()

    time
      font-size             10px
      color                 #5f6770

.go-back-survey
  a
    color #3aaaab
    noTextDeco()
