.avatararea-popup
  height                    auto
  border                    none
  overflow                  visible
  top                       59px
  z-index                   1000
  width                     280px
  visibility                hidden
  opacity                   0
  transition                opacity ease-out .2s, visibility ease-out .2s
  transform                 scale(0.01) skew(89deg) translate(100px,-100px)
  transform-origin          left top
  fix()
  &.active
    visibility              visible
    opacity                 1
    transform               scale(1) skew(0deg)
    transition-delay        0s

  .kdview.kdlistview
    margin                  0
  .tab
    cursor                  pointer
    border-bottom           none
    rel()
    top                     -59px
    text-align              center
    z-index                 1
    size                    45px, 60px
    bg                      color,white
    span
      margin-top            21px
      size                  20px, 20px
      blockMid()
  .content
    margin-top              -59px
    shadow                  0 0 21px 10px rgba(0,0,0,0.18)
    size                    100%, auto
    bg                      color, white
    rounded                 0 0 5px 5px
    borderBox()

  &.notifications
    right                   -8px
    .tab span
      margin-top            20px
      sprite                app account-notifications-active

  &.messages
    right                   42px
    .tab span
      sprite                app account-messages-active

  &.group-switcher
    right                   47px
    width                   180px
    rounded                 0 0 5px 5px
    .tab
      hidden()
    .content
      margin-top            2px
      bg                    color, #445053
      color                 rgba(255, 255, 255, .8)
      shadow                none

    a.logout
      border-top           1px solid #3c4647

    .avatararea-popup-list li a
    a.logout
      display               block
      padding               10px 12px
      color                 white
      font-size             13px
      font-weight           300
      text-decoration       none
      &:hover
        text-decoration     underline
      span
        font-weight         300
        color               white

    .avatararea-popup-list
      li
        padding             0
        border-bottom       none
        a.fr
          abs()
          top               7px
          right             10px
        span.avatar
          border            1px solid #e3e3e3
          margin-right      10px
          size              20px, 20px
        .custom-link-view .icon.new-page
          bg                position, -180px -520px
          opacity           .2
        .custom-link-view .icon.dashboard-page
          bg                position, -180px -440px
          opacity           .2
        .buttons
          fr()
          button span.accept
            bg              position, -80px -500px
          button span.ignore
            bg              position, -80px -480px

  .sublink
    border-top            1px solid #e0e0df
    font-size             11px
    padding               7px 12px
    font-weight           600
    width                 auto
    rounded               0 0 3px 3px
    // bg                    color,#f8f8f8
    gradient              #f8f8f8, #fff
    shadow                0 -1px 5px rgba(0,0,0,.1)
    &.top
      border-top-width    0
      border-bottom       1px solid #e0e0df
      bg                  color, #fff
      rounded             3px 3px 0 0
      shadow              0 1px 5px rgba(0,0,0,.1)
      gradient            #fff, #f8f8f8
    span.icon
      top                 4px
      right               4px
      size                20px, 20px
      opacity             .5
      // sprite()
      abs()
      &.help
        bg                position, -140px -460px

  .sublink a
    color                 #0991be
    text-decoration       none

  .input-with-extras
    textarea
      font-size             12px !important
      color                 #5a5a5a !important


.avatararea-popup-list
  margin              0
  li
    border-bottom       1px solid #e0e0df
    padding             8px 10px
    list-style          none
    font-size           11px
    line-height         15px
    color               #8e8e8e
    cursor              default
    borderBox()
    span.icon.notification-type
      abs()
      top               33px
      left              35px
      size              20px, 20px
      display           block
      z-index           1

      // sprite()
    &.comment
      span.icon
        bg              position, -80px -580px
    &.like
      span.icon
        bg              position, -80px -560px
    &.follow
      span.icon
        bg              position, -100px -580px
    &.reply
      span.icon
        bg              position, -140px -540px
    &.groupJoined, &.groupLeft
      span.icon
        bg              position, -60px -580px


    span.avatar
      border            1px solid #e3e3e3
      padding           1px
      margin-right      10px
      display           block
      bg                size, cover
      bg                position, center
      size              40px, 40px
      fl()
    &.unread
      background          rgba(250, 239, 223, .5)
      border-left         3px solid #ff9200
      padding             8px 10px 8px 7px
    p
      max-height          46px
      overflow            hidden
      color               #8e8e8e
      span.profile
        color             linkColor1
    a
      color               linkColor1
      text-decoration     none
      font-weight         600
      &:hover
        text-decoration   underline
      span
        color             linkColor1
    footer
      div
        color             #8e8e8e
      div > span
        color             #393939
        margin-top        0px
        font-size         10px
        // blockMid()
      time
        display           block
        // blockMid()
