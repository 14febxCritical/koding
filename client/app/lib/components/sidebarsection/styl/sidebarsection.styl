.SidebarSection-header
  position                  relative
  padding                   0
  margin-bottom             13px
  cursor                    pointer

  > .SidebarListItem-unreadCount
    top                     0
    margin-top              -2px

  a
    text-decoration         none

.SidebarSection-headerTitle
  font-weight               $fw-regular
  font-size                 $fs-small
  height                    16px
  line-height               16px
  color                     $gray-8
  word-spacing              0.2em
  text-transform            uppercase
  ellipsis()
  antialiased()

.SidebarSection-body
  padding-left              2px

.SidebarSection-secondaryLink
  abs                       50% 0px 0 0
  hidden()
  margin-top                -8px // icon height is 16px
  r-sprite                  app , 'plus-16'

.SidebarSection:hover
  .SidebarSection-secondaryLink
    visible()

.SidebarSection-header
  &.unread
    .SidebarSection-headerTitle
      max-width             190px

    .SidebarSection-secondaryLink
      hidden()
