}
.ContentModal
  font-family               SoleilFamily
  overflow                  hidden
  rounded                   6px
  border                    none

  &.kdmodal
    .kdmodal-inner
    .kdmodal-content
      margin                0px
      span
        a
          color             #F2778A

      .kdtabview
        overflow            hidden

    .kdmodal-inner .close-icon
      r-sprite              app content_modal_close_icon
      top                   24px
      right                 24px

    &.formline.button-field
      button.kdbutton
        height              60px
        border-top          1px solid #DEDBDB
        bg                  color #fff
        padding-top         20px
        text-align          center


    &.with-form
      main
        margin              0px 0px
        rel()

      .kdtabpaneview
        height              auto
        > form > div
          margin            20px

      form.form-view.with-fields
        > div
          margin            20px


      .kdtabpaneview
      .form-view.with-fields
        overflow            visible

        .formline.button-field
          display           flex
          justify-content   center
          padding           19px 0 18px
          background        #FFFFFF !important
          border-top        1px solid #ECEAEA !important


          .kdbutton
            margin-left     10px
            text-align      center
            min-width       127px
            height          42px
            font-size       14px
            text-transform  uppercase
            bg              color #F2778A
            padding         0 28px
            fontPrecisionForSoleil()

            &.cancel
            &.no
              margin-left   0px
              background    #FFFFFF
              border        1px solid #BEBEBE
              border-radius 4px
              span
                color       #5E5E5E

            span
              font-weight   400
              color         #FFFFFF


  &.add-managed-vm
    .kdmodal-content
      height                405px

  &.has-markdown
    h1
      padding               0

  &.content-modal
    header
      height                60px
      border-bottom         1px solid #ECEAEA
      bg                    color #fff
      text-align            center

      > h1
        color               #727272
        font-size           22px
        font-weight         300
        line-height         20px
        margin-top          20px
        display             inline-block
        letter-spacing      0px
        height              25px
        fontPrecisionForSoleil()
        ellipsis()
        max-width           450px
        span
        padding-left        10px
        vertical-align      super

        &.vagrant:before
        &.aws:before
          display           inline-block
          content           ' '

        &.vagrant:before
          r-sprite          stacks icon_vagrant
        &.aws:before
          r-sprite          stacks icon_aws

    main
      margin                40px 40px
      color                 #727272

      .kdtabpaneview
        overflow            visible
        height              300px

      h5
      h2
        font-size           16px
        letter-spacing      0.18px
        line-height         20px
        font-weight         300
        fontPrecisionForSoleil()
        text-align          center
        font-weight         400

      p
        width               auto
        font-size           14px
        font-weight         300
        line-height         27px
        letter-spacing      .2px
        fontPrecisionForSoleil()
        strong
          color             #F2778A

      p:empty
        display             none

      code
        background          #FFFFFF

      .code
        .select-all
          bg                color #F2778A

      section
        span
          margin-bottom     5px
          a
            color           #F2778A



    footer
      height                60px
      border-top            1px solid #ECEAEA
      bg                    color #fff
      padding-top           20px
      text-align            center

      rel()

      .kdbutton
        margin-left         10px
        text-align          center
        min-width           127px
        height              42px
        font-size           14px
        border-radius       4px
        text-transform      uppercase
        background          #F2778A
        fontPrecisionForSoleil()

        &.cancel
        &.no
          margin-left       0px
          background        #FFFFFF
          border            1px solid #BEBEBE
          span
            color           #5E5E5E
        span
          color             #FFFFFF

    section span
      width                 360px
      bottom                22px

    .kdloader
      top                   184px
      left                  144px
