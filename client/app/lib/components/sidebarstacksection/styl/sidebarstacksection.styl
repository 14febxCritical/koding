.SidebarTeamSection
  rel()
  margin-top                10px

  .SidebarStackSection 
    &.active
      h4
        color               #FFF

    .SidebarSection-body
      rel()
      left                  13px

      .SidebarMachinesListItem--MainLink
        width               208px
      
  .SidebarSection-headerTitle
    dBlock()
    width                   100%
    text-transform          capitalize
    noTextDeco()

    &:hover .SidebarSection-secondaryLink
      visible()

    .SidebarSection-secondaryLink
      top                   10px

    .SidebarSection-headerIcon
      rel()
      borderBox()
      dIBlock()
      top                   -2px
      border                2px solid rgba(255, 255, 255, .2)
      height                6px
      rounded               100%
      width                 6px
      margin-right          5px

  .SidebarSection
    margin-bottom           0

    .SidebarSection-header a
      cursor                default

  &:last-of-type
    margin-bottom           0
