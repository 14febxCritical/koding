}
.avatararea-popup
  font-family             adelleFamily
  bottom                  65px
  bg                      color, #F3F3F3
  z-index                 100
  display                 none
  rounded                 3px
  box-shadow              0 12px 19px rgba(0,0,0,0.5)
  borderBox()
  fix()

  &.active
    display               block

  .content
    width                 auto
    color                 #A0A0A0

    > a
      size                auto, 31px
      line-height         30px
      rounded             3px
      display             block
      color               #a0a0a0
      font-size           14px
      font-weight         400
      opacity             .99
      text-indent         9px
      noTextDeco()

      &:hover
        color             #444444
        bg                color, #E7E7E7

      &.support
        border-bottom     1px solid #E7E7E7

.avatararea-popup:after
  content                 ''
  display                 block
  width                   0
  height                  0
  border-left             6px solid transparent
  border-right            6px solid transparent
  border-top              7px solid #f3f3f3
  position                absolute
  bottom                  -7px

.group-switcher
  size                    190px, auto
  left                    105px

  .content
    padding               10px

  &:after
    left                  72px

.popup-notifications
  size                    auto, auto
  left                    210px

  &:after
    left                  19px

  .avatararea-popup-list
    > a
      padding             14px
      border-bottom       1px solid #E7E7E7
      borderBox()

      &:last-child
        border-bottom     none


.notification-list
  .no-item-found
    font-size     12px
    text-align    center
    padding       10px
    borderBox()

  .lazy-loader
    display       none

.notification-list .kdlistitemview
  display         block
  min-height      35px
  font-size       12px
  cursor          pointer
  line-height     12px
  color           #525252

  &:hover
    bg            color, #E7E7E7

  .right-overflow
    width         250px
    line-height   1.2em

  .avatar-wrapper
    margin-right  10px

  .link-group
    display       inline

  a.profile
    color         #1aaf5d
    font-weight   400
    noTextDeco()

  time
    color         #adaeb1
    font-size     10px
    font-weight   600
    opacity       .99

.go-back-survey
  a
    color #3aaaab
    noTextDeco()
