.shortcuts-modal

  &.kdmodal .kdmodal-inner
    .kdmodal-title
      margin-top 22px

      span.title
        font-size 22px !important

    .kdmodal-content
      overflow hidden

      div.instructions
        margin-bottom 15px
        font-size .97em
        color #333

      .kdtabpaneview
        background transparent !important

        .kdlistview
          display table
          width: 100% !important

          div.kdlistitemview
            display table-row
            width 100% !important
            clear both

            .col
              display table-column
              width 45%
              float left
              font-size 14px
              line-height 22px
              padding 4px 16px
              borderBox()

              > *
                display table-cell
                vertical-align middle

            .col:first-child
              width 10%
              text-align center

      .kdtabhandlecontainer
        background-color transparent !important
        border none
        margin 0 0 13px 0
        max-width 600px
        padding 0
        height 36px
        borderBox()
        shadow inset 0 -2px 0 #e0e0e0

        .kdtabhandle
          background-color transparent !important
          border none
          height 36px
          noTextDeco()
          fl()

          b
            display inline !important
            text-decoration none
            height 36px
            line-height 20px
            color #969696
            text-align left
            font-size 16px
            borderBox()

          &.active
            shadow inset 0 -2px 0 #01B05A
            background none

            b
              color #01B05A !important

        .kdtabhandle:first-child
          padding 0px 15px 0px 0px !important
