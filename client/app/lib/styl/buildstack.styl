.build-stack-modal.kdmodal
  font-family               SoleilFamily
  overflow                  hidden
  rounded                   6px
  border                    none
  width                     720px !important

  .kdmodal-inner,
  .kdmodal-inner .kdmodal-content
    margin                  0

  .kdmodal-inner .close-icon
    hidden()

  header
    height                  84px
    border-bottom           1px solid #DEDBDB
    bg                      color #fff
    text-align              center

    h1
      color                 #BABABA
      font-size             20px
      font-weight           300
      line-height           20px
      margin                31px 0
      display               inline-block
      fontPrecisionForSoleil()

  section.main
    height                  430px
    color                   #A59999
    borderBox()
    padding                 0 70px

    > h2
      color                 #585858
      margin                30px 0 12px
      font-size             20px
      font-weight           300
      fontPrecisionForSoleil()
      text-align            center

    > p
      text-align            center
      font-size             14px
      font-weight           300
      letter-spacing        .2px
      fontPrecisionForSoleil()
      text-align            center
      margin-bottom         25px

  footer
    height                  75px
    border-top              1px solid #DEDBDB
    bg                      color #fff
    rel()

    .GenericButton
      abs                   15px 26px
      text-transform        uppercase

    a.back-link
      abs()
      top                   24px
      left                  26px
      color                 #d9d9d9
      text-decoration       none !important

      .arrow:after
        content             "\2190"
        font-size           24px
        font-family         Helvetica,Arial,sans-serif
        color               #afafaf

  .GenericButton.secondary
    bg                      color, #fafafa
    color                   #729FCF
    border                  1px solid #dedbdb
    display                 block
    margin                  0 auto


  .wizard-progress-pane
    bg                      color, #f3f3f3
    border-bottom           1px solid #dedbdb
    text-align              center
    borderBox()
    padding                 0 70px

    .wizard-step
      display               inline-block
      borderBox()
      width                 33%
      height                50px
      font-size             14px
      padding-top           11px
      bg                    color, #fff
      color                 #d9d9d9

      &.current
        bg                  color, #74E4F4
        color               #fff

      &.completed
        bg                  color, #74E4F4
        color               #93a1a1
        border-right        1px solid #c7c7c7


  .readme-page

      .kdcustomscrollview
        max-height          250px
        bg                  color, #fff
        styleScrollBars     rgba(0, 0, 0, .15)
        rounded             5px

      .description
        padding             20px
        font-size           12px
        color               #333

      .GenericButton.secondary
        margin-top          25px


  .stack-template-page

    .editor-view
      height                250px

    .GenericButton.secondary
      margin-top            25px


  .credentials-page

    section.main

      > p
        margin-bottom       40px

    .form-scroll-wrapper
      width                 270px
      borderBox()

      &.credential-wrapper
        fl()

      &.requirements-wrapper
        fr()

      &.kdcustomscrollview
        styleScrollBars     rgba(0, 0, 0, .15)
        max-height          270px
        padding-right       15px !important

    .credential-only

      .credential-wrapper
        float               none
        margin              0 auto

        .top-header
          hidden()

      .requirements-wrapper
        hidden()

    h3
      font-weight           bold
      font-size             14px
      margin-bottom         10px

    .kdlabel
      display               block
      font-size             14px
      margin-bottom         2px
      float                 none
      color                 inherit

    .kdinput.text
      rounded               3px
      bg                    color, #fff
      border                1px solid #c9c9c9
      padding               5px 13px
      font-size             14px
      line-height           19px

    .validation-error
      border                1px solid #f13a18 !important

    div.kdselectbox
      span.title
        font-size           14px

    a.create-new
      color                 #729FCF
      text-decoration       none !important
      font-size             14px

      .plus
        font-size           16px

    a.cancel-new
      color                 #729FCF
      text-decoration       none !important
      font-size             14px
      float                 right
      font-weight           normal

    form
      clear                 both

      .advanced-field,
      .formline.button-field .save-btn.kdbutton,
      .formline.button-field .cancel-btn.kdbutton
        hidden()

      &.in-advanced-mode
        .advanced-field
          visible()

    .selection-container
      hidden()

      .kdselectbox
        width               100%
        borderBox()
        margin-bottom       15px

    .selection-visible
      .selection-container
        visible()

    .form-container
      hidden()

    .form-visible
      .form-container
        visible()

      .create-new
        hidden()

    .new-credential-header
      hidden()

    .selection-visible
      .new-credential-header
        visible()
