.build-stack-modal.kdmodal
  rounded                   5px
  width                     600px !important
  height                    600px !important

  .kdmodal-inner
    margin                  0

    .kdmodal-title
      color                 #aaa !important
      text-align            center
      height                60px

      .title
        font-size           18px !important
        padding-top         22px

  .build-stack-content
    bg                      color, #eee
    height                  450px
    color                   #999
    borderBox()
    padding                 0 50px

  .top-title
    text-align              center
    font-size               16px
    padding-top             20px
    padding-bottom          5px
    color                   #333

  .top-subtitle
    text-align              center
    font-size               12px
    color                   #999
    padding-bottom          25px

  .form-scroll-wrapper
    width                   240px
    borderBox()

    &.credential-wrapper
      fl()

    &.requirements-wrapper
      fr()

    &.kdcustomscrollview
      styleScrollBars       rgba(0, 0, 0, .15)
      max-height            340px
      padding-right         15px !important

  .credential-only

    .credential-wrapper
      float                 none
      margin                0 auto

      .main-form-header
        hidden()

    .requirements-wrapper
      hidden()

  .form-header
    color                   #999
    font-weight             bold
    font-size               14px
    margin-bottom           10px

  .kdlabel
    display                 block
    font-size               12px
    margin-bottom           2px
    float                   none
    color                   #999

  .kdinput.text
    rounded                 3px
    bg                      color, #fff
    border                  1px solid #c9c9c9
    padding                 5px 13px
    font-size               14px
    line-height             19px
    color                   #999

  .validation-error
    border                  1px solid #f13a18 !important

  .create-new
    color                   #729FCF
    text-decoration         none
    font-size               12px

    .plus
      font-size             16px

  .cancel-new
    color                   #729FCF
    text-decoration         none
    font-size               12px
    float                   right
    font-weight             normal

  form
    clear                   both

    .advanced-field,
    .formline.button-field .save-btn.kdbutton,
    .formline.button-field .cancel-btn.kdbutton
      hidden()

    &.in-advanced-mode
      .advanced-field
        visible()

  .selection-container
    hidden()

    .kdselectbox
      width                 100%
      borderBox()
      margin-bottom         15px

  .selection-visible
    .selection-container
      visible()

  .form-container
    hidden()

  .form-visible
    .form-container
      visible()

    .create-new
      hidden()

  .new-credential-header
    hidden()

  .selection-visible
    .new-credential-header
      visible()

  .build-stack-footer
    padding                 25px

    .build-btn
      fr()
      rounded               3px