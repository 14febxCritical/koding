.HomeApp-ApiToken
  rel()

.HomeApp-ApiToken--header
  border-bottom             1px solid #ebebeb
  margin-bottom             24px
  height                    60px
  .label
    color                   #818181
    font-size               16px
    letter-spacing          0.15px
    line-height             22px

  .description
    color                   #ACACAC
    font-size               14px
    letter-spacing          0.15px
    line-height             16px


.HomeApp-ApiToken--footer
  border-top                1px solid #ebebeb
  margin-top                20px

.HomeApp-ApiToken--footer--button-wrapper
  padding                   25px 0 6px 0
  .custom-link-view.HomeAppView--button.primary.disabled
    opacity                 0.5

.HomeApp-ApiToken--ListItem
  height                    44px
  borderizeListItems        20px, 1px solid #EBEBEB
  font-size                 15px
  rel()

.HomeApp-ApiToken--ListItem:first-of-type
  .HomeApp-ApiToken--custom-link-view.delete-api-token
      abs                   18px 0px 0 0

.HomeApp-ApiToken--swicth-toggle
  abs 8px 0px 0 0
  input.HomeApp-ApiToken--swicth-toggle
    display none

.HomeApp-ApiToken--api-token
  color                     #5F5F5F
  font-weight               400
  padding-top               4px
  line-height               22px
  text-rendering            geometricPrecision
  letter-spacing            0.15px

.HomeApp-ApiToken--api-token-detail
  color                     #ACACAC
  font-weight               300
  line-height               14px
  letter-spacing            0.14px
  text-rendering            geometricPrecision

.HomeApp-ApiToken--custom-link-view.delete-api-token
  color                     #769ECC
  abs                       38px 0px 0 0
  cursor                    pointer
  &:first
    abs                     18px 0px 0 0

.HomeApp-ApiToken
  .react-toggle:before
    top                     4px
    left                    -33px
    font-size               14px

.HomeApp-ApiToken--api-wrapper--disabled
  opacity 0.5
