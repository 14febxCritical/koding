@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"

@css {
/*
Home Page stylesheet
home.styl
*/
}

proximaFamily   = 'Proxima Nova', 'Helvetica Neue', Helvetica, Arial
openSansFamily  = 'Open Sans', 'Proxima Nova', 'Helvetica Neue', Helvetica, Arial
logoBg          = #1aaf5d
homeHeaderBg    = #e3e3e3
headerLinkColor = #3e4446
bgColor         = #202527
teamworkColor   = #f2c500
socialColor     = #2d97de

body.intro
  bg                    color, bgColor

#home-header
  margin                0
  size                  100% 65px
  z-index               1000
  overflow              visible
  visibility            visible
  shadow                0 3px 0 rgba(0, 0, 0, .15)
  rel()

  .inner-container
    bg                  color, homeHeaderBg
    size                100%, 65px
    vendor              transform, translateY(0)
    -webkit-transition  -webkit-transform .2s ease
    -moz-transition     -moz-transform .2s ease
    transition          transform .2s ease

  a.login
    font-size           14px
    line-height         25px
    margin              20px
    font-weight         400
    color               headerLinkColor
    noTextDeco()


  .logo
    margin              10px
    size                45px 45px
    bg                  color, logoBg
    fl()

    cite
      sprite            home 'logo'
      margin            14px
      display           block

#home-page
  height                auto
  main
    padding-top         70px
    background          url('/a/images/home/photo-1.jpg') no-repeat center center
    background-size     cover
    size                100% 630px
    border-bottom       3px solid logoBg

  h1, h2, h3
    text-align          center
    text-shadow         1px 1px 0 rgba(0, 0, 0, .6)
    font-weight         300

  h1
    font-family         proximaFamily
    color               logoBg
    font-size           36px
    line-height         60px
    font-weight         400

  h2
    font-family         openSansFamily
    color               white
    line-height         40px
    font-size           24px
    margin-bottom       60px

  h3
    color               #d2d2d2
    font-size           18px
    line-height         30px
    margin-top          40px
    a
    a:visited
      color             #d2d2d2
      noTextDeco()
      &:hover
        color           #fff

    span
      sprite            home 'right-arrow'
      display           inline-block
      margin            0 0 -3px 10px
    strong
      font-weight       500
      font-family       OpenSans

  form
    size                710px 55px
    margin              0 auto

    .kdinput
      border            1px solid #e6e6e6
      display           inline-block
      width             275px
      shadow            3px 3px 5px rgba(0, 0, 0, .31)
      text-align        center
      margin-right      15px

  figure.laptop
    background          url('/a/images/home/laptop.png') no-repeat center center
    background-size     cover
    size                1207px 739px
    margin              -260px auto 0
    overflow            hidden
    rel()

    section
      size              919px 588px
      margin            39px auto

      &.teamwork
        background      transparent url('/a/images/home/teamwork.jpg') no-repeat 0 0
        background-size cover

      span.marker
        rounded         26px
        display         block
        size            52px 52px
        left            60%
        top             10px
        bg              color rgba(26, 175, 93, .2)
        // shadow          0 0 2px 10px
        overflow        hidden
        border          2px solid logoBg
        cursor          pointer
        borderBox()
        abs()
        i
          rounded       13px
          display       block
          size          26px 26px
          margin        11px auto
          bg            color logoBg




#home-features
  max-width             984px
  margin                60px auto
  // padding-bottom        60px
  rel()

  > div
    width               33%
    rel()
    fl()

    span.icon
      size              100px, 100px
      bg                color, red
      margin-right      28px
      fl()

    article
      width             auto
      display           block
      overflow          hidden
      font-size         14px
      line-height       1.6
      color             #9e9e9e
      kalc              width, 100% \- 148px
      h4
        font-family     proximaFamily
        font-weight     300
        letter-spacing  1px
        font-size       22px
        line-height     1
        margin-bottom   10px

    &.appstore
      span.icon
        sprite          home 'appstore'
      h4
        color           logoBg

    &.teamwork
      span.icon
        sprite          home 'teamwork'
      h4
        color           teamworkColor

    &.social
      span.icon
        sprite          home 'social'
      h4
        color           socialColor


#home-groups

  bg                    color, homeHeaderBg
  padding               100px 0

  h2, h3
    text-shadow         none
    line-height         1

  h2
    font-family         proximaFamily
    color               logoBg
    font-size           38px
    margin-bottom       30px

  h3
    font-family         openSansFamily
    color               #686868
    font-size           24px
    margin-top          40px

  figure
    background          url('/a/images/home/group.jpg') no-repeat center center
    background-size     cover
    size                1053px 714px
    margin              80px auto
    overflow            hidden
    shadow              0 20px 50px rgba(0, 0, 0, .5)
    rel()


