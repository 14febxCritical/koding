section.testimonials
  margin-top           63px
  padding              63px 0 40px
  border-top           1px solid #e6e6e6

  h4.general-subtitle
    margin-bottom      76px

  article
    width              46%
    position           relative
    font-family        openSansFamily
    padding            2px 0 32px 69px
    margin-bottom      26px
    rounded            0 0 12px 12px
    borderBox()
    fl()

    &:nth-of-type(2n)
      fr()

    &:before
      content           ""
      display           block
      r-sprite          app quote
      opacity           .4
      abs               0px 0 0 0px

    p
      font-size         16px
      line-height       22px
      color             #6d6d6d
      font-size         16px
      font-weight       600
      padding           0 0 24px 19px
      margin            0 0 0 -19px
      border            1px solid #e2e2e2
      border-top        none
      rounded           0 0 12px 12px
      position          relative

      &:after
        content           ""
        display           block
        width             1px
        kalc              height, 100% \- 10px
        background        #fff
        abs               0px 0 0 -1px

      &:before
        content           ""
        display           block
        width             1px
        kalc              height, 100% \- 10px
        background        #fff
        abs               0px -1px 0 0

    .person
      font-size         13px
      color             #6d6d6d
      font-weight       600
      text-transform    uppercase
      display           block
      margin            23px 0 0 0
      position          relative

      &:before
        content           ""
        display           block
        size              0 0
        border            8px solid transparent
        border-top-color  #e2e2e2
        abs               -24px 0 0 26px

      &:after
        content           ""
        display           block
        size              0 0
        border            8px solid transparent
        border-top-color  #fff
        abs               -26px 0 0 26px

      img
        rounded         15px
        abs             -3px 0 0 19px

      span
        display         block
        margin-left     60px

      .title
        color           #a8a8a8
        font-size       10px
        margin-top      2px



@css {
/*
resurrection.commons.styl
FOOTER VIEW
*/
}


footer.main-footer
  padding               56px 0
  font-size             13px
  font-weight           400
  background            #2c3134

  .inner-container
    max-width             1290px
    padding               0px 45px
    margin                0 auto
    display               block
    position              relative
    borderBox()

  .footer-block
    width               25%
    borderBox()
    fl()

    a
      color              #b3b3b3
      display            inline
      noTextDeco()

    h5
      margin             0 0 6px 0
      color              #858585

  .about-koding
    h5
      font-weight        600
      color              #c5c5c5

    p
      padding-right      72px
      margin             2px 0 4px 0
      line-height        18px
      color              #838485
      borderBox()

    a
      color              #525658
      text-decoration    underline

  nav
    a
      line-height        22px

      &:after
        content         '\A'
        display         block
        white-space     pre
        line-height     0
        padding         0
        margin          0
        height          0

  cite
    display             block
    clear               both

  address
    clear                both
    display              block
    text-align           center
    margin               50px auto 0 auto
    padding              25px 0 0
    font-size            14px
    color                #b3b3b3
    position             relative

    &:before
      content           ""
      display           block
      size              80%, 1px
      background-image  -webkit-linear-gradient(left, rgba(59, 64, 67, 0) 0%, rgba(59, 64, 67, 1) 10%, rgba(59, 64, 67, 1) 90%, rgba(59, 64, 67, 0) 100%)
      abs               0px 0 0 50%
      vendor            transform, translateX(-50%)

  .social-links
    color               #838485
    display             block
    text-align          center
    margin              30px 0 0
    word-spacing        5px

    a
      color             #838485
      font-size         13px
      font-weight       400
      noTextDeco()



@media only screen and (min-width : 320px) and (max-width : 568px)
  footer.main-footer
    .footer-block
      width             100%
      float             none

      &~.footer-block
        margin-top      18px
        padding-top     18px
        border-top      1px solid rgba(255,255,255,.05)

      &.about-koding p
        padding         0
