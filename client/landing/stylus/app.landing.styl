@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"

#static-landing-page
  z-index                     99
  size                        100%, 100%
  top                         0
  bg image,                   url("../images/koding-new-bg.png");
  bg repeat,                  repeat-x
  vendor transition,          top .3s ease
  // shadow                     0 0 50px 20px rgba(0,0,0,0.4)
  overflow                    visible
  abs()
  // &.out
  //   opacity                 0
  &.down
    top                       -100%
    #group-splash-wrapper
      margin-top                0
      shadow                    0 0 20px rgba(0,0,0,0.4)

#landing-page-logo
  bottom              0
  right               20px
  size                40px,40px
  cursor              pointer
  bg                  position, -810px -10px
  sprite()
  abs()
  &:hover
    bg                position, -750px -10px

#group-splash-wrapper
  height                      0
  margin-top                  0
  bg                          color, rgba(0, 0, 0, .75)
  rel()

@keyframes swing-in
  0%
    margin-top                  0
    transform                   rotateX(-90deg)
    opacity                     1
  20%
    margin-top                  8px
  40%
    transform                   rotateX(40deg)
  70%
    transform                   rotateX(-25deg)
  85%
    transform                   rotateX(15deg)
  99.9%
    opacity                     1
  100%
    margin-top                  8px
    transform                   rotateX(0deg)
    opacity                     0

@keyframes swing-out
  0%
    margin-top                  8px
    opacity                     1
    transform                   rotateX(0deg)
  20%
    margin-top                  0
  99.9%
    opacity                     1
  100%
    margin-top                  0
    transform                   rotateX(-90deg)
    opacity                     0


#koding-landing-logo-wrapper
.group-logo-wrapper
  perspective           800px
  bottom                0
  right                 6px
  margin-bottom         -42px
  max-width             80%
  z-index               10
  display               inline-block
  height                42px
  abs()
  i
    top                 0
    display             block
    size                2px, 0
    z-index             0
    bg                  color, #999
    transition          height .1s ease-in
    abs()
    &:nth-child(2n+1)
      left              15px
    &:nth-child(2n)
      right             17px

#koding-landing-logo-wrapper
  height                32px
  margin-bottom         0px
  hidden()
  i
    height              0
    bottom              0

#koding-landing-logo
  margin-bottom         8px
  font-family           Ubuntu
  size                  auto, 30px
  padding               2px
  font-size             20px
  overflow              visible
  color                 rgba(255, 255, 255, .5)
  gradient              #302D27, #332F2A
  shadow                0 0 5px rgba(0, 0, 0, 0.5)
  transition            top .3s ease-in\,\
                        margin-top .1s ease-out
  vendor                transform-origin-x, 0
  vendor                transform-origin-y, 0
  transform             translateX(0px)\
                        translateY(0px)\
                        translateZ(0px)\
                        rotateX(0deg)\
                        rotateY(0deg)\
                        rotateZ(0deg)
  shadow                0 0 5px rgba(0, 0, 0, 0.5)\,\
                        inset 0 0 2px 5px rgba(255, 255, 255, 0.1)
  z-index               1
  rel()

h3#group-logo
  font-family           Ubuntu
  size                  auto, 30px
  padding               2px
  font-size             20px
  overflow              visible
  color                 rgba(255, 255, 255, .5)
  gradient              #d64b4b, #ab2c2c
  shadow                0 0 5px rgba(0, 0, 0, 0.5)
  rel()
  vendor                transform-origin-x, 0
  vendor                transform-origin-y, 0
  transition            top .3s ease-in\,\
                        margin-top .1s ease-out
  transform             translateX(0px)\
                        translateY(0px)\
                        translateZ(0px)\
                        rotateX(-110deg)\
                        rotateY(0deg)\
                        rotateZ(0deg)
  shadow                0 0 5px rgba(0, 0, 0, 0.5)\,\
                        inset 0 0 2px 5px rgba(255, 255, 255, 0.1)

.group-logo-wrapper
  opacity                       .2
  h3#group-logo
    animation-iteration-count   1
    animation-timing-function   ease
    span
      opacity                   0

.group-logo-wrapper.swing-in
.group-logo-wrapper.swing-out
  opacity                       1
  h3#group-logo
    span
      opacity                   1

.group-logo-wrapper.swing-in
  h3#group-logo
    margin-top                  8px
    animation-name              swing-in
    animation-duration          1.2s
    transform                   rotateX(0deg)
  i
    height                      8px
.group-logo-wrapper.swing-out
  h3#group-logo
    margin-top                  0
    animation-name              swing-out
    animation-duration          .3s
    transform                   rotateX(-180deg)
  i
    height                      0

#koding-landing-logo
h3#group-logo
  cursor                pointer
  span
    border              1px dashed rgba(0, 0, 0, 0.2)
    color               white
    text-shadow         #541313 0 1px 0
    font-weight         400
    display             block
    size                100%, 100%
    line-height         26px
    padding             0 20px
    noTextDeco()
    borderBox()