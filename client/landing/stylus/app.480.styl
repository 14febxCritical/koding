@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

@media only screen and (max-width: 768px)
  html, body
    min-width         600px

  #content-panel.social
    left              50px !important
    .content-area-pane.activity
      #content-page-activity.fixed
        .activity-content
          margin-left 0

  .member-item
    footer
      button
        margin-bottom 10px
      .followers
        margin-bottom 10px!important

  .comingsoon
    padding           30px 30px

    img
      margin-bottom   14px
      width           60px
      height          auto
    h1
      font-size       24px
      font-weight     700
      margin-bottom   3px
    h2
      font-weight     400
      margin-bottom   15px
      padding-bottom  17px
      font-size       16px
    p
      font-size       12px
      color           #666

  .content-area-pane.activity
    .common-inner-nav
      hidden()

  .kdview.login-screen.home
    .flex-wrapper
      margin-bottom       20px

    .reviews
      hr
        margin            20px auto
      p
        font-size         20px
        margin            10px 0 5px 0
        line-height       30px
      span
        font-size         12px

    div.screenshots
      height              460px




