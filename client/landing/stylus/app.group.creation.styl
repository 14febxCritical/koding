@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"

@css {
/*
Group Creation Modal Styles
*/
}

.group-creation-modal
  .kdmodal-inner .kdmodal-title span.title
    font-size                   18px
    b
      text-transform            lowercase
      font-weight               300
      font-size                 14px
  .kdmodal-content
    overflow                    auto
  // .kdview.formline.type.group-type
  //   border-bottom               none
  .kdformview.with-fields
    border-bottom               1px solid #f2f2f2
  .formline.heading
    border-bottom               none
    padding-bottom              0
    .input-wrapper
      overflow                  visible
  h2.heading
    font-weight                 normal
    font-size                   14px
    line-height                 20px
    padding                     4px
    color                       #222
    > span
      display                   inline-block
      size                      40px, 20px
      margin-left               -25px
      // rounded                   10px
      // bg                        color, #0896bd
      // shadow                    0 1px 2px rgba(0, 0, 0, .75)
      gradient                  #0896bd, #0386bd
      text-shadow               0 -1px 0 #184175
      margin-right              3px
      padding-right             5px
      color                     white
      text-align                right

  .radiogroup.group-type
    padding                     20px
    margin                      0
    text-align                  justify
    borderBox()
    .kd-radio-holder
      padding                   8px
      display                   inline-block
      text-align                center
      rounded                   12px
      margin-left               20px
      gradient                  #f8f8f8, #f2f2f2
      shadow                    0 1px 3px rgba(0, 0, 0, .3)
      > div
        size                    120px, 120px
        overflow                hidden
        cursor                  pointer
        shadow                  0 0 0 4px rgba(255, 255, 255, .5)
        gradient                #f8f8f8, #f2f2f2
        rounded                 6px
        borderBox()
        rel()
      &:first-child
        margin-left             0
      span
        display                 block
        font-size               12px
        line-height             28px
        text-shadow             0 -1px 0 #fff
      .icon
        text-indent             -10000px
        size                    60px, 60px
        opacity                 .4
        margin                  20px 30px 0
        display                 block
        bg                      color, pink
        bg                      position, -400px -620px
        sprite()

      &:hover > div
        gradient                #fafafa, #f8f8f8

      &.company .icon
        bg                      position, -400px -680px
      &.project .icon
        bg                      position, -400px -740px
      &.custom .icon
        bg                      position, -400px -800px

      &.active
        gradient                rgba(255,146,0,0.6), rgb(255,146,0)
        > div
          shadow                inset 0 1px 3px rgba(0, 0, 0, .3)
        .icon
          bg                    position, -460px -620px
          opacity               .9
        &.company .icon
          bg                    position, -460px -680px
        &.project .icon
          bg                    position, -460px -740px
        &.custom .icon
          bg                    position, -460px -800px

  .formline.host-type
    border-bottom               none
    padding-bottom              0
  .formline.desc
    section
      line-height               32px
      font-size                 20px
      padding                   0 20px
      font-weight               300
      overflow                  hidden
      > p
        text-align              center
        margin-right            20px
        rel()
        fl()
        > span
          font-size               60px
          line-height             90px
          font-weight             400
          font-family             UbuntuMono
          text-shadow             0 -1px 0 rgba(0,0,0,0.5)
          text-rendering          geometricPrecision
          color                   #888
        > i
        > cite
          abs()
          width                   100%
          top                     0
          left                    0
          text-transform          uppercase
          font-size               10px
          font-style              normal
          font-weight             600
          color                   #aaa
        > cite
          top                     68px
  .radiogroup.host-type
    padding                     10px 20px
    margin                      0
    text-align                  justify
    borderBox()
    .kd-radio-holder
      padding                   8px
      display                   inline-block
      text-align                center
      rounded                   12px
      margin-left               20px
      gradient                  #f8f8f8, #f2f2f2
      shadow                    0 1px 3px rgba(0, 0, 0, .3)
      > div
        size                    88px, 96px
        overflow                hidden
        cursor                  pointer
        shadow                  0 0 0 4px rgba(255, 255, 255, .5)
        gradient                #f8f8f8, #f2f2f2
        rounded                 6px
        borderBox()
        rel()
      &:first-child
        margin-left             0
      span
        display                 inline-block
        font-size               20px
        line-height             20px
        text-shadow             0 1px 0 #fff
        border                  2px solid rgba(0, 0, 0, .4)
        padding                 2px 8px
        margin-top              10px
        min-width               34px
        text-transform          uppercase
        bg                      color, rgba(0, 0, 0, .05)
        rounded                 4px
        shadow                  0 1px 0 #fff
      .icon
        margin                  10px auto
        display                 block
        font-style              normal
        height                  30px
        color                   #aaa
        > b
          font-size             3em
          color                 #888

      &:hover > div
        gradient                #fafafa, #f8f8f8

      &.active
        gradient                rgba(255,146,0,0.6), rgb(255,146,0)
        > div
          shadow                inset 0 1px 3px rgba(0, 0, 0, .3)
          .icon > b
            color               linkColor1



  .kdformview.general-settings
    > .formline
      width                   100%
      overflow                auto
      padding                 15px 0 15px 18px
      borderBox()
      .input-wrapper
        margin-right          10px
      label.kdlabel
        min-width             120px
        color                 #444
        font-size             14px
      textarea
        min-height            60px
      &.Slug
        border                none
        position              absolute
        top                   1px
        right                 1px
        z-index               1
        text-align            right
        width                 auto
        display               inline-block
        label
          hidden()
        .input-wrapper
          max-width           250px
          line-height         22px
          padding             0 20px
          color               white
          gradient            rgb(228, 130, 0), #ff9200
          rounded             0 4px 4px 0
          font-size           11px
          font-weight         300
          border-left         1px solid #d7d7d7
          > div
            overflow          ellipsis

      &.privacy
        .kdselectbox
          fr()
          &.visibility
            margin-right      5px
        .input-wrapper
          overflow              visible

  div.vm-settings
    .kdselectbox
      fr()