@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib/gradients"
@import "nib/vendor"


@css {
/*
Wordpress-Installer styles
*/
}
wpUrl = 'http://sinan.koding.com/wp/'
.wordpress-installer
  header
    size                    100%, 250px
    background              transparent url(wpUrl + '/wpbg.png') repeat 0 0
    shadow                  inset 0 0 30px rgba(0,0,0,.33)
    overflow                hidden
    figure
      size                  250px, 250px
      background            transparent url(wpUrl + '/wp1.png') no-repeat 0 0
      margin                0 auto
      opacity               .4
      fl()
    article
      overflow              hidden
      margin                0 0 15px 0
      h3
        font-size           32px
        line-height         60px
        font-weight         300
        margin-top          60px
      p
        font-size           13px
        font-weight         300px
        line-height         22px


  .wp-installer-tabs
    background              #ffffff /* Old browsers */
    background              -moz-radial-gradient(center, ellipse cover,  #ffffff 0%, #d9d9d9 100%) /* FF3.6+ */
    background              -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,#d9d9d9)) /* Chrome,Safari4+ */
    background              -webkit-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* Chrome10+,Safari5.1+ */
    background              -o-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* Opera 12+ */
    background              -ms-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* IE10+ */
    background              radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* W3C */
    box-shadow              inset 0 0 2px rgba(0,0,0,0.25)

    .kdtabhandlecontainer
      padding-top           0
      background            linear-gradient(top, #555 0%,#666 93.7%)
      height                30px
      padding               0
      shadow                inset 0 2px 5px rgba(0,0,0,.1)
      borderBox()
      .kdtabhandle
        text-align          center
        border-width        0
        width               50%
        height              29px
        line-height         29px
        color               #ddd
        font-size           12px
        padding             0
        rounded             0
        borderBox()
        b
          margin-right      0
        &.active
          height            29px
          background        linear-gradient(top, #ffaf43 0%,linkColor1 100%)
          color             #fff
          text-shadow       0 -1px 0 rgba(0,0,0,.05)
          shadow            inset 0 2px 2px -2px rgba(0,0,0,0.40)

  .kdsplitview-resizer
    bg                      color, transparent

  .kdlistview-wp-blog
    .kdlistitemview.kdlistitemview-wp-blog
      line-height           40px
      padding               0 20px
      border-bottom         1px solid rgba(0,0,0,.05)
      shadow                0 1px 0 white
      bg                    color, rgba(255, 173, 0, 0.36)
      vendor                transition, background-color .6s ease-in-out
      borderBox()
      &.in
        bg                  color, transparent
      &:hover
        a.delete-link
          vendor            transition, opacity .15s linear
          opacity           .8

      a
        color               #444
        fl()
      time
        margin-left         20px
        font-size           11px
        color               rgba(0,0,0,.3)
        fr()
      a.delete-link
        position            absolute
        left                0
        margin              11px 0 0 0
        opacity             0
        bg                  position, -80px -520px
        size                20px,20px
        sprite()

  .kdformview
    .kdview.formline
      label
      .kdinput
        height              28px
        line-height         28px
      label
        min-width           30%
        text-shadow         0 1px 0 white
        color               #444
        margin              0
      .kdinput
        min-width           70%
        display             inline-block
        float               none
        padding             4px 8px
        height              28px
        &.on-off
          padding           0
          borderBox()
          >span
            hidden()
    .button-field
      bg                    color, transparent
      .kdbutton
        margin-left         30%


  .why-u-no
    font-size               24px
    line-height             48px
    font-weight             300
    margin                  40px 0
    text-align              center




