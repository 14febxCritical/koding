@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

@css {
/*
Environments stylesheet
app.environments.styl
*/
}

.kdaccview
  margin-top    10px

.kdaccpaneview
  height    auto
  border    1px solid #ddd

.kdaccpaneviewheader
  background    #eee
  cursor        pointer
  padding       5px

.kdaccpaneviewcontent
  padding    10px

.split-border
  border-right    4px solid #ddd

.environments.content-area-pane
  .application-page
    padding            0

.environment-content
  border-left          1px solid #ddd
  padding-left         10px
  padding-top          10px

  .domain-list
    .selected
      bg               color, #eee

    .domain-item
      cursor           pointer
      height           35px
      width            100%
      margin           1px

      .domain-icon
        top            6px
        left           7px
        width          30px
        height         30px
        abs()

      .link
        sprite()
        bg position,   -626px -565px

      .domain-title
        font-weight    bold
        color          #ff9600
        top            10px
        left           50px
        abs()

  .domain-vm-item
    margin-bottom     10px
    padding           5px

    .vm-name
      font-weight    bold
      color          #fe9600
      left           35px
      abs()

    .on-off
      left      35px
      bottom    3px
      abs()


    .vm-icon
      top            1px
      left           0px
      width          30px
      height         30px
      abs()

    .personal
      sprite()
      bg position,   -360px -390px



  .vm-list
    border-right       1px solid #ddd
    padding-right      10px
    height             100%

    .selected
      bg               color, #eee

    .vm-item
      cursor           pointer
      height           50px
      width            100%
      margin           1px

      .vm-icon
        top            10px
        left           7px
        width          30px
        height         30px
        abs()

      .shared
        sprite()
        bg position,   -360px -300px

      .personal
        sprite()
        bg position,   -360px -390px

      .vm-title
        font-weight    bold
        color          #ff9600
        top            10px
        left           50px
        abs()

      .vm-domain
        font-size      10px
        color          #888
        top            26px
        left           50px
        abs()

      .vm-status
        left           35px
        top            35px
        width          5px
        height         5px
        abs()

      .vm-status
        bg             color, #B40404
      .vm-status-on
        bg             color, #04B404

      .on-off
        top            15px
        right          3px
        abs()

  .vm-details

    padding            10px

  .domain-vm-item
    padding          5px
    height           40px
    margin-bottom    5px

  .routing-view
    padding    10px

  .domain-mapper-view
    margin-top    10px
  
  .domain-mapper-view

    .listview-wrapper
      margin-top     10px

  .fw-li-view
    padding    5px
    height     40px
    color      #fff
    width      95px
    border     1px solid #eee
    text-align center
    float      left
    margin     5px

    .personal
      sprite()
      bg position,   -360px -390px


  .block-list-view
    margin-top    10px

    h3
      line-height    25px

    .fw-li-view
      background-color    #a90329; // Old browsers
      @include filter-gradient(#a90329, #6d0019, vertical); // IE6-8
      $experimental-support-for-svg: true
      @include background-image(linear-gradient(top, #a90329 0%,#8f0222 44%,#6d0019 100%))

  .white-list-view 
    margin-top    10px

    h3
      line-height    25px

    .fw-li-view
      background-color    #cdeb8e; // Old browsers
      @include filter-gradient(#cdeb8e, #a5c956, vertical) // IE6-8
      $experimental-support-for-svg    true
      @include background-image(linear-gradient(top, #cdeb8e 0%,#a5c956 100%))
      color    #000
      border   1px solid #ccc

  .rule-form-view
    margin-top    5px

  .input-wrapper
    margin-right     5px