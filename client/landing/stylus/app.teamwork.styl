@import "./kdfn"
@import "./client/stylus/appfn"

@css {
/*
COMMONS stylesheet
app.teamwork.styl
*/
}

.teamwork
  .user-list-container
    .inner-header
      .title
        text-indent             10px
  .inner-header
    .title
      text-indent               0
    .icon
      background                url(/images/teamwork/icon.128.png) 3px -2px no-repeat
      background-size           37px 37px
      size                      37px 37px
      fl()
  .finder-pane
    .file-container
      vendor                    box-shadow, -3px 0px 3px rgba(0,0,0,0.2) inset
    .client-finder-pane
      vendor                    box-shadow, -3px 0px 3px rgba(0,0,0,0.2) inset
    &.file-container
      .no-vm-found-widget
        display                 none
  .kdsplitview-resizer.vertical
    display                     none

.teamwork-loader
  size                          204px, 324px
  left                          50%
  position                      relative
  margin                        -162px 0 0 -102px
  top                           50%

.powered-by-firepad
  display                       none

.teamwork-modal-header
  height                        33px
  bg                            color, #eee
  border-bottom                 1px solid #dcdcdc
  .header
    size                        299px, 33px
    border-right                1px solid #dcdcdc
    line-height                 33px
    text-indent                 20px
    fl()
    .text
      font-size                 14px
      font-family               "Open Sans"
      color                     #474747
    &.full-width
      width                     100%
      border-top                1px solid #dcdcdc
    &:last-child
      border-right              none

.teamwork-modal-content
  width                         259px
  fl()
  border-right                  1px solid #dcdcdc
  padding                       20px
  shadow                        inset 0 0 0 1px #FFF
  position                      relative
  .teamwork-modal-content
    &:hover span, &:hover p
      color                     #444
  &.full-width
    width                       100%
    padding                     0
    p
      margin-bottom             10px
  &:last-child
    border-right                none
  .export-file-tree
    abs()
    top                         -193px
    left                        20px
    size                        248px, 0
    background                  #eee
    vendor                      transition, height .1s ease-in-out
    shadow                      0 0 5px rgba(0, 0, 0, .3)
    &.active
      border                    1px solid #bbb
      padding                   5px
      height                    358px
  .share-section
    .title
      font-size                 12px
      margin-bottom             5px
      color                     #8d8d8d
      line-height               12px
    p
      font-size                 11px
      color                     #8d8d8d
      line-height               14px
  p
    line-height                 14px
    color                       #bbb
    cursor                      default
  .invite .text, .join .text
    margin-bottom               10px
  .teamwork-modal-input
    width                       238px
    height                      38px !important
    font-size                   10px
    color                       #888
    border-color                #dcdcdc
    text-shadow                 0 1px 0 #FFF
    gradient                    rgba(237,237,237,1), rgba(250,250,250,1), !important
    text-indent                 5px
    border                      1px solid #888 !important
    &.session-key
      background                none !important
      border                    none
      font-size                 20px
      font-weight               600
      color                     #f18025
      text-indent               0
      padding-left              0
      border                    1px solid #eee
      text-align                center
  .cancel
    line-height                 40px
    color                       #8d8d8d
    pointer()
  .kdbutton
    size                        260px, 38px
    line-height                 28px
    color                       #8d8d8d
    font-size                   12px
    font-weight                 normal
    text-shadow                 0 1px 0 #fff !important
    text-align                  left
    gradient                    #f5f5f5, #e3e3e3, !important
    shadow                      inset 0 0 0 1px #fff
    &:hover
      gradient                  #f5f5f5, #e3e3e3, !important
      opacity                   0.82
    &:active
      shadow                    inset 0 0 5px 0px #aaa , 0 1px 0 0 #eee !important
    &:first-child
      margin-right              30px
  .exporter
    width                       247px

.teamwork-tools-modal
  .kdmodal-content
    gradient                    #f3f3f3, #fff
    overflow-x                  hidden !important

.teamwork-modal-contents
  overflow                      hidden
  &.top-content
    .teamwork-modal-content
      height                    105px
      &:hover span, &:hover p
        color                   #444

.tw-fb-revoke
  width                         560px
  p
    span
      display                   inline-block
      width                     100px
  .initial
    display                     inline-block
    color                       #bbb
    margin-bottom               10px

.teamwork-export-dialog .kdformview .kdlabel:first-child,
.teamwork-export-dialog .kdformview .kdinput,
  display                       none !important

.teamwork .inner-header .help
  display                       none
  &.opacity
    opacity                     .0001
    display                     block

.teamwork-url-share-input
  font-size                     16px
  border                        none !important
  width                         390px
  margin                        10px

.teamwork-markdown.has-markdown
  &.scale
    vendor                      transform, scale(0.03)
    -webkit-transition          -webkit-transform 0.3s ease, top 0.3s ease, left 0.3s ease
    -moz-transition             -moz-transform    0.3s ease, top 0.3s ease, left 0.3s ease
    transition                  transform         0.3s ease, top 0.3s ease, left 0.3s ease

  .kdmodal-content
    padding                     10px
    font-size                   14px !important
  img
    display                     inline !important
  a
    border-bottom               none
  h1, h2
    border-bottom               1px solid #eee
    margin                      20px 0 15px
  h1
    font-size                   30px
    &:first-child
      margin-top                10px
  h2
    font-size                   24px

.tw-environments-wrapper
  margin                        20px 0 0 20px

.flip-container
  vendor                        perspective, 1000
  overflow                      visible
  margin                        0 20px 20px 0
  size                          240px, 160px
  pointer()
  fl()
  &:hover
    .flipper
      vendor                    transform, rotateY(180deg)
  .flipper
    vendor                      transition, .6s
    vendor                      transform-style, preserve-3d
    position                    relative
  .front, .back
    vendor                      backface-visibility, hidden
    top                         0
    left                        0
    abs()
    size                        240px, 160px
  .front
    z-index                     200
  .back
    z-index                     199
    vendor                      transform, rotateY(180deg)
    padding                     20px
    border                      1px solid #a9a9a9
    box-sizing                  border-box
    rounded                     3px
    p
      font-size                 22px
      color                     #4B4848
      margin-bottom             10px
    span
      font-size                 13px
      line-height               14px
      color                     #646464

.kdbuttonwithmenu-wrapper.playgrounds-button
  margin                        7px 10px 0 0
  fr()

.tw-python .front
  bg                            image, url("../images/teamwork/environments/python.jpg")
.tw-ruby .front
  bg                            image, url("../images/teamwork/environments/ruby.jpg")
.tw-mongodb .front
  bg                            image, url("../images/teamwork/environments/mongodb.jpg")
.tw-html5 .front
  bg                            image, url("../images/teamwork/environments/html5.jpg")
.tw-facebook .front
  bg                            image, url("../images/teamwork/environments/facebook.jpg")
.tw-nodejs .front
  bg                            image, url("../images/teamwork/environments/nodejs.jpg")

.workspace.Facebook
  .user-list-container
    .inner-header
      border                    none
    .title
      top                       2px !important
      left                      0 !important
  .inner-header
    border                      1px solid #3B5998
    .icon
      bg                        image, none
    .title
      size                      75px 17px
      top                       10px
      left                      10px
      position                  relative
  .users
    left                        -68px
  .kdbuttonwithmenu-wrapper
    fr()
    margin                      7px 10px 0 0
    left                        56px
  .help
    display                     block
    left                        -67px

.tw-modal-image
  size                          663px, 210px
  left                          10px
  position                      relative
.tw-modal-line
  padding                       11px 0
  font-size                     13px
.appcanvasurl
  padding-top                   0 !important
  border-bottom                 none !important
.canvasurltext
  padding                       0 20px !important
  border-bottom                 none !important
.formline.image
  border-bottom                 none !important
.formline.appid
  border-bottom                 none !important
  padding                       0 20px !important
.tw-modal-image.step-general
  left                          0

.workspace.go-lang
  .inner-header
    .title
      background                none !important
    .icon
      bg                        image, url("/images/teamwork/golang/logo.png")
      bg                        size, 30px 30px
      top                       4px
      position                  relative

.tw-before-starting-modal .kdscrollview
  overflow                      auto !important

.workspace-chat .dock .toggle
  &:before
    content                     "x" !important
    font-size                   14px
    top                         0

.tw-previewer-button
  position              absolute
  top                   12px
  rounded               2px !important
  right                 30px
  padding               2px 4px !important
  height                15px
  line-height           9px
  font-size             9px !important
  text-transform        uppercase
  color                 #666 !important
  text-shadow           0 1px 0 #FFF !important
.tw-live-update
  position              absolute
  top                   11px
  right                 120px
  span
    font-size           11px

.broadcasting
  .tw-user-avatars
    margin-top          -19px

.tw-user-avatars
  float                 right
  overflow              hidden
  .avatarview
    float               left
    margin              5px 5px 5px 0
    vendor              transition, opacity .6s ease-in-out
    &.fade-out
      opacity           0
