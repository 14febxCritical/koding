  h4
    font-size           16px
    font-weight         600
    margin-bottom       10px
  p
    font-size           11px
  .tw-play-button
    size                189px, 35px
    line-height         35px
    text-align          center
    font-weight         600
    font-size           16px
    color               #FFF
    bg                  color, #F27935
    border              none
    .icon
      bg                image, url("../images/teamwork/sprite.png") !important
      bg                position, -110px -128px !important
      top               6px
      left              57px
    .button-title
      left              -7px
