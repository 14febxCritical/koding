@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"


#static-landing-page
  &.group-leaving
    rel()
  &.group-shrinking
    height              0
  &.group-fading
    opacity             0
  &.group-hidden
    z-index             1
    display             none

  #main-loader > span
    margin              20px 0px 20px 60px

.group-header
  width                 100%
  height                51px
  display               none

.group-personal-wrapper
  height                100%
  width                 160px
  fl()

.group-avatar
  vendor background-size, 160px auto
  shadow                  inset 0 0 13px 0 rgba(0,0,0,0.6)
  vendor transition,      margin-left 0.6s ease-in-out\,height 0.5s linear
  height                  120px
  width                   160px
  background-position     center center
  background-repeat       no-repeat


.group-avatar-drop
  abs()
  size                  60px, 60px
  left                  48px
  bottom                66px
  opacity               .4
  padding               0
  border                1px solid rgba(0,0,0,0.5)
  rounded               60px
  background            rgba(0,0,0,0.25)
  shadow                0 2px 6px rgba(0,0,0,0.5),inset 0 8px rgba(255,255,255,0.1),inset 0 0px rgba(255,255,255,0.2),inset 0 11px 28px rgba(255,255,255,0.25),inset 0 -15px 30px rgba(0,0,0,0.3);
  vendor transition,    opacity 0.4s ease-in-out
  background-position   15px
  background-size       30px
  background-repeat     no-repeat
  &:hover
    opacity             1

#landing-page-avatar-drop
  position              fixed
  background-image      url('/images/logos/50.png')


.group-buttons
  min-height                27px
  border-top            1px solid #403d37
  width                 100%
  bg color,             rgba(0,0,0,0.2)
  padding 0 5px 5px 0
  borderBox()


.group-title
  borderBox()
  rel()
  bg                    color, white
  height                77px
  height                120px
  width                 auto
  // border-bottom         1px solid rgb(229,229,229)
  // shadow                inset 0 3px 1px 3px rgba(250,250,250,.5)
  // gradient              rgb(255,255,255),rgb(242,242,242)
  // padding 20px 23px
  border-bottom             1px solid rgb(229,229,229)
  padding                   22px 10px 20px 40px
  shadow                    0px -15px 50px rgba(0,0,0,0.4)
  overflow                  hidden
  z-index                   1


  .group-title-wrapper
    height auto
    width auto
    padding-right       75px

  .group-name
    // vendor              font-smoothing, antialiased
    // vendor              text-rendering, geometricPrecision
    // borderBox()
    // max-width               700px
    // font-size               32px
    // width                   auto
    // display                 inline-block
    // color                   #444
    // border-bottom           2px solid #ff9200
    // margin-right            10px
    // white-space             nowrap
    // text-overflow           ellipsis
    borderBox()
    vendor                  font-smoothing, antialiased
    vendor                  text-rendering, geometricPrecision
    // max-width               700px
    font-size               42px
    width                   100%
    display                 inline-block
    color                   #444
    // border-bottom           2px solid #ff9200
    margin-right            10px
    white-space             nowrap
    text-overflow           ellipsis
    font-weight             900
    headerFont()


  .group-bio
    // vendor              font-smoothing, antialiased
    // vendor              text-rendering, geometricPrecision
    // borderBox()
    // color                   #888
    // font-size               12px
    // height                  29px
    // overflow                hidden
    // text-overflow           ellipsis
    // white-space             nowrap
    // width                   auto
    // font-weight             300
    // display                 inline
    borderBox()
    vendor                  font-smoothing, antialiased
    vendor                  text-rendering, geometricPrecision
    color                   #888
    font-size               14px
    height                  29px
    overflow                hidden
    text-overflow           ellipsis
    white-space             nowrap
    width                   auto
    font-weight             300
    display                 block
    headerFont()

  .button-wrapper
    abs()
    right               26px
    top                 26px
    height              24px
    width               auto

    button.kdbutton
      margin            0 0 0 5px!important
      display           inline-block

    #landing-page-sidebar
      width                       auto
      height                      auto
      display                     inline-block
      padding                     0
      margin-right                -3px

      .kdlistview-navigation
        text-align                center
        width                     100%
        margin                    0px

        .navigation-item
          border                  none
          width                   auto
          min-width               10px
          display                 inline-block
          z-index                 1000
          margin                  0 5px 0 0

          &.selected
            margin                0 5px 0 0
            bg color,             transparent


.group-nickname
  borderBox()
  font-size 14px
  width auto
  display inline-block
  color #aaa
  padding 5px 5px 0 13px

.group-links
  margin                24px 0 27px 15px
  ul
    li
      a
        color             #adadad!important
        noTextDeco()
        font-size         14px
        font-weight       300
      line-height       20px
      margin-bottom     4px
      span.icon
        sprite()
        fl()
        size            20px, 20px
        margin-right    18px
      &.blog
        span.icon
          bg position,  0 -80px
      &.twitter
        span.icon
          bg position,  0 -100px
      &.github
        span.icon
          bg position,  0 -280px

  ul.admin
    li
      a
        padding-top 3px
        font-size         11px
  hr
    border-top          1px solid rgba(44,41,36,0.5)
    border-bottom       1px solid rgba(255,255,255,0.07)
    width               auto
    height              0
    margin              20px 20px 10px 6px
    padding             0 11px

.group-content-links
  margin-right          0px
  width                 139px
  height                100%
  border-right          1px solid #e8e8e8
  padding               19px 23px 19px 23px
  fl()
  borderBox()

  h4
    text-transform      uppercase
    font-size           9px
    color               #9f9d9a
    font-weight         400
    margin-bottom       9px

  li
    color               #7c603b
    font-weight         normal
    noTextDeco()
    cursor              pointer
    line-height         16px
    font-size           12px
    vertical-align      baseline
    margin-bottom       6px

    &.selected
      color:                #ff9200;
      font-weight:          bold;

.group-koding-logo
  height 100%
  .logo
    cursor pointer
    sprite()
    width 120px
    height 30px
    bg position, -240px -40px
    position fixed
    bottom 12px
    left 15px
    &.animate
      vendor transition, top 0.5s ease-in-out
    &.top
      top 12px!important
      bottom none

  vertical-align bottom





.group-content-wrapper
  // margin-left           160px
  height                        100%
  width                         auto
  bg color,                     white
  borderBox()

  bg size,                      cover
  bg repeat,                    no-repeat
  bg position,                  center center
  bg image,                     url("http://www.wallpowper.com/wallpaper/2012/07/23/wood-background-dark-flooring-desktop-562248.jpg")

  &.edit
    .group-splitview
      .group-loading-content
        .content-item.front
          vendor transform,rotateY(-180deg)
        .content-item.back
          vendor transform, rotateY(0deg)

.group-splitview
  height 100%
  borderBox()
  margin-top: -120px
  padding-top 120px

  // vendor perspective, 800px
  vendor perspective-origin-x, 50%
  vendor perspective-origin-y, 50%

.kdlistview.kdview.group-loading-content
.group-loading-content
  vendor transition, background-color 0.2s linear
  vendor perspective, 800px
  // vendor perspective-origin-x, 50%
  // vendor perspective-origin-y, 50%

  borderBox()

  overflow                              auto
  height                                100%
  width                                 auto
  padding-top                           50px
  // bg color, rgba(255,255,255,0.5)
  gradient2                             center 50%,circle farthest-corner,rgba(255,255,255,0.05) 0%,rgba(255,255,255,0.15) 100%
  // gradient2                             center 25%, ellipse cover,  rgba(255,255,255,0.15) 0%, rgba(255,255,255,.5) 100% /* W3C */

  rel()

  // vendor transform-style, preserve-3d
  // vendor transition ,all .4s ease-in;

  .content-item
    vendor transform-style, preserve-3d
    vendor transition ,all .4s ease-in;
    vendor backface-visibility, hidden
    // vendor transform-origin, 50% 0px;

    abs()
    left 0
    right 0
    top 0
    bottom 0
    padding                      50px
    borderBox()

    &.front
      // vendor transform, translateY(0px) rotateY(0deg);
      // .has-markdown
      //   bg color, red
      z-index 2
    &.back
      vendor transform, rotateY(180deg);
      // .has-markdown
      //   bg color, green
      // vendor transform, rotateY(180deg)

  .content-item-scroll-wrapper
    padding                             40px
    // max-width                           600px
    max-width                           61.803398875%
    margin                              0px auto
    rounded                             5px
    border                              1px solid #e3e3e3
    bg                                  color, #f5f5f5
    shadow                              0 20px 50px -20px rgba(0,0,0,0.35), inset 0 10px 25px -10px rgba(255,255,255,0.5), 0 5px 20px -10px rgba(0,0,0,0.75)
    borderBox()
    height                              100%

  .has-markdown
    borderBox()
    // padding                             30px
    overflow                            auto
    height                              100%

.custom-image-selectitemview
  cursor                                pointer
  width                                 50%
  vendor transition,                    width 0.2s linear
  height                                auto
  display                               inline-block
  rounded                               3px
  padding                               5px 5px 2px
  borderBox()
  rel()

  span
    abs()
    borderBox()
    top                                 5px
    left                                5px
    right                               5px
    bg color,                           rgba(200,200,200,0.5)
    padding                             5px 8px 3px
    display                             block
    text-shadow                         0 0 3px rgba(0,0,0,0.5)
    color                               #fbfbfb
    border-bottom                       1px solid rgba(255,255,255,0.1)

  &.selected
    bg color,                           #ff9200

    span
      color                             white

@media (min-height: 800px)
  .custom-image-selectitemview
    width                               33.333%

@media (min-height: 500px) and (max-height: 799px)
  .custom-image-selectitemview
    width                               25%

@media (max-height: 499px)
  .custom-image-selectitemview
    width                               25%

.custom-image-default
  width                                 100%
  height                                auto
  rounded                               3px

.custom-select-background-view
  width                                 100%
  height                                auto
  borderBox()
  fl()
  display                               inline-block
  span.title
    display                             block
    margin-bottom                       10px
  .listview-wrapper
    height                              auto

.custom-select-background-upload-view
  hidden()

.group-customize-view
  overflow-y                            auto

  h1.customize-title
    display                             block
    font-size                           24px
    font-weight                         300
    color                               #444
    margin-bottom                       20px
    span
      font-size                         14px
      .settings-link
        margin                          2px

  .back-button
    fr()
    margin-right                        5px


  .save-button
    margin                              10px 5px
