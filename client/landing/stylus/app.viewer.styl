@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

.previewer-body
  width               100%
  height              100%
  padding-bottom      45px
  
  iframe
    box-sizing          content-box
    height              100%

.viewer-header
  height                27px
  color                 #888
  border                1px solid #e2e2e2
  border-bottom-color   #dadada
  border-radius         3px
  box-shadow            0 1px 4px rgba(0,0,0,0.1)
  width                 auto
  gradient              #f9f9f9, #e7e7e7
  padding               5px
  
  .viewer-title
    display             inline-block
    height              auto
    width               auto
    line-height         20px
    padding             9px 15px
    font-size           11px
    text-shadow         0 1px 0 #FFF
  
  &:hover
    a.refresh-link
      opacity           1
  
  a.refresh-link
    vendor              transition, opacity .15s linear
    opacity             .3
    position            absolute
    top                 10px
    right               6px
    height              25px
    padding             2px
    size                16px, 16px
    bg                  image, url(../images/_kd.sprites.png)
    bg                  position, -1px -521px
  
  .kdinput.text.hitenterview
    bg                  image, none
    size                100%, 25px
    margin              2px 0
    padding             0 5px

.kdcontextmenu.editor-advanced-settings-menu
  button.kdbutton.with-icon span.icon.cog-white
    bg          position,-81px -301px
  
  .kdcontextmenutreeview
    .kdtreeitemview
      input.kdinput.text
        display   block
        float     right
        margin    0 10px 0 0
        width     52px
        

