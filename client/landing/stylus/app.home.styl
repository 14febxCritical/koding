div.screenshots
  rel()
  height                  auto

  .arrow
    abs()
    display               block
    top                   107px
    size                  30px, 503px
    shadow                0 10px 25px rgba(0, 0, 0, .4)
    bg                    color, rgba(0, 0, 0, .5)
    vendor                transition, left  .15s ease-in-out\,\
                                      right .15s ease-in-out\,\
                                      width .15s ease-in-out
    z-index               1
    border                1px solid transparent
    border-color          rgba(255, 255, 255, .2)\
                          rgba(0, 0, 0, .1)\
                          rgba(0, 0, 0, .3)
    borderBox()
    &.left
      left                0
      rounded             0 4px 4px 0
      border-width        1px 1px 1px 0
      span
        right             10px
        bg                position, -220px -100px
    &.right
      right               0
      rounded             4px 0 0 4px
      border-width        1px 0 1px 1px
      span
        left              20px
        bg                position, -200px -100px
    &:hover
      width               40px


    span
      abs()
      display             block
      top                 50%
      margin-top          -15px
      margin-left         -10px
      size                20px, 30px
      sprite()

  > section
    size                  100%, auto
    overflow              hidden
    text-align            center
    padding               30px 0
    // gradient              rgba(0, 0, 0, .1), rgba(0, 0, 0, .05)
    background            transparent url("../images/bg/blurred/4.jpg") no-repeat 0 0
    background-size       cover
    border                1px solid rgba(0, 0, 0, .1)
    border-top-color      rgba(0, 0, 0, .3)
    border-width          1px 0 1px
    shadow                inset 0 5px 15px rgba(0, 0, 0, .2)

  ul
    margin                0
    size                  100%, auto
    z-index               0

    li
      rel()
      size                100%, auto
      overflow            visible
      vendor              transition, opacity .5s ease-in-out
      fl()

      p
        abs()
        size              auto, auto
        bottom            20px
        right             50%
        max-width         600px
        padding           10px 40px
        margin-right      -410px
        font-size         20px
        line-height       30px
        text-align        right
        color             #FFF
        opacity           .9
        text-shadow       0 1px 0 rgba(0,0,0,0.4)
        gradient          rgba(255, 146, 0, 0.8), rgba(209, 107, 13, 0.8)
        bg                color, #ff9200
        shadow            0 0 10px rgba(0,0,0,0.5)
        rounded           2px
        borderBox()
        span
          font-style      italic
          font-size       12px
          line-height     20px
          color           rgba(255, 255, 255, .85)
          display         block

      > div
      > img
        display           inline-block
        width             90%
        max-width         800px
        min-width         500px
        max-height        503px
        rounded           4px
        shadow            0 10px 25px rgba(0,0,0,0.5)
        overflow          hidden
      > div
        background        rgba(0, 0, 0, .4)
        iframe
          padding         10px
          borderBox()

  .home-links
    abs()
    top                 585px
    size                auto, 50px
    margin              30px auto

    .custom-link-view
      display           inline-block
      size              auto, 100%
      padding           0 26px 0 20px
      margin            0 0 0 20px
      rounded           4px
      line-height       49px
      gradient          #666, #505050
      // border-right      1px solid rgba(255,255,255,.2)
      border-top        1px solid rgba(255,255,255,.2)
      border-left       1px solid rgba(0,0,0,.1)
      text-shadow       0 1px 0 rgba(0,0,0,.9)
      borderBox()
      .title
        color           rgba(255,255,255,.9)
      .icon
        margin          15px 1px 0 0
      &:hover
        .title
          color         rgba(255,255,255,1)
      &.open
        .icon
          bg            position, -200px -340px
      &.logout
        .icon
          bg            position, -200px -320px
      &.login
        .icon
          bg            position, -220px -320px
      &.register
        .icon
          bg            position, -220px -341px
      &.customize
        .icon
          bg            position, -200px -380px
      &.request
        .icon
          bg            position, -200px -360px
      &.join
        .icon
          bg            position, -220px -378px
      &.customize
      &.join
      &.request
      &.green
      &.open
        gradient        #68B43B, #5B9D33


div.home-featured
  max-width               1000px
  margin                  0 auto

div.home-featured-activities
  borderBox()
  text-align              left

  > .kdlistview
    width                 840px
    margin:               20px auto;
    background-color:     rgba(255,255,255,0.75);
    shadow                0 0 25px 1px rgba(0,0,0,0.25);



div.home-featured-members
  borderBox()
  fl()
  width                   480px
  margin-right 20px
  display                 inline-block
  height                  525px

  .kdloader
    abs()
    top                   50%
    margin-top            -15px

  .kdlistview-members
    margin                5px
  .kdlistitemview-member
    display               inline-block
    width                 25%
    a.avatarview
      width               115px!important
      height              115px!important

div.home-featured-apps
  borderBox()
  display                 block
  margin-left             520px
  width                   480px
  .kdlistview-apps
    .kdlistitemview
      cursor              pointer
      background-color    rgba(245, 245, 245, 0.5)
      width               230px
      height              230px
      display             inline-block
      margin              5px
      vertical-align      top
      > img
        width             100%
        height            auto

      .details

        abs()
        bottom            0
        left              0
        right             0
        bg                color, rgba(255,255,255,0.75)
        height            38%
        text-align        left
        border-top        rgba(255,255,255,0.75)
        text-shadow       0 0 3px white
        vendor            transition, background-color 0.2s linear

        .app-name
          borderBox()
          padding         15px 15px 10px 24px
          color           #444
          font-size       18px
          font-weight     300
          height          auto
          text-align      left
        .followers-wrapper
          width           50%
          fl()
          display         inline-block
        .installed-wrapper
          width           50%
          margin-left     50%
          display         block
        .app-followers
        .app-installed
          borderBox()
          padding         5px
          color           #888
          text-align      center
      &:hover
        .details
          bg              color, rgba(255,255,255,0.85)
        shadow          0px 0px 10px rgba(0,0,0,0.25)\,0 1px 5px -2px rgba(0,0,0,0.6)

div.featured-header
  color                   #444
  font-size               24px
  font-weight             300
  text-align              left
  padding                 10px

div.featured-app-details
  borderBox()
  width                   100%
  height                  auto
  padding                 25px 15px 30px 0px

  .sidebar
    borderBox()
    padding               10px
    height                100%
    width                 256px
    display               inline-block
    fl()
    text-align            center
    .details-thumb
      margin-bottom       15px
      max-width           100%
    // .details-install-button

  .content
    borderBox()
    margin-left           256px
    width                 auto
    padding               10px
    .details-name
      font-size           18px
      width               auto
      display             inline-block
      margin-bottom       5px
    .details-version
      width               auto
      display             inline-block
    .details-description
      color               #aaa
      padding             20px 0
    .details-author
      text-transform      italic

    .counts
      .details-followers
      .details-installed
      .details-likes
        width             auto
        display           inline-block
        padding           10px 10px 10px 0
