/* NEW HOME */
// body
// .kdview.home
//   overflow                  auto


#kdmaincontainer.home
  overflow          auto

  #main-panel-wrapper
    min-height      100%
    height          auto!important
  #sidebar-panel
    hidden()
  #content-panel
    min-height      100%
    height          auto!important


#kdmaincontainer.home
  >header
    size                    100%, 100px
    top                     0
    left                    0
    background              none
    z-index                 100
    overflow                visible
    abs()

    .kdview
      size                  100%, 100px
      max-width             1280px
      position              relative
      margin                0 auto
      overflow              visible
      z-index               100
      borderBox()

      #koding-logo
        top                 40px
        left                40px
        fl()

      #header-sign-in
        height              100px
        line-height         100px
        margin              0 40px 0 0
        display             block
        fr()

        span
          font-size           20px !important
          color               #eaeaea

  #home-intro
    size                    100%, 728px
    bg                      color, #282828

    >.gunduz-varligi
      size                  100%, 728px
      left                  0
      top                   0
      bg                    image, url('../images/gunduz-varligi-yildizli.jpg')
      bg                    position, center center
      bg                    size, cover
      vendor                opacity, .7
      abs()

    >section
      text-align            center
      size                  100%, 728px
      left                  0
      top                   0
      borderBox()
      abs()

      .slogan
        font-size           50px
        color               #fff
        font-weight         normal
        padding             240px 0 0 0

      .sub-slogan
        font-size           30px
        color               #fff
        margin              30px 0 0 0
        font-weight         300
        line-height         40px

      .buttons
        margin            60px 0 0 0

        button.kdbutton
          size              234px, 80px
          rounded           39px
          background        none
          border            2px solid transparent
          text-align        left
          font-size         16px
          line-height       20px
          padding           15px 0 0 0
          vendor            transition, background .3s ease \,\
                                        color      .3s ease
          borderBox()

          i
            display         block
            float           left
            size            40px, 40px
            sprite()
            margin          3px 15px 29px 18px

          span
            display         block
            font-size       24px

          &.email
            border-color    #df7400
            color           #df7400
            i
              bg            position, -680px -1px

            &:hover
              bg            color, #df7400
              color         #5c3108
              span
                color       #1c140c
              i
                bg            position, -680px -45px

          &.github
            border-color    #fff
            color           #a9a7a6
            margin          0 0 0 40px
            i
              bg            position, -630px -1px
            span
              color         #fff

            &:hover
              bg            color, #fff
              color         #b6b6b6
              span
                color       #545454
              i
                bg          position, -630px -45px

#content-page-home
  section.slider-section
    size                    100%, 740px
    bg                      color, #fff
    position                relative

    &:after
      content               ""
      display               block
      size                  100%, 34px
      bg                    image, url('../images/home_shadow.png')
      bg                    position, center
      bottom                0
      left                  0
      abs()

    .home-slider
      size                  100%, 100%
      text-align            center
      overflow              hidden
      abs()

      nav.slider-nav
        width               100%
        text-align          center
        display             block
        bottom              80px
        abs()

        a.custom-link-view
        a.custom-link-view span
          font-size           22px !important
          font-weight         300 !important
          color               #3d3d3d !important
          &~a
            margin-left       20px
        a.custom-link-view.active
        a.custom-link-view.active span
          font-weight         600 !important

      .slider-page
        display             block
        size                100%, 100%
        top                 0
        text-align          left
        opacity             0
        vendor              transition, opacity  .4s ease
        abs()

        figure
          size            641px, 467px
          bg              image, url("../images/homeslide/you.png")
          margin-left     100px
          fr()

        .wrapper
          width             100%
          max-width         1280px
          margin            0 auto
          padding           100px 20px 0
          borderBox()

        h3
          font-size         42px
          color             #595959
          font-weight       600
          span
            color           #ff9e3c

        p
          font-size         22px
          color             #353535
          margin            40px 0 0 0
          font-weight       300

        &.active
          opacity           1

        &#you-page
        &#developers-page
        &#business-page
        &#education-page
          text-align        left
          h3
            margin-top      100px

  section.pricing-section
    size                    100%, 740px
    bg                      color, #fff
    position                relative
    text-align              center
    color                   #595959

    &:after
      content               ""
      display               block
      size                  100%, 34px
      bg                    image, url('../images/home_shadow.png')
      bg                    position, center
      bottom                0
      left                  0
      abs()

    >h3
      font-size             48px
      font-weight           600
      margin                70px 0 10px
    >h4
      font-size             22px
      font-weight           100

    .price-boxes
      size                  454px, 227px
      margin                65px auto
      a
        size                227px, 227px
        display             block
        background          #8bd6bb
        color               #fff
        rounded             3px
        text-align          center
        float               left
        font-size           29px
        text-decoration     none
        font-weight         100
        -webkit-transition  -webkit-transform .3s ease \,\
                            color             .3s ease  \,\
                            background        .3s ease
        -moz-transition     -moz-transform    .3s ease \,\
                            color             .3s ease  \,\
