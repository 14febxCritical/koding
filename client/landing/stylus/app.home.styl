body.group
  div.screenshots
    > section
      height              auto

  .group-desc
    margin                30px
    line-height           30px
    font-size             16px
    color                 white
    text-shadow           0 1px 0 rgba(0, 0, 0, .75)
    bg                    color, transparent
    max-width             800px
    text-align            left

  .readme
    bg                    color, #fff
    padding               30px
    max-width             800px
    text-align            left
    borderBox()

    textarea.readme-input
      width               100%
      min-height          200px

    button.readme-save
      margin              0 0 10px
      fr()

    a.readme-cancel
      margin              -6px 0 3px 10px
      fr()

    button.readme-edit
      margin              0 10px 10px 0

div.screenshots
  rel()
  height                  auto
  z-index                 1000

  .arrow
    abs()
    display               block
    top                   107px
    size                  30px, 503px
    shadow                0 10px 25px rgba(0, 0, 0, .4)
    bg                    color, rgba(0, 0, 0, .5)
    vendor                transition, left  .15s ease-in-out\,\
                                      right .15s ease-in-out\,\
                                      width .15s ease-in-out
    z-index               1
    border                1px solid transparent
    border-color          rgba(255, 255, 255, .2)\
                          rgba(0, 0, 0, .1)\
                          rgba(0, 0, 0, .3)
    borderBox()
    &.left
      left                0
      rounded             0 4px 4px 0
      border-width        1px 1px 1px 0
      span
        right             10px
        bg                position, -220px -100px
    &.right
      right               0
      rounded             4px 0 0 4px
      border-width        1px 0 1px 1px
      span
        left              20px
        bg                position, -200px -100px
    &:hover
      width               40px


    span
      abs()
      display             block
      top                 50%
      margin-top          -15px
      margin-left         -10px
      size                20px, 30px
      sprite()

  > section
    size                  100%, 506px
    overflow              hidden
    text-align            center
    padding               30px 0
    background            transparent url("../images/clouds.png") no-repeat center 0
    background-size       cover
    shadow                inset 0 5px 15px rgba(0, 0, 0, .2)

    ul
      margin                0
      size                  600%, 506px
      z-index               0

    li
      rel()
      size                16.6667%, 506px
      overflow            hidden
      padding             30px 0
      borderBox()
      fl()

      p
        abs()
        size              100%, auto
        bottom            0
        padding           10px 40px
        font-size         20px
        line-height       30px
        text-align        center
        color             #FFF
        opacity           .9
        text-shadow       0 1px 0 rgba(0,0,0,0.4)
        gradient          rgba(0,0,0,.6), rgba(0,0,0,.8)
        borderBox()
        span
          font-style      italic
          font-size       12px
          line-height     20px
          color           rgba(255, 255, 255, .85)
          display         block

      > figure
        rel()
        display           inline-block
        // width             90%
        max-width         800px
        min-width         500px
        max-height        443px
        rounded           4px
        shadow            0 10px 25px rgba(0,0,0,0.5)
        overflow          hidden
        &.video
          size            100%, 100%
          background      rgba(0, 0, 0, .4)
          iframe
            size          100%, 100%
            padding       10px
            borderBox()
        img
          width           100%

  .home-links
    size                auto, 0
    text-align          left
    gradient            #666, #505050
    transition          height .15s ease-in-out
    overflow            hidden
    rel()
    &.in
      height            50px

    .overlay
      abs()
      size              100%, 100%
      z-index           10
      bg                color, transparent
    > ul
      z-index           0
    .custom-link-view
      size              25%, 50px
      padding           0 26px 0 20px
      margin            0
      // rounded           4px
      line-height       49px
      gradient          #666, #505050
      // border-right      1px solid rgba(255,255,255,.2)
      border-top        1px solid rgba(255,255,255,.3)
      border-left       1px solid rgba(0,0,0,.1)
      text-shadow       0 1px 0 rgba(0,0,0,.9)
      shadow            0 -1px 0 rgba(0, 0, 0, .3)\,\
                        0 1px 0 rgba(255, 255, 255, .6)
      borderBox()
      fl()
      .title
        color           rgba(255,255,255,.9)
        width           100%
      .icon
        margin          15px 1px 0 0
      &:hover
        .title
          color         rgba(255,255,255,1)
      &.open
        .icon
          bg            position, -200px -340px
      &.logout
        .icon
          bg            position, -200px -320px
      &.login
        .icon
          bg            position, -220px -320px
      &.register
        .icon
          bg            position, -220px -341px
      &.customize
        .icon
          bg            position, -200px -380px
      &.invitation-pending
      &.request-pending
      &.request
        .icon
          bg            position, -200px -360px
      &.join
        .icon
          bg            position, -220px -379px
      &.browse
        .icon
          bg            position, -220px -400px
      &.green
        border-top      1px solid rgba(255,255,255,.4)
        gradient        #68B43B, #5B9D33
      &.orange
        border-top      1px solid rgba(255,255,255,.4)
        gradient        rgb(233, 142, 27), rgb(223, 118, 4)

#home-counter-bar
  padding               10px 30px 30px
  gradient              #37332C ,#1D1B18
  text-align            center

figure.counter
  display               inline-block
  margin                20px 10px 0 0
  padding               2px
  bg                    color, rgba(0,0,0,.2)
  rel()
  h6.title
    font-size           10px
    color               rgba(255,255,255,.4)
    text-transform      uppercase
    text-shadow         0 -1px 0 black
    size                100%, 14px
    line-height         14px
    top                 -14px
    left                0
    white-space         nowrap
    font-weight         300
    // vendor              font-smoothing, antialiased
    // vendor              text-rendering, geometricPrecision
    abs()
  i.digit
    display             inline-block
    font-family         Ubuntu
    font-size           22px
    font-weight         bold
    padding             0 3px
    line-height         24px
    color               rgb(255,255,255)
    // text-shadow         0 -1px 0 black
    // rounded             2px
    gradient            #42403A, #454340
    margin-right        1px
    font-style          normal
    vendor              font-smoothing, antialiased
    vendor              text-rendering, geometricPrecision
    shadow              inset 0 2px 4px -2px rgba(0,0,0,.5)
    rel()
    &:last-child
      margin-right      0
    span.hinge
      size              100%, 50%
      top               -1px
      left              0
      margin            0
      bg                color, rgba(0,0,0,.1)
      border-bottom     1px solid rgba(0,0,0,.3)
      shadow            0 1px 0 rgba(255,255,255,.1)
      abs()



