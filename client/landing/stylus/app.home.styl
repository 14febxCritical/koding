@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib/gradients"
@import "nib/vendor"

@css {
/*
HOME stylesheet
app.home.styl
*/
}

.content-page.home
  bg                        color, #393630
  bg                        image, url(../images/koding-bg.png)
  bg                        repeat, repeat-x
  bg                        position, -16px -52px
  color                     #fff
  text-align                center

  h1
    font-weight             600
    font-size               36px
    letter-spacing          -1px
    text-shadow             1px 1px 1px rgba(0,0,0,0.3)
    margin                  60px 0 10px 0
    vendor                  transition, all .3s ease-in-out
  
  h2
    font-size               18px
    color                   rgba(255,255,255,0.7)
    text-shadow             1px 1px 1px rgba(0,0,0,0.3)
    font-weight             300
    margin-bottom           60px
    vendor                  transition, all .3s ease-in-out
  
  section
    size                    100%,auto
    overflow-x              visible
    overflow-y              hidden

  ul
    margin                  0
    size                    100%,auto
    li
      position              relative
      width                 100%
      fl()
      
      p
        position            absolute
        bottom              30px
        size                100%, 80px
        font-size           16px
        text-shadow         0 1px 0 rgba(0,0,0,0.2)
        bg                  color, #ff9200
        padding             20px 0
        borderBox()

      img
        width               90%
        max-width           800px
