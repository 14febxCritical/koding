        position          absolute
        bottom            30px
        size              100%, 60px
        font-size         16px
        text-shadow       0 1px 0 rgba(0,0,0,0.2)
        bg                color, #ff9200
        padding           20px 0
        shadow            0 5px 15px rgba(0,0,0,0.5)
        borderBox()

      img
        width             90%
        max-width         800px
        min-width         500px
        rounded           4px
        shadow            0 10px 25px rgba(0,0,0,0.5)

