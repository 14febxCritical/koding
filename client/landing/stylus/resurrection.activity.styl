@import "./kdfn"
@import "./client/stylus/appfn"
@import "./client/stylus/app.fonts"

.feeder-header
.common-inner-nav
.system-message
.comment-container
.activity-status-context
  display               none

.activity-update-widget-wrapper
  min-height            68px
  background            #fff
  border-radius         0 0 6px 6px
  border                1px solid #e1e1e4
  margin                0 30% 0 78px
  position              relative
  borderBox()

  .update-type-select-icons
    right               0
    bottom              0
    height              68px
    line-height         68px
    abs()

    div
      display           inline-block
      margin            0 20px 0 0

      &.update
        sprite          app update-icon
      &.blogpost
        sprite          app blogpost-icon
      &.codesnip
        sprite          app codesnip-icon

  .kdtabpaneview
    display             none

    &.active
      display           block

    .small-input input
      width             70%
      height            68px
      line-height       68px
      font-size         16px
      color             #7a868d
      font-weight       200
      background        none
      border            none
      padding           0 0 0 24px
      borderBox()

.content-page.activity
  max-width             1146px
  margin                0 auto
  padding               0 20px
  font-family           "Open sans"

  .activity-content
    width               70%

  .kdlistitemview-activity
    background          #fff
    border              1px solid #e1e1e4
    margin              16px 0 0 78px
    border-radius       6px 6px 0 0
    position            relative
    borderBox()

    .status-body
      font-size       16px
      font-weight     200
      line-height     22px
      color           #485259
      margin          20px 24px 24px

    footer
      size              auto, 38px
      line-height       36px
      background        #f8f8f9
      border            1px solid #e5e5e7
      border-top        1px solid #e1e1e4
      margin            0 -1px -1px

      .action-container
        height          36px
        min-width       36px
        text-align      center
        border-right    1px solid #e5e5e7
        fl()

        &:last-of-type
          border-right none
          border-left  1px solid #e5e5e7
          fr()

        a
          fl()
          noTextDeco()

          &.share-icon
            sprite     app share-icon

          &.like-icon
            sprite     app like-icon

          &.comment-icon
            sprite     app comment-icon

          &.count
            margin     0 14px 0 -5px
            font-size  12px
            color      #7a868d

    .avatarview.author-avatar
      size              65px, 65px
      display           block
      border-radius     3px
      border            1px solid #cbc6c6
      left              -78px
      top               1px
      abs()
      borderBox()

    .author-name
      display           block
      margin            24px 24px 0

      a.profile
        color           #91979b
        font-size       15px
        font-weight     400
        noTextDeco()

    .codesnip
      .code-container
        margin          20px 24px 24px

        pre
          margin        0
          padding       0

        code
          padding       20px
          max-height    400px
          overflow      scroll

    .blog-post
      .blog-post-title
        margin          20px 24px 0

        a
          color         #91979b
          font-weight   normal

      .body
          font-size     14px
          font-weight   200
          line-height   20px
          color         #485259
          margin        20px 24px 24px






























