@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

@media only screen and (max-width: 480px)
  #kdmaincontainer.home > header
    bg                      position, 50% -211px
    .custom-link-view
      right                 8px

  #koding-logo.large
    left                    18px

  // html, body

  div#home-intro
    height                 650px
      min-width            400px
    section
      .slogan
        font-size          30px !important
        padding-top        170px !important
      .sub-slogan
        font-size          22px !important

    .email.kdbutton
    .github.kdbutton
      margin               10px 0 !important
      width                90% !important

  #home-counter-bar
    text-align      left
    padding         10px 15%

  figure.counter
    width           100%
    margin-right    0
    h6.title
      height        22px
      line-height   22px
      margin        0
      font-size     10px
    > div
      clear         right
      fr()
    i
      font-size     1.3em
  .home-links
    height          50px
    margin-top      -50px
    text-align      center
    > ul
      > li
        padding     5px 0 0 5px
        &:last-child
          padding   5px 5px 0 5px

    .custom-link-view.button
      padding         0 7px 0 5px
      height          30px
      line-height     29px
      font-size       11px
      .icon
        margin-top    5px
      .title
        font-size     12px
    .custom-link-view
      line-height     15px
      &:first-child
        padding-top   0
      span.title
        font-size     10px
      span.icon
        margin-top    -3px

  #content-panel
    min-width    0

  .kdmodal
    width    95% !important
    left     0   !important
    .kdmodal-buttons
      width    100% !important

  #content-page-home
    .feeder-tabs
      .feeder-header
        font-size   15px
