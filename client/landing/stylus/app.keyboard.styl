@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

@css {
/*  
KEYBOARD stylesheet
app.keyboard.styl
*/
}

a.key-helper-modal-icon
  position      absolute
  right         4px
  bottom        4px
  color         rgba(255,255,255,.8)
  font-weight   bold
  display       block
  size          16px,16px
  border        1px solid rgba(255,255,255,.6)
  rounded       3px
  text-align    center
  line-height   15px
  font-size     10px
  z-index       100
  borderBox()
  noTextDeco()

.kdmodal.keyboard-helper
  .close-icon
    right               15px
    top                 15px
    z-index             1
  
  
.kdlistview.keyboard-helper
  size          100%,auto
  background    #454545
  color         #AAA
  padding       30px 40px
  margin        0 0 8px 0
  display       inline-block
  list-style    none
  borderBox()
  rounded(8px)
  shadow(0 8px 0 #2d2d2d)
  li.title
    font-size             14px
    display               block
    margin-bottom         8px
    text-shadow           0 -1px 0 rgba(0, 0, 0, 0.2)
    font-weight           200
    color                 white
    margin-bottom         12px
  .kdlistitemview.keyset
    text-transform        none
    margin-bottom         12px
    font-size             12px
    text-shadow           0 -1px 0 rgba(0, 0, 0, 0.2);
    color                 #DDD
    font-weight           300
    overflow              visible

    h6
      font-size           12px
      line-height         20px
      font-weight         300
      position            absolute
      left                140px
      top                 0
      
    cite
      margin              0 3px 0 0
        
    span.keyview
      font-size           9px
      padding             4px 0px 5px 0px
      line-height         9px
      color               #444
      font-weight         normal
      text-transform      uppercase
      min-width           20px
      margin-right        3px
      display             inline-block
      text-align          center
      border              1px solid rgba(172, 172, 172, 0.19)
      border-width        1px 0
      border-bottom-color rgba(0,0,0,0.3)
      border-top-color    rgba(255,255,255,1.0)
      rounded(3px)
      shadow(0 2px 0 #b2b2b2\, inset 0 -1px 0 rgb(255, 255, 255)\, 0 3px 5px rgba(0, 0, 0, 0.13))
      // gradient(#fbfbfb,#ededed)
      background          -moz-linear-gradient(90deg, #fbfbfb 0%, #ededed 100%) #333
      background          -webkit-gradient(linear, left bottom, left top, from(#fbfbfb), to(#ededed)) #333
      &.large
        width             40px
        text-transform    lowercase
        