@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"

// Markdown Styles - global

.has-markdown
  font-size                                       14px
  font-weight                                     300
  line-height                                     140%
  color                                           #5F5F5F

  h1,h2,h3,h4,h5,h6
    font-size                                     16px
    line-height                                   140%
    color                                         #666
    font-weight                                   600
    border                                        none
    height                                        auto
    width                                         auto
    padding                                       15px 0 5px 0
    vendor margin-before                          0px
    vendor margin-after                           0px
    vendor margin-start                           0px
    vendor margin-end                             0px
    display                                       block
    &:first-child
      padding-top                                 0px
    > a
      display                                     inline

  h1
    font-size                                     16px
    font-weight                                   800
  h2
    font-size                                     15px
  h3
    font-size                                     14px
  h4
    font-size                                     13px
  h5
    font-size                                     12px
  h6
    font-size                                     12px

  b,strong
    word-break                                    break-all

  blockquote
    white-space                                   pre
    border-left                                   3px solid  #ff9200
    display                                       inline-block
    margin-bottom                                 15px
    max-width                                     575px

    p
      padding-left                                15px
      &:last-child
        margin-bottom                             0

  p
    white-space                                   normal
    line-height                                   170%
    margin-bottom                                 15px

  pre
    font-size                                     14px
    font-weight                                   300
    margin-bottom                                 15px
    bg color,                                     #f2f2f2

  code
    font-size                                     12px
    border                                        1px solid #e3e3e3
    rounded                                       3px
    padding                                       2px 4px
    margin-right                                  2px
    bg color,                                     #f2f2f2

  ul,ol
    margin-bottom                                 15px
    padding-left                                  10px

  ol
    list-style                                    upper-roman inside

    ol
      list-style                                  decimal inside

    ul
      list-style                                  disc inside

  ul
    list-style                                    disc inside

    ul
      list-style                                  disc inside

    ol
      list-style                                  decimal inside

  li
    padding-left                                  5px

  a
    font-size                                     14px
    font-weight                                   300
    noTextDeco()
    font-weight                                   400
    color                                         #444
    border-bottom                                 1px solid #e3e3e3
    &:hover
      border-bottom                               1px solid #aaa

  img
    max-width                                     600px
    width                                         auto
    margin-top                                    10px
    display                                       block

  &.dark
    color  #888
    h1
      font-size 16px
    h2
      font-size 15px
    h3
      font-size 14px
    h4
      font-size 13px
    h5
      font-size 12px
    h6
      font-size 12px
      color     #aaa

    img
      bg color, rgba(255,255,255,0.05)
      padding 2px
      rounded 5px
      border 1px solid rgba(255,255,255,0.16)

    b,strong
      color rgba(255,255,255,0.75)//#f5f5f5
      text-shadow 0 0 2px rgba(0,0,0,0.7)

    hr
      border-top-color  rgba(255,255,255,0.16)

    blockquote
      border 1px solid rgba(255,255,255,0.16)
      rounded 4px
      padding 5px 8px
      bg color, rgba(255,255,255,0.05)
      margin 0 20px 10px 20px
      p
        margin 0



    code
      bg color, rgba(255,255,255,0.05)
      color #aaa!important
      padding 1px 4px
      border 1px solid rgba(255,255,255,0.16)
      rounded 2px
      white-space pre-line
      // vendor transition, background-color 0.2s linear
      // &:hover
      //   bg color, lighten(#403C36,2%)


    pre
      // vendor transition, background-color 0.2s linear
      border 1px solid rgba(255,255,255,0.16)
      bg color, transparent //rgba(0,0,0,0.2)//#403C36
      rounded 4px
      color #aaa!important
      padding 0
      > code
        padding  15px
        border none
      // &:hover
      //   bg color, lighten(#403C36,2%)
      //   code
      //     bg color, lighten(#403C36,2%)

    a
      color #ff9200

  &.force-small-markdown
    *
      margin-top                                  0
      margin-bottom                               5px
      font-size                                   12px
      font-weight                                 400
      line-height                                 170%

    strong,b
      font-weight                                 600

    h1,h2,h3,h4,h5,h6
      font-size                                   12px

    code
      font-size                                   11px

  > div.data-wrapper > span.data
  > span.data
  > div.data
    > pre
      padding                                     5px
      rounded                                     4px
      border                                      1px solid #e3e3e3
      bg color,                                   #f2f2f2
      // vendor box-shadow, inset 0px 0px 5px rgba(0,0,0,0.15)

  .tomorrow-comment, pre .comment, pre .title
    color                                         #8e908c!important


  .tomorrow-red, pre .variable, pre .attribute, pre .tag, pre .regexp, pre .ruby .constant, pre .xml .tag .title, pre .xml .pi, pre .xml .doctype, pre .html .doctype, pre .css .id, pre .css .class, pre .css .pseudo
    color                                         #c82829!important


  .tomorrow-orange, pre .subst, pre .number, pre .preprocessor, pre .built_in, pre .literal, pre .params, pre .constant
    color                                         #f5871f!important


  .tomorrow-yellow, pre .class, pre .ruby .class .title, pre .css .rules .attribute
    color                                         #eab700!important


  .tomorrow-green, pre .string, pre .value, pre .inheritance, pre .header, pre .ruby .symbol, pre .xml .cdata
    color                                         #718c00!important


  .tomorrow-aqua, pre .css .hexcolor
    color                                         #3e999f!important


  .tomorrow-blue, pre .function, pre .python .decorator, pre .python .title, pre .ruby .function .title, pre .ruby .title .keyword, pre .perl .sub, pre .javascript .title, pre .coffeescript .title
    color                                         #4271ae!important


  .tomorrow-purple, pre .keyword, pre .javascript .function
    color                                         #8959a8!important


  pre code
    display                                       block
    background                                    transparent
    bg color,                                     #f2f2f2
    color                                         #4d4d4c!important
    font-family                                   Menlo, Monaco, Consolas, monospace
    line-height                                   1.5
    padding                                       10px
    border none
