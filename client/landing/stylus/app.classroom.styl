}

.classroom
  background                #EFEFEF
  .container
    background              url('../images/bg/blurred/4.jpg')
    height                  320px
    box-shadow              0px 0px 700px rgba(255, 255, 255, .5) inset
  .banner
    margin                  0 auto
    size                    1280px, 320px
    color                   #FFF
    h1
      font-weight           bold
      font-size             68px
      text-shadow           2px 2px 3px rgba(0, 0, 0, .4)
      size                  500px, 240px
      line-height           240px
      margin-left           120px
    h2
      margin-left           125px
      font-size             20px
      position              relative
      text-shadow           1px 1px 1px rgba(0, 0, 0, .2)
      top                   -80px
    img
      top                   60px
      position              absolute
      right                 320px
  .classes
    text-align              center
    .title
      font-size             22px
      font-weight           600
      margin-bottom         30px
    .no-related-class, .no-enrolled-class
      font-size             14px
      font-weight           600

