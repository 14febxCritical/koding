  .edit-container
    padding             5px 10px
    border              1px solid #ccc
    rounded             4px
    bg                  color, #f5f5f5
    borderBox()

    .buttons
      margin            10px 0 5px 0
      padding           10px
      bg                color, #e2e2e2
      rounded           3px
      border            1px solid #ccc
      .kdbutton
        width           auto
        margin-right    10px

