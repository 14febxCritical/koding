@import "lib/core.fn"

@css {
/*
home Landing stylesheet
home.styl
*/
}

body, input, textarea, select, button
  text-rendering          optimizeLegibility
  -webkit-font-smoothing  antialiased
  vendor                  font-kerning, normal

strong
  font-weight             bold

#main-panel-wrapper
  background              none

body
  font-family             OpenSansFamily

body.home

  .apply
    section.introduction
      .form-wrapper
        width             300px


  section.introduction
    size                  100% 100vh
    padding               149px 45px 0
    padding-top           calc(50vh - 170px)
    text-align            center
    position              relative
    overflow              hidden
    borderBox()

    &:after
      content             ''
      z-index             1
      bg                  color rgba(0, 0, 0, .3)
      size                100% 100%
      abs                 0px 0 0 0px

    figure
      size                300px 100px
      abs                 0 50% 50px 0
      margin-right        -150px
      bg                  color transparent
      cursor              pointer
      z-index             19
      &:after
        content           ''
        r-sprite          home 'slideshow-next-light'
        display           block
        margin            7px 0 0 107px
        opacity           .5
        vendor            transform, rotate(90deg)
        vendor            transition, opacity .2s ease
      &:hover
        &:after
          opacity         1
      &.out
        &:after
          opacity         0


    video
      z-index             0
      min-width           100%
      min-height          100%
      size                auto auto
      bg                  color black
      bg                  size cover
      abs                 0px 0px 0 0

    > *
      position            relative
      z-index             20

    h2
      font-weight         300
      font-size           34.11px
      letter-spacing      0.2em
      color               #f4f4f4
      margin-bottom       46px

      span
        color             #848484

    h3
      font-weight         400
      font-size           18px
      line-height         28px
      letter-spacing      0.1em
      color               #f4f4f4

      strong
        font-weight       600
        color             #fff

    .form-wrapper
      margin              69px 0
      padding             10px
      background          rgba(38,38,38,.8)
      rounded             6px
      display             inline-block
      borderBox()

      .social-buttons
        position          static
        display           inline-block
        clear             both
        margin            14px auto 0
        height            26px

        li:last-of-type
          margin-right    0

      .avatar-background
        abs               -50px 0 0 50%
        bg                color rgba(0,0,0,.2)
        // bg                color red
        size              80px 30px
        margin            0 0 0 -50px
        padding           10px
        rounded           10px 10px 0 0
        z-index           0

      .avatar
        rounded           8px
        size              80px 80px
        z-index           1

      section
        margin            0 auto

        &.logged-in
          margin-top      29px

        .kdlabel
          color           white
          width           100%
          text-align      center
          margin-right    0
          a
            display       block
            color         #aaa
            font-size     .8em
          a:before
            content       ''
            display       block

        .kdview
          margin          0

        .login-input-view
          background      #fff
          rounded         3px

        .placeholder-helper
          top             15px
          font-size       12px
          color           #989898

          &.out
            font-size     12px
            top           -18px
            color         #fff

        > div
          width           190px
          margin          0 9px 0 0
          padding         0

        .submit
          width           124px
          margin          0

      .input-wrapper
        margin            0
        padding           0

      .kdinput
        width             100%
        rounded           3px
        text-align        center
        border            1px solid transparent
        background        transparent
        margin            0
        padding           10px 14px
        font-size         12px


      .kdbutton
        padding           0
        text-align        center
        width             100%
        line-height       44px
        height            44px
        background        #ffec18
        color             #313131
        font-size         14px

        .button-title
          color           inherit

  .counters
    letter-spacing      .1em
    font-weight         200
    color               #fff
    font-size           14px
    background          #2b2b2b
    height              50px
    line-height         50px
    padding             0 26px
    width               100%
    text-align          center
    margin-top          -50px
    z-index             2
    left                0
    abs()
    borderBox()

    span
      font-weight       700
      margin-right      30px

      &:last-of-type
        margin-right    0


  section.content
    background            #fff
    rounded               0 0 8px 8px
    width                 auto
    max-width             1200px
    margin                0 auto
    padding               0
    position              relative
    z-index               30
    borderBox()

    // > *
    //   max-width           1200px
    //   margin              0 auto



    article
      padding             53px 276px 0 53px
      font-size           16px
      color               #111
      letter-spacing      .05em

      a
        color             #1563BC
        borderize         #1563BC

      h4, h5
        font-weight       400
        display           inline-block
        text-transform    uppercase
        line-height       2em
        bg                color rgba(0,0,0,.05)
        // bg                color #FEEF00
        color             #313131
        padding           0 26px// 0 53px
        margin-left       -26px
        // border-left       6px solid #848484
        // shadow            0 3px 0 rgba(0,0,0,.3)
        rel()

      h4
        // color             white
        font-size         30px
        // rounded           8px 8px 8px 0
        z-index           0

      h5
        // font-weight       400
        font-size         21px
        padding-bottom    8px
        // color             #848484
        // rounded           0 0 8px 8px
        z-index           1
        i
          // color           white
          color           black

      p
        padding           26px 0 0
        line-height       22px
        borderBox()

        &.note
          font-style      italic

      ul
        padding           28px 0 0

        ul
          padding         18px 0 18px 32px

        li
          line-height     22px
          margin-bottom   5px

      ol
        padding           28px 0 0
        counter-reset     list

        li
          line-height     32px
          counter-increment list

          &:before
            content      counter(list) "."
            font-weight  bold
            margin-right 12px

      &.judges

        margin-top        32px
        padding           0 53px

        > div
          vendor          transform, skewY(-2deg) translateY(-50px)
          margin-top      70px
          width           calc(100% + 106px)
          margin-left     -53px

        .judge
          width           25%
          margin-bottom   32px
          fl()

        figure
          padding-bottom  110%
          bg              position, center center
          bg              size, cover
          bg              repeat, no-repeat

        .info
          text-align      center
          padding         21px 0 0
          font-weight     bold
          line-height     18px

          span
            display       block
            font-weight   normal
            font-size     11px

    aside.partners
      width               232px
      abs                 46px 0px 0 0
      padding             0 42px
      borderBox()

      &:after
        content           ''
        display           block
        abs               0 0 0px -1px
        height            120px
        width             1px
        background-image  -webkit-linear-gradient(#f2f2f2, rgba(255,255,255,0))
        background-image  -moz-linear-gradient(#f2f2f2, rgba(255,255,255,0))
        background-image  linear-gradient(#f2f2f2, rgba(255,255,255,1))

      h4
        margin-bottom   32px

      img
        width             100%
        margin            0 0 30px

  footer
    text-align            center
    line-height           217px
    font-size             14px
    color                 #909090

    a
      color               inherit
      margin-left         3px
      noTextDeco()

      &:hover
        borderize(#909090)

.social-buttons
  display         block
  list-style      none
  padding         0
  margin          0
  abs             0px 125px 0 0
  z-index         16
  opacity         0.01
  vendor          transition, opacity .3s ease
  &.loaded
    opacity       1


  > li
    display       block
    margin        0 13px 0 0
    padding       0
    float         left

    .vhidden
      hidden()

  .socialite
    display block
    position relative


@media only screen and (min-device-height : 680px) and (max-device-height : 820px)
  body.home
    section.introduction
      figure
        vendor            transform, scale(.5)
        bottom            35px


@media only screen and (min-device-height : 0px) and (max-device-height : 680px)
  body.home
    section.introduction
      figure
        display            none


@media only screen and (min-device-width : 320px) and (max-device-width : 480px)
  #main-header .social-buttons
    display               none
  body.home
    section.introduction
      padding             119px 25px 18px
      height              auto

      h2
        font-size         22px
        margin-bottom     16px
        line-height       28px

      h3
        font-size         14px
        line-height       19px

      .form-wrapper
        width             100%
        margin-bottom     10px

        section
          width           100%

          &.logged-in
            margin-top    40px

            .kdlabel a
              margin-bottom 4px

          > div
            width         100%
            margin-bottom 20px

          .submit
            width         100%
            margin-bottom 0

        &.logged-in
          margin-top      85px

    .counters
      height              auto
      position            static
      line-height         28px
      padding             16px 25px
      margin              0
      borderBox()

      span
        margin            0

      span:after
        content           ''
        display           block

    section.content
      padding             32px 0 0

      .counters
        padding           18px 0 0
        height            auto
        line-height       27px
        top               -146px
        borderBox()

        span
          margin-right    0

        span:after
          content         ""
          display         block

      article
        padding           24px

        h4
          font-size       21px
          line-height     26px
          padding         10px 10px 10px 26px

        h5
          font-size       16px
          padding         10px 10 10px 26px

        p
          padding         16px 0 0
          font-size       16px
          line-height     24px

      article.judges
        padding           24px

        > div
          width           100%
          margin-left     0

        .judge
          width           100%

      aside.partners
        position          static
        width             100%
        borderBox()

    footer
      line-height         25px
      padding             60px 25px
      border-top          1px solid #dedede
      background          rgba(0,0,0,.05)

      a[href='/']
        display           block