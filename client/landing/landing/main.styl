@import "../Framework/src/themes/default/kdfn"

body.landing
  bg                        image, none
  bg                        color, #EFEFEF

  #kdmaincontainer.home
    > header
      display               none

  .landingapp-view
    abs()
    top                     0
    left                    0
    bg                      color, #EFEFEF
    z-index                 1

    .page-container
      margin                  0 auto
      padding                 0 15px

    .login:hover
      cursor                pointer

    .invite-button
      font-size             18px
      text-align            center
      line-height           1.33
      border                1px solid transparent
      border-radius         6px
      padding               10px 16px

      &.gmail
        color               white
        bg                  color, #428BCA
        border-color        #357EBA

        &:hover, &:focus
          noTextDeco()
          bg                color, #3276B1
          border-color      #285E8E

        &:active
          shadow            inset 0 3px 5px rgba(0, 0, 0, .125)

        .icon
          blockMid()
          float             none
          size              38px, 38px
          borderBox()
          bg                image, url("../images/landing/gmail.png")
          bg                position, 0 0

@media only screen and (min-width: 768px)
  .landingapp-view
    .page-container
      width                 750px

@media only screen and (min-width: 992px)
  .landingapp-view
    .page-container
      width                 970px

@media only screen and (min-width: 1200px)
  .landingapp-view
    .page-container
      width                 1170px
