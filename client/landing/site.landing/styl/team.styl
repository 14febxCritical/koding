@import "lib/core.fonts"
@import "lib/core.fn"

modalBackground             = #FAFAFA
greenLink                   = #27ae60
dimmedGray                  = #848484

@css {
/*
Team stylesheet
team.styl
*/
}

.main-header.team
  padding                   0 22px
  max-width                 none
  top                       32px
  z-index                   1
  fix()

.content-area-pane.team
  font-family               adelleSans
  bg                        color #111

  &:before
    content                 ''
    bg                      image, url('/a/site.landing/images/unsplash/4.jpg')
    size                    100% 100%
    top                     0
    left                    0
    bg                      size cover
    // opacity                 0.001
    z-index                 0
    vendor                  transition, opacity .3s ease
    fix()

  &:after
    size                    100% 100%
    z-index                 1
    top                     0
    left                    0
    bg                      color, rgba(0,0,0,.6)
    fix()

.content-page.Team
  overflow                  auto
  z-index                   2
  color                     white

  section
    width                   60%
    max-width               600px
    color                   rgba(255, 255, 255, .8)
    margin                  0 auto 100px
    padding                 20px 0
    font-size               14px
    line-height             20px
    text-align              center
    borderBox()

    p
      margin-bottom         10px

    a
      color                 greenLink
      noTextDeco()
    i
      font-weight           bold
      color                 white

  footer
    bottom                  22px
    left                    9px
    z-index                 2
    fix()
    a
      color                 rgba(255, 255, 255, .5)
      margin-left           13px
      font-size             12px

.TeamsModal
  width                     60%
  padding                   31px 44px
  max-width                 553px
  margin                    110px auto 0
  bg                        color modalBackground
  top                       0px
  color                     #434343
  z-index                   3
  rounded                   3px
  text-align                center
  shadow                    inset 0 -102px 0 #EFEFEF
  borderBox()
  rel()

  .login-input-view
    bg                      color white
    font-family             adelleSans

  .login-input-view input.kdinput
    rounded                 1px
    border-color            #DBDBDB
    font-family             adelleSans
    font-size               14px
    padding                 12px 14px 8px

  > form
    margin                  30px auto 0

  .TeamsModal-button
    margin-top              62px

  > h4
    color                   #00B153
    font-family             adelle
    font-size               26px
    line-height             50px
    span
      font-family           adelleSans
      color                 #7F7F7F

  > h5
    font-family             adelleSans
    font-size               20px
    line-height             27px
    width                   361px
    margin                  0 auto

  p
    width                   361px
    margin                  0 auto
    line-height             23px

    &.full
      width                 auto

    a
      color                 greenLink
      noTextDeco()



  .dim
    color                   #9E9E9E

  &.TeamsModal--login
    width                   425px

    > figure
      margin                -67px auto 20px
      size                  64px 64px
      bg                    color #ddd
      bg                    size cover
      bg                    position, 50% 50%
      rounded               13px
      border                3px solid modalBackground

  &.TeamsModal--banned
    > h5
      margin                10px auto 50px
      width                 auto
      a
        font-style          italic
        color               greenLink
        noTextDeco()

    > p
      color                 dimmedGray
      font-style            italic

.TeamsModal-button
  font-family               adelleSans
  rounded                   3px
  size                      100% 40px
  border                    none
  font-size                 14px
  line-height               40px
  text-transform            uppercase
  &.compact
    height                  24px
    font-size               10px
    line-height             16px
    padding                 4px 7px 0

.TeamsModal-button--green
  color                     white
  bg                        color #00B057

.TeamsModal-button--gray
  color                     white
  bg                        color #BDC3C7

.TeamsModal-linkButton
  color                     #929292
  font-size                 14px

.PasswordStrength
  height                    5px
  line-height               5px
  vertical-align            top
  border                    1px solid #dbdbdb
  opacity                   .5
  borderBox()
  rel()
  span
    size                    0% 100%
    bg                      color #EAEAEA
    display                 inline-block
    vendor                  transition, all .177s ease
    abs                     0px 0 0 0px

  &.bad
  &.weak
  &.moderate
  &.good
  &.excellent
    opacity                 1

  &.bad span
    width                   20%
    bg                      color #FF6B5D

  &.weak span
    width                   40%
    bg                      color #FF6B5D

  &.moderate span
    width                   60%
    bg                      color #FBB62B

  &.good span
    width                   80%
    bg                      color #00B057

  &.excellent span
    width                   100%
    bg                      color #00B057

