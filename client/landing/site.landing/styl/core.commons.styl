footer.main-footer
  padding               56px 0
  font-family           openSansFamily
  font-weight           400
  background            #F0F0F0
  border-top            1px solid #E8E8E8

  .inner-container
    max-width           1290px
    padding             0px 45px
    margin              0 auto
    display             block
    position            relative
    borderBox()

  .footer-block
    width               50%
    font-size           0
    borderBox()
    fl()
    &:last-child
      text-align        right

    a
      vertical-align     middle
      font-size          14px
      line-height        22px
      color              #747474
      display            inline
      margin-right       12px
      noTextDeco()

  a.social
    display             inline-block
    margin-right        8px
    size                32px, 32px
    background          #cacaca
    rounded             50%
    text-align          center
    padding             7px 0 0 0
    borderBox()

    &:after
      content           ''
      display           inline-block

    &.tw
      &:hover
        background      #55acee

      &:after
        r-sprite        home 'social-tw'

    &.fb
      &:hover
        background      #3b5998

      &:after
        r-sprite        home 'social-fb'


.SignupForm--middle
  font-family               openSansFamily
  font-size                 22px
  line-height               32px
  margin                    0 auto 50px auto
  max-width                 600px
  padding                   8px
  rounded                   8px
  bg                        color rgba(0,0,0,.1)
  z-index                   10
  rel()

  &.noanim .login-input-view .placeholder-helper
    vendor              transition, none!important
    position            absolute

  section

    a.octo
      size              32px 32px
      r-sprite          home 'octo-home'
      margin            3px 0 0 57px
      opacity           .7
      fl()
      &:hover
        r-sprite        home 'octo-home-white'
      span.title
        hidden()

    > div
      width             calc(50% - 104px)
      padding-right     10px
      rel()
      borderBox()

      &:before
        content         ''
        z-index         10
        abs             12px 0 0 18px

      &:last-child
        padding-right   0

      &.email:before
        r-sprite        home 'input-email'

      &.username:before
        r-sprite        home 'input-username'

      &.password:before
        r-sprite        features 'ide-permissions'
        opacity         0.15

      &.submit
        width               108px
        rounded             3px

      &.submit:after
        content             'OR'
        font-size           12px
        text-transform      uppercase
        color               rgba(0,0,0,.5)
        font-size           12px
        font-weight         700
        padding             0 15px 0 9px
        opacity             .99
        border-right        1px solid rgba(0,0,0,.1)
        abs                 5px 0 0 100%


      .kdbutton.solid.medium
        bg                  color #F6E556
        width               100%
        rounded             4px
        padding             0
        span.button-title
          text-transform    uppercase
          color             #39473E
          font-size         12px
          font-weight       700
          opacity           .99

      .login-input-view
        rounded             4px
        bg                  color white
        margin-bottom       0
        input.kdinput
          rounded           4px
          margin            0
          font-size         14px
          font-weight       400
          font-family       openSansFamily
          text-align        left
          padding           8px 14px 8px 43px
        .placeholder-helper
          text-align        left
          top               4px
          padding           0 15px 0 44px
          borderBox()
          &.out
            top         -32px
            color       white
            &.puff
              opacity   1

