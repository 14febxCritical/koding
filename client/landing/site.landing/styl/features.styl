@import "lib/core.fn"

@css {
/*
Koding features stylesheet
features.styl
*/
}

body.features
  -webkit-font-smoothing antialiased
  #main-panel-wrapper
    bg                        color #f9f9f9
    height                    auto

  #main-header
    max-width                 100%
    top                       0
    padding-left              calc((100% \- 1200px) / 2)
    padding-right             calc((100% \- 1200px) / 2)
    height                    73px
    background                #fff
    position                  fixed
    shadow                    0 1px 16px rgba(0,0,0,.1)

    #koding-logo
      margin-top              25px

      cite
        r-sprite              'app', 'logo-full-dark'

    nav
      line-height             73px

      a
        color                 #6f6f6f

      a.login
        border-color          #bcbcbc

  .content-page.features
    padding-top               73px

    .feature-tabs
      padding-left            calc((100% \- 1200px) / 2)
      padding-right           calc((100% \- 1200px) / 2)

      .tab-handles
        height                110px
        line-height           110px
        text-align            right
        border-bottom         1px solid #e0dcdc

        a
          display             inline-block
          margin-left         54px
          font-weight         600
          font-size           18px
          color               #7b7b7b
          vendor              transition, color .4s ease
          noTextDeco()

          &.active
            color             #27ae60

      .tab-enter
        vendor                animation, tabEnter .4s 1 ease-in

      .tab-leave
        vendor                animation, tabLeave .4s 1 ease-out

      article
        border-bottom         1px solid #e0dcdc
        padding               98px 0 48px
        margin-bottom         100px

        .tab-text
          width               50%
          padding-right       72px
          borderBox()
          fl()

          p
            font-size         16px
            color             #727272
            padding           25px 0 50px
            line-height       24px

          h4
            font-size         22px
            color             #27ae60
            font-weight       600

        .tab-image
          width               50%
          margin-top          20px
          fr()

      .tab-ide .tab-image
        margin-top            -20px


@keyframes tabEnter
  0%
    opacity                   0

  100%
    opacity                   1

@keyframes tabLeave
  0%
    opacity                   1

  100%
    opacity                   0