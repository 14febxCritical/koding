@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"

@css {
/*
About Koding stylesheet
about.styl
*/
}

innerWrapper(innerWidth = 1043px)
  kalc              padding-left, \(100% \- innerWidth\)\/2  // (100px - 1043px)/2
  kalc              padding-right, \(100% \- innerWidth\)\/2  // (100px - 1043px)/2

body.about
  #main-header
    .inner-container
      bg            color, transparent
  #dock
  .account-area
    hidden()
  #koding-logo
    margin              10px
    size                45px 45px
    bg                  color, logoBg
    fl()

    cite
      r-sprite          home 'logo'
      margin            14px
      display           block

.kdtabpaneview.about
  bg                color #f1f3f2

.content-page.about
  max-width         100%
  width             100%
  padding           0

.about-company
.member-list
.press-kit
  h2
    display         block
    font-size       36px
    color           #1aaf5d
    font-weight     400
    letter-spacing  .9px
    word-spacing    -2px

  h4
    display         block
    font-size       36px
    color           #bbd5c7
    font-weight     100
    margin          8px 0 53px
    letter-spacing  1.1px
    word-spacing    -2px

.random-team-member
  size              100%, auto
  max-width         1043px
  margin            0 auto
  padding           142px 0 140px 434px
  min-height        542px
  overflow          visible
  position          relative
  letter-spacing    .9px
  word-spacing      -3px
  borderBox()

  .avatarview
    abs             114px 0 0 16px
    fl()

  section
    .profile
      display       block
      font-size     36px
      font-weight   400
      color         #1aaf5d
      text-transform capitalize
      margin        0 0 10px
      noTextDeco()

    cite
      font-size     36px
      font-weight   100
      color         #8a8a8a
      letter-spacing 1.2px

    article
      font-size     24px
      font-weight   100
      color         #323b3d
      line-height   28px
      margin        42px 0 0 4px
      word-spacing  -3.7px

section.about-company
  size              100%, auto
  min-height        626px
  background        url('/a/images/city.jpg') no-repeat center bottom
  bg                size, cover
  position          relative
  font-size         24px
  color             #fff
  font-weight       100
  letter-spacing    .9px
  innerWrapper()
  borderBox()

  h6
    color           #fff
    opacity         .5
    font-size       18px
    font-weight     100
    margin          0 0 6px

  article
    padding         139px 378px 144px 0
    opacity         .9

    p
      line-height   28px
      word-spacing  -1px

  aside
    abs             180px 106px 0 0
    opacity         .9

    >div
      margin        0 0 41px
      position      relative

      i
        display     block
        top         50%
        vendor      transform, translateX(-51px) translateY(-50%)
        abs()

      &.based i
        r-sprite    "about", "pin"
      &.talents i
        r-sprite    "about", "card"
        left        -2px
      &.lines i
        r-sprite    "about", "lines"
        left        1px

section.member-list
  size              100%, auto
  background        #e3e3e3
  padding-top       94px
  border-bottom     1px solid transparent
  innerWrapper()
  borderBox()

  h4
    color            #8a8a8a

  .kdlistview-team
    kalc             width, 100% \+ 60px
    margin           82px 0 44px -40px

  .kdlistitemview-team
    fl()
    size              180px 290px
    text-align        center
    margin            0 0 0 40px
    letter-spacing    .9px
    word-spacing      -4px

    figure
      margin          0 auto
      size            160px 160px
      display         block

    .avatarview
      size            160px 160px
      display         block

    figcaption
      overflow        visible

    a.profile
      color           #8a8a8a
      font-size       24px
      font-weight     100
      display         block
      margin          28px 0 7px
      white-space     nowrap
      noTextDeco()

    cite
      font-size       16px
      color           #8a8a8a
      letter-spacing  .9px
      word-spacing    1px

section.press-kit
  size                100%, auto
  min-height          542px
  padding-top         112px
  innerWrapper()
  borderBox()

  h4
    color            #8a8a8a
    margin-bottom    68px

  .kdbutton.solid.green
    display          block
    size             327px, 66px
    line-height      66px
    color            #fff
    font-size        18px
    font-weight      400
    background       #1aaf5d
    rounded          12px
    padding          0 0 0 40px
    text-align       left
    margin-bottom    23px

    .icon
      r-sprite       "about", "download"
      padding        0
      margin         0
      abs            17px 24px 0 0

    .title
      color          inherit
      line-height    inherit
      font-size      inherit
      font-weight    inherit
