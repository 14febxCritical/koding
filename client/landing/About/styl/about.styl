@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"

@css {
/*
About Koding stylesheet
about.styl
*/
}

innerWrapper(innerWidth = 1043px)
  kalc              padding-left, \(100% \- innerWidth\)\/2  // (100px - 1043px)/2
  kalc              padding-right, \(100% \- innerWidth\)\/2  // (100px - 1043px)/2

body.about
  -webkit-font-smoothing antialiased

.kdtabpaneview.about
  bg                color #f1f3f2

.content-page.about
  max-width         100%
  width             100%
  padding           0

  > section
    size              100%, auto
    min-height        626px
    borderBox()

    div.wrapper
      padding         112px 0 0
      max-width       1200px
      margin          0 auto
      rel()
      borderBox()

      article
        padding            0 310px 60px 0
        font-size          18px
        line-height        24px

        p
          color            white
          letter-spacing   .2px
          vendor           font-smoothing, antialiased
          vendor           text-rendering, geometricPrecision

        > a

          font-size        14px
          borderize        rgba(255,255,255,.4)
          color            rgba(255,255,255,.5)
          margin-top       18px
          line-height      1
          letter-spacing   0


      aside
        abs()
        top             0
        right           0
        opacity         .9


    h2
      display         block
      font-size       26px
      font-weight     600
      letter-spacing  .1px
      margin-bottom   30px
      color           #515151

    h4
      color           rgba(113,113,113,.5)
      display         block
      font-size       18px
      font-size       18px
      margin          8px 0 53px
      a
        borderize     #8a8a8a

    &.careers
      h4
        color           #8a8a8a
        a
          color         #8a8a8a

    &.about-company
      background        url('/a/images/city.jpg') no-repeat center bottom
      bg                size, cover
      position          relative
      font-size         24px
      color             #fff
      letter-spacing    .9px

      > div.wrapper
        padding-top       139px

        aside
          top             180px
          >div
            margin        0 0 41px
            position      relative

            i
              display     block
              top         50%
              vendor      transform, translateX(-75px) translateY(-45%)
              abs()

            &.based i
              r-sprite    "about", "map"
            &.talents i
              r-sprite    "about", "talent"
              left        1px
            &.lines i
              r-sprite    "about", "box"
              left        6px

      h2
        color           white

      h4
        color           #bbd5c7

      h6
        color           #fff
        opacity         .5
        font-size       18px
        margin          0 0 6px



    &.member-list
      size              100%, auto
      background        #f1f3f2
      border-bottom     1px solid transparent
      h2
        margin-bottom   10px
        span
          font-weight   400
      h4
        rel()
        cite
          abs()
          font-size     16px
          right         0
          bottom        0

      .kdlistview-team
        kalc             width, 100% \+ 90px
        margin           82px 0 44px -40px

      .kdlistitemview-team
        fl()
        size              180px 290px
        text-align        center
        margin            0 0 0 40px

        figure
          margin          0 auto
          size            160px 160px
          display         block
          overflow        hidden

        .avatarview
          display         block
          vendor          filter, grayscale(100%)
          vendor          transition, all .177s ease
          &:hover
            vendor        filter, grayscale(0%)


        figcaption
          overflow        visible

        a.profile
          display         block
          margin          28px 0 7px
          color           #515151
          font-size       18px
          line-height     24px
          font-weight     400
          white-space     nowrap
          noTextDeco()

        cite
          color           #515151
          opacity         .5
          line-height     22px
          font-size       14px
          font-weight     400

    &.press-kit
      background          #e3e3e3
      min-height          542px
      h4
        color            #8a8a8a
        margin-bottom    68px

      .kdbutton.solid.green
        display          block
        size             327px, 66px
        line-height      66px
        color            #fff
        font-size        18px
        font-weight      400
        background       #1aaf5d
        rounded          12px
        padding          0 0 0 40px
        text-align       left
        margin-bottom    23px
        noTextDeco()

        .icon
          r-sprite       about "download"
          padding        0
          margin         0
          abs            17px 24px 0 0

        .title
          color          inherit
          line-height    inherit
          font-size      inherit
          font-weight    inherit

    &.careers
      min-height      306px
