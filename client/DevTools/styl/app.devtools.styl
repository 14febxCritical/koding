@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"

@css {
/*
DEVTOOLS stylesheet
app.devtools.styl
*/
}

body.devtools
  #main-panel-wrapper
    .app-settings-menu
      top      53px
      right    -5px
      opacity  .5

.devtools

  .inner-header

    background    white
    border        none
    border-bottom 1px solid #ccc
    height        35px

    .title
      display     inline-block
      float       left
      padding     11px
      font-weight 500
    .users
      display     none

  .tw-header-buttons
    .kdbutton
      margin-top  7px

  .inner-split
    .panel-1
      border-left   1px solid #ccc

      .ws-container
        margin-top  20px

    .ws-header.inner-header
      width         100%
      height        20px
      padding       3px
      text-align    right
      padding-right 10px
      background    #efefef
      abs()

      .inline-info
        left        -50px
        top         0
        size        auto, 20px
        padding     3px
        background  green
        color       white
        vendor      transition, left .2s ease-in
        abs()

        &.in
          left      0

  .editor-split
    .panel-1
      border        none
      border-top    1px solid #ccc

      .ws-container
        margin-top  0

  .devtools-editor

    .CodeMirror
      margin-top    20px
      font-size     12px
      line-height   16px
      font-family   'Monaco', 'monospace'

      .CodeMirror-activeline-background
        background  rgba(0,0,0,.05)

  .compiler-modal

    background       #333
    color            white

    .kdmodal-inner
      background     #333
      .kdmodal-title > span
        color        white

    pre
      font-family    monospace
      font-size      12px

  .error-pane

    background       white
    width            400px
    height           auto
    padding          10px
    margin           40px auto
    border           1px solid #ccc
    border-radius    3px

    h1
      font-weight    400
      border-bottom  1px solid #ccc
      margin-bottom  10px
      padding-bottom 10px

    pre
      font-family    monospace
      font-size      12px
      overflow       auto

    .stack
      h2
        text-align   right
        font-size    12px
        border-top   1px solid #eee
        margin-top   10px
        padding-top  4px
        color        darkblue
        cursor       pointer

      pre
        display      none
        background   #eee
        padding      4px
        margin-top   10px

    &.in
      .stack
        pre
          display    block
        h2
          display    none

  .kdsplitview-resizer
    opacity     .05
    &:hover
      opacity   .1

  .kdbutton.solid

    height        22px
    padding       0 5px
    font-weight   300

    &.live
      background  white
      border      1px solid #ddd
      .button-title
        color     #999

    .button-title
      line-height 22px
      font-size   12px