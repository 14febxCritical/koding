@import "../../Framework/src/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"

@css {
/*
home Landing stylesheet
home.styl
*/
}

body.home
  -webkit-font-smoothing  antialiased
  background              #fff
  font-family             asapFamily

  .content-page.home
    padding               0
    max-width             100%

  section .inner-container
    max-width             1290px
    padding               0px 45px
    margin                0 auto
    display               block
    position              relative
    borderBox()

    .kdbutton .button-title
      font-family         asapFamily

    a:hover
      text-decoration     underline !important

    h3.general-title
      font-size           32px
      text-align          center
      display             block
      color               #2fbd72
      font-weight         700
      letter-spacing      .02em

    h4.general-subtitle
      font-size           22px
      text-align          center
      display             block
      color               #747474
      font-weight         400
      margin              12px 0 84px

    p
      font-family         openSansFamily


  //Introduction section

  section.introduction
    padding               90px 0 382px
    text-align            center
    bg                    color, #505050
    bg                    image, url("/a/images/home-pat.png")
    position              relative
    text-shadow           0 1px 0 rgba(0,0,0,.6)

    &:after
      content             ""
      display             block
      size                100vw, 3px
      abs                 0 0 0px 0
      bg                  image, url("/a/images/wave-bg.png")
      bg                  repeat, repeat-x

    article
      font-size           22px
      line-height         32px
      font-weight         400
      padding             58px 0 0
      width               100%
      borderBox()
      fl()

      h2
        font-weight       700
        font-size         34px
        margin            0 0 17px
        color             #fff
        letter-spacing    .02em

      p
        margin            0 0 50px
        color             #fff

      .kdbutton
        text-transform    uppercase
        width             190px
        rounded           4px

        .button-title
          color           inherit !important

        &.green
          bg              color, #fff
          margin-right    9px
          color           #071d11

          &:hover
            bg            color, #d7d7d7
            color         #071d11

        &.thin-white
          bg              color, transparent
          border          2px solid #a2f1ca
          color           #a2f1ca

          &:hover
            bg            color, #a2f1ca
            color         #071d11


  // screenshots Section

  section.screenshots
    margin                20% 0 26%

    .inner-container
      &:after
        content           ""
        display           block
        size              100%, 80px
        abs               0 0 1px 0px
        bg                image, url("/a/images/screenshots-shadow.png")
        bg                position, center bottom
        bg                repeat, no-repeat
        bg                size, contain
        z-index           2


    figure
      display             block
      bottom              0px
      rounded             6px 6px 0 0
      overflow            hidden
      abs()

      img
        width             100%

      &.first
        z-index           4
        left              50%
        width             65%
        vendor            transform, translateX(-50%)

      &.second
        z-index           3
        width             58%
        left              7%

      &.third
        z-index           3
        width             58%
        right             7%


  // Features Section

  section.features

    .feature
      size               50%
      padding            0 35px 34px 108px
      position           relative
      borderBox()
      fl()

      h5
        font-size        20px
        font-weight      400
        color            #2fbd72
        display          block
        margin-bottom    10px

      p
        font-size        14px
        color            #505050
        line-height      21px

      .icon
        display          block
        size             80px, 80px
        rounded          50%
        background       #ddd
        abs              0px 0 0 0px

  //Testimonials section
  section.testimonials
    margin-top           63px
    padding              63px 0 40px
    border-top           1px solid #e6e6e6

    article
      width              49%
      position           relative
      font-family        openSansFamily
      padding            2px 0 32px 69px
      border-bottom      2px solid #f1f1f1
      margin-bottom      26px
      borderBox()
      fl()

      &:nth-child(2n)
        margin-left       2%

      &:after
        content           ""
        display           block
        abs               0 1px 0px 0
        size              2px, 20px
        background        #f1f1f1

      &:before
        content           ""
        display           block
        r-sprite          "business", "quote"
        abs               0px 0 0 0px

      &:nth-last-child(1)
      &:nth-last-child(2)
        border-bottom     none

        &:after
          display         none

      h4.general-subtitle
        margin-bottom     76px

      p
        font-size         16px
        line-height       22px
        color             #6d6d6d
        font-size         16px
        font-weight       600

      .name
        font-size         13px
        color             #6d6d6d
        font-weight       400
        text-decoration   uppercase
        display           block
        margin            14px 0 0 28px
        position          relative

        &:before
          content         ""
          display         block
          size            17px, 1px
          background      #b5b5b5
          abs             6px 0 0 -28px

  footer
    padding               56px 0
    font-size             13px
    font-weight           400
    background            #2c3134
    font-family           openSansFamily

    .footer-block
      width               25%
      borderBox()
      fl()

      a
        color              #b3b3b3
        display            block
        noTextDeco()

      h5
        margin             0 0 6px 0
        color              #858585

    .about-koding
      h5
        font-weight        600
        color              #c5c5c5

      p
        padding-right      72px
        margin             2px 0 4px 0
        line-height        18px
        color              #838485
        borderBox()

      a
        color              #525658
        text-decoration    underline

    nav
      a
        line-height        22px

    cite
      display             block
      clear               both

    address
      clear                both
      display              block
      text-align           center
      margin               50px auto 0 auto
      padding              25px 0 0
      font-size            14px
      color                #b3b3b3
      position             relative

      &:before
        content           ""
        display           block
        size              80%, 1px
        background-image  -webkit-linear-gradient(left, rgba(59, 64, 67, 0) 0%, rgba(59, 64, 67, 1) 10%, rgba(59, 64, 67, 1) 90%, rgba(59, 64, 67, 0) 100%)
        abs               0px 0 0 50%
        vendor            transform, translateX(-50%)

    .we-love-you
      display             block
      text-align          center
      color               #7b7d7e
      font-size           14px
      font-weight         200
      margin              4px 0 0

    .social-links
      display             block
      text-align          center
      margin              30px 0 0
      word-spacing        5px

      a
        color             #838485
        font-size         13px
        font-weight       400
        noTextDeco()

