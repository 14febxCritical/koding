@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"

@css {
/*
Home Page stylesheet
home.styl
*/
}

proximaFamily   = 'Proxima Nova', 'Helvetica Neue', Helvetica, Arial
openSansFamily  = 'Open Sans', 'Proxima Nova', 'Helvetica Neue', Helvetica, Arial
logoBg          = #1aaf5d
homeHeaderBg    = #e3e3e3
headerLinkColor = #3e4446
bgColor         = #202527
teamworkColor   = #f2c500
socialColor     = #2d97de
footerLinkColor = #a8a8a8
footerBg        = #222627

body.intro
  bg                    color, bgColor

span.intro-marker
  vendor          transform, scale(0)
  rounded         26px
  display         block
  size            52px 52px
  left            0
  top             0
  bg              color rgba(26, 175, 93, .2)
  // shadow          0 0 2px 10px
  overflow        hidden
  border          2px solid logoBg
  cursor          pointer
  z-index         1000
  -webkit-transition -webkit-transform .3s cubic-bezier(0.68, -0.55, 0.265, 1.55)
  -moz-transition    -moz-transform .3s ease
  transition         transform .3s cubic-bezier(0.68, -0.55, 0.265, 1.55)
  borderBox()
  abs()
  i
    rounded       13px
    display       block
    size          26px 26px
    margin        11px auto
    bg            color logoBg
  &.in
    vendor        transform, scale(1)


#home-header
  margin                0
  size                  100% 65px
  z-index               1000
  overflow              visible
  visibility            visible
  shadow                0 3px 0 rgba(0, 0, 0, .15)
  rel()

  .inner-container
    bg                  color, homeHeaderBg
    size                100%, 65px
    vendor              transform, translateY(0)
    -webkit-transition  -webkit-transform .2s ease
    -moz-transition     -moz-transform .2s ease
    transition          transform .2s ease

  a.login
    font-size           14px
    line-height         25px
    margin              20px
    font-weight         400
    color               headerLinkColor
    noTextDeco()



#home-page
  height                auto

  .logo
    margin              10px
    size                45px 45px
    bg                  color, logoBg
    fl()

    cite
      sprite            home 'logo'
      margin            14px
      display           block

  #home-bottom
  main
    padding-top         70px
    background          url('/a/images/home/photo-small.jpg') no-repeat center center
    background-size     cover
    size                100% 630px
    border-bottom       3px solid logoBg

  #home-bottom
    margin-top          -660px
    background          url('/a/images/home/photo-large.jpg') no-repeat center center
    padding-top         730px
    size                100% 1160px
    border-bottom       none
    borderBox()
    h2
      margin-bottom     30px
    h3
      margin-top        0

  h1, h2, h3
    text-align          center
    text-shadow         1px 1px 0 rgba(0, 0, 0, .6)
    font-weight         300

  .big-header
    font-family         proximaFamily
    color               logoBg
    font-size           36px
    line-height         60px
    font-weight         400

  h2
    font-family         openSansFamily
    color               white
    line-height         40px
    font-size           24px
    margin-bottom       60px

  h3
    color               #d2d2d2
    font-size           18px
    line-height         30px
    margin-top          40px
    a
    a:visited
      color             #d2d2d2
      noTextDeco()
      &:hover
        color           #fff

    span
      sprite            home 'right-arrow'
      display           inline-block
      margin            0 0 -3px 10px
    strong
      font-weight       500
      font-family       OpenSans

  form
    size                710px 55px
    margin              0 auto

    .kdinput
      border            1px solid #e6e6e6
      shadow            3px 3px 5px rgba(0, 0, 0, .31)
      text-align        center

    .login-input-view
      display           inline-block
      width             275px
      margin-right      15px

      &.validation-error
        input.kdinput.text
          border          1px solid #e79a8f
        // .placeholder-helper
        //   color           #e79a8f
        .validation-icon
          sprite          app 'login-validation-fail'
          opacity         1

    .validation-icon
      abs()
      right               10px
      top                 11px
      vendor              transition, opacity .15s ease-out
      opacity             0
      z-index             2

  figure.laptop
    background          url('/a/images/home/laptop.png') no-repeat center center
    background-size     cover
    size                1207px 739px
    margin              -260px auto 0
    overflow            hidden
    rel()

    section
      size              919px 588px
      margin            39px auto

      &.teamwork
        background      transparent url('/a/images/home/teamwork.jpg') no-repeat 0 0
        background-size cover

  footer
    rounded             8px 8px 0 0
    font-size           14px
    line-height         23px
    color               footerLinkColor
    bg                  color footerBg
    max-width           1280px
    margin              0 auto
    padding             45px
    margin-top          -200px

    .logo
      margin            0 17px 0 0

    address
      overflow          hidden
      width             auto

    nav
      fr()
      a
        display         inline-block
        color           footerLinkColor
        line-height     45px
        font-size       16px
        margin-left     16px
        noTextDeco()
        &:hover
          color         white


#home-features
  max-width             984px
  margin                60px auto
  // padding-bottom        60px
  rel()

  > div
    width               33%
    rel()
    fl()

    span.icon
      size              100px, 100px
      bg                color, red
      margin-right      28px
      fl()

    article
      width             auto
      display           block
      overflow          hidden
      font-size         14px
      line-height       1.6
      color             #9e9e9e
      kalc              width, 100% \- 148px
      h4
        font-family     proximaFamily
        font-weight     300
        letter-spacing  1px
        font-size       22px
        line-height     1
        margin-bottom   10px

    &.appstore
      span.icon
        sprite          home 'appstore'
      h4
        color           logoBg

    &.teamwork
      span.icon
        sprite          home 'teamwork'
      h4
        color           teamworkColor

    &.social
      span.icon
        sprite          home 'social'
      h4
        color           socialColor


#home-groups

  bg                    color, homeHeaderBg
  padding               100px 0

  h2, h3
    text-shadow         none
    line-height         1

  h2
    font-size           38px
    margin-bottom       30px

  h3
    font-family         openSansFamily
    color               #686868
    font-size           24px
    margin-top          40px

  figure.browser
  figure.education
    background-size     cover
    overflow            hidden
    rounded             4px

  figure.browser
    background          url('/a/images/home/group.jpg') no-repeat center center
    size                1053px 714px
    margin              80px auto 100px
    shadow              0 20px 50px rgba(0, 0, 0, .5)
    rel()

  figure.education
    background          url('/a/images/home/classroom.jpg') no-repeat center center
    size                1280px 1055px
    margin-top          500px
    margin-left         -640px
    left                50%
    shadow              0 5px 16px rgba(0, 0, 0, .47)
    abs()

  .group-features
    max-width           1053px
    margin              0 auto

    rel()

    > div
      width             33%
      rel()
      fl()

      span.icon
        size            100px, 100px
        margin-bototm   28px
        display         block
        margin          0 auto

      article
        color             homeHeaderBg
        font-family       openSansFamily
        width             auto
        display           block
        font-size         15px
        line-height       1.5
        padding           40px
        font-weight       300
        borderBox()
        h4
          color           white
          font-family     proximaFamily
          font-weight     300
          letter-spacing  1px
          font-size       18px
          line-height     1
          margin-bottom   10px

      &.white-label
        span.icon
          sprite          home 'group-of-people'

      &.school
        span.icon
          sprite          home 'post-head'

      &.project
        span.icon
          sprite          home 'text-balloons'

  .kdbutton.pricing
    display               block
    margin                100px auto
    size                  494px 92px
    bg                    color logoBg
    text-align            left
    rounded               10px

    span.button-title
      text-align          left
      font-family         openSansFamily
      font-size           20px
      line-height         1.4
      letter-spacing      1px
      margin-left         90px
      font-weight         300
      display             block
      cite
        display           block
        color             homeHeaderBg
        // font-weight       300

    span.icon.dollar
      margin              0
      padding             0
      sprite              home 'dollar'
