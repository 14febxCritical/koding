.activity-input-widget
  .link-embed-box
    margin                  18px 0 0
    rounded                 5px
    position                relative
    borderBox()

  .embed-link-view
    margin                  0
    border                  none

  .embed-image-view
    margin                  0 0 -18px
    border                  none

    &:after
      content               ""
      display               block
      size                  38px 38px
      rounded               0 0 0 60%
      bg                    color rgba(255, 255, 255, .6)
      top                   0
      right                 0
      abs()

  .embed-link-view
    padding                 0

  .preview-image
    rounded                 5px 0 0 5px
  .preview-text
    rounded                 0 5px 5px 0

