}


.feeder-header
.common-inner-nav
.system-message
.activity-status-context
// .comment-container.no-comment
  display               none

.content-page.activity
  max-width             1165px
  min-height            1000px
  margin                105px auto
  padding               0
  position              relative

  .activity-left-block
    size                  auto, auto
    margin                0 337px 0 0

    .filter-warning

      background        rgba(37, 46, 48, 1.0)
      width             calc( 100% \- 10px)
      padding           10px 0 10px 10px
      margin            25px 0 10px 0
      border-radius     2px
      color             #89A5A8

      .goback-button
        right           10px
        top             8px
        sprite          app '20-close-tab'
        border          none
        abs()

    .input-wrapper
        size              auto auto
        margin            0 0 0 100px

      .input-view
        color             #9D998E
        border            none
        border-top        1px solid #CDCCC2
        rounded           3px
        borderBox()

        > div
          size            100% auto
          line-height     16px
          font-size       16px
          padding-left    20px
          color           #536067
          padding         22px
          background      white
          vendor          transition, height .2s ease
          borderBox()

        &.placeholder
          > div
            color         #9D998E

      button[type=submit]
        height          44px
        bottom          10px
        right           6px
        abs()
        z-index         1
        span.button-title
          line-height   44px

    .activity-content
      size              auto, auto
      margin            0 0 0 100px
      font-size         16px
      overflow          visible

      .kdview
        overflow        visible

  .activity-right-block
    .activity-ticker
    .online-users
    .active-users
    .active-topics
      .listview-wrapper
        .kdscrollview
          height        250px
          overflow      auto

      .kdlistitemview-activity-ticker-item
      .friend
        height          42px
        border-top      1px solid #eeeef2
        .avatarview
          margin        8px 14px 8px 0
          fl()

        .action
        .friend-name
          line-height   42px
          color         #485259
          font-size     12px
          font-weight   200
          fl()

          a
            font-weight   400
            color         #485259
            noTextDeco()

      .friend
        cursor            pointer
        i
          size            10px, 10px
          border-radius   100%
          background      #cfcfcf
          margin          17px 6px 0 0
          fr()

        &.online
          i
            background    #2eb398

    .online-users
    .active-users
      .kdlistitemview-activity-ticker-item
        .profile
          size          135px, 42px
          font-weight   400
          color         #485259
          noTextDeco()
          line-height   42px
          color         #485259
          font-size     14px
          text-transform capitalize
          overflow      hidden
          white-space   nowrap
          text-overflow ellipsis
          fl()

    .active-topics
    .active-users
      .ttag
        size            170px, 42px
        font-weight     400
        color           #485259
        noTextDeco()
        line-height     42px
        color           #485259
        font-size       14px
        text-transform  capitalize
        overflow        hidden
        white-space     nowrap
        text-overflow ellipsis
        fl()

      .follow-btn
        size          85px, 26px
        padding       0
        text-align    center
        margin        8px 0 0
        vendor        transition, opacity .2s ease
        fr()

        &.following-account
          opacity     .5

        span
          font-size   12px
          line-height 26px

    .show-all-link
      display         block
      text-align      center
      padding         10px 0
      margin          14px -23px -10px -18px
      border-top      2px solid #eeeef2
      font-size       14px
      color           #79868d
      noTextDeco()


span.collapsedtext
  borderBox()
  vendor              transition, font-size .2s linear
  a.more-link
  a.less-link
    font-size         11px
    font-weight       400
    // padding           0 5px
    margin-left       5px
    color             linkColor1
    vendor            transition, font-size .2s linear
    // bg                color, linkColor1
    // rounded           8px

  &.hide
    font-size         0!important
    *
      visibility      hidden
      display         none
    a.more-link
      font-size       11px!important
      visibility      visible
      display         inline

  &.show
    a.more-link
      font-size       0
      margin-left     0
      padding         0



/* Activity items */
.activity-item
  background      #fff
  rounded         3px
  overflow        visible
  position        relative
  margin          30px 0 0 0
  borderBox()

  &:nth-child(1)
    margin-top    37px

  a.ttag
    color         #3aaaab
    noTextDeco()
    span:before
      content     '#'


  .activity-settings-menu
    fr()

  .author-avatar
    display       block
    size          86px, 86px
    rounded       3px
    top           0
    right         100%
    margin        0 14px 0 0
    abs()

  .profile
  .status-body
    word-break    break-word
    display       block
    color         rgba(80, 89, 90, .8)
    font-weight   400

  .status-body
    padding       9px 21px 0
    line-height   22px

  >.profile
    color         #50595a
    font-weight   500
    padding       20px 21px 0
    noTextDeco()

  footer
    size          100%, 42px
    rounded       0 0 3px 3px
    bg            color, #f7f7f7
    border-top    2px solid #e4e4e4
    margin        22px 0 0 0
    borderBox()

    time
      width       auto
      line-height 41px
      font-size   12px
      color       #b3b1ab
      padding     0 22px 0 0
      fr()

    .activity-actions
      width       auto
      fl()

    .action-link
    .comment-icon
    .share-icon
      margin-top      1px
      size            20px, 20px
      display         inline-block
      vertical-align  text-top

      &.like-icon
        sprite        activity, like-icon

      &.comment-icon
        sprite        activity, comment-icon

      &.share-icon
        margin-top    0
        sprite        activity, share-icon

    .action-container
      size            auto, 20px
      margin          10px 0 0 22px
      fl()

      &.liked .like-icon
        sprite        activity, like-icon-liked

    .count
      display         inline-block
      color           #8f8f85
      font-size       14px
      margin          0 0 0 12px
      noTextDeco()

  .comment-container.commented
    border-top        2px solid #e9e7e1

    .show-more-comments
      size            auto, 55px
      line-height     55px
      bg              color, #aab5bc
      text-align      center
      margin          -2px 0 0 0

      a
        display       block
        width         auto, 55px
        color         #fff
        font-weight   400
        font-size     14px
        noTextDeco()

  .kdlistitemview-comment
    padding           20px 22px 16px 20px
    borderBox()

    .avatarview
      size            43px, 43px
      top             20px
      left            20px
      abs()

    .comment-contents
      size            auto, auto
      margin          0 0 0 61px
      font-size       14px  !important
      font-weight     400   !important
      color           #50595a

      .profile
        display       inline-block
        color         #50595a
        font-weight   500
        margin        2px 0 10px 0
        noTextDeco()

      .comment-body
        word-break    break-word
        line-height   16px

      .like-view
      .reply-link
      time
        font-size         12px
        display           inline-block
        margin            14px 0 0
        width             auto

      .like-view a
      .reply-link
        color           #8e9798
        noTextDeco()

        &.count
          display       inline-block
          margin        0 0 0 9px
          font-weight   500

      .like-view.liked a
        color           #525e5f

      time
        fr()
        opacity         0
        vendor          transition, opacity .2s ease
        color           #a5acad

    &:hover
      time
        opacity         1

    &~.kdlistitemview-comment
      padding-top       0

      .avatarview
        top           13px

      .comment-contents
        padding-top   13px
        border-top    1px solid #eeeeef

  .item-add-comment-box
    bg            color, #f7f7f8
    border-top    2px solid #e4e4e4
    padding       20px 16px 20px 20px
    borderBox()

    .avatarview
      size        43px, 43px
      display     block
      left        20px
      top         20px
      abs()

    .item-add-comment-form
      size        auto, auto
      margin      0 0 0 43px

      textarea
        size        100%, 43px
        border      1px solid #d1d3d3
        // border-left none
        box-shadow  none
        background  #fff
        line-height 24px
        padding     9px 9px 8px 17px
        color       #50595a
        font-size   14px
        rounded     0
        vendor      transition, line-height .2s ease
        borderBox()

        &::-webkit-input-placeholder
          color     #50595a
        &::-moz-placeholder
          color     #50595a

        &:focus
          line-height     24px

  /* Embed Styles */
  .embed-image-view
    margin                20px 0 -22px
    border-top            2px solid #e4e4e4

    a
    img
      display             block
      margin              0
      padding             0

  .embed-link-view
    padding               20px 20px 0
    margin                20px 0 0
    border-top            2px solid #e4e4e4

    .preview-image
      size                144px, 100px
      fl()

      &+.preview-text
        kalc              width, 100% \- 144px
        padding           0 0 0 15px

    .preview-text
      font-size           14px
      font-weight         300
      color               #50595a
      borderBox()
      fl()

      .preview-text-link
        color             inherit
        display           block
        word-break        break-word
        noTextDeco()

        .preview-title
          font-weight     400

        &.description
          padding         15px 0

          .description-input
            width         100%
            margin        15px 0 0 0

      .provider-info
        font-size       12px
        color           #a9aeaf




/* Activity and profile right block's box style */

.profile-right-block
.activity-right-block
  right               0
  top                 0
  borderBox()
  abs()

  .right-block-box
    size                auto, auto
    background          #fff
    border-radius       6px
    margin              0 0 29px 0
    padding             20px 23px 10px 18px
    borderBox()

    &~.right-block-box
      margin-top        29px

    h3
      display         block
      padding         0 0 0 3px
      font-size       16px
      font-weight     500
      color           #485259
      margin          0 0 13px 0

  &.activity-right-block
    size                302px, auto

  &.profile-right-block
    size                336px, auto
    top                 35px

    .right-block-box
      padding           22px 22px 0




//
// Profile avatar change styles
//

.avatar-container
  .kdmodal-content
    overflow              hidden!important

.avatar-menu
  overflow                visible
  z-index                 10001
  &.dark

    color                 #bebebe
    strong
      color               #bebebe
      text-shadow         0 1px 0 #000
      font-weight         normal !important
      font-size           11px !important

    .kdlistview-contextmenu
      box-shadow          0px 5px 10px rgba(0,0,0,0.5)
      border              1px solid #454545
    .kdlistview
      gradient            #676767, #5f5f5f

    .kdbutton
      height              24px
      gradient            #464646, #1c1c1c
      color               #9e9e9e
      text-shadow         0 1px 0 #000
      border-top-color    #292929
      border-left-color   #313131
      border-right-color  #313131
      border-bottom-color #1f1f1e

      &.icon-only
      &.cancel
        text-shadow       none
        border-radius     5px
        width             60px!important
        border            1px solid #4b4b4b
        gradient          #757575, #585858
        font-weight       normal

      &:active
        vendor box-shadow, inset 0 0 5px 2px #000, 0 1px 0 0 #313131;

      &:focus
        border            none
        outline           none

  .kdlistview
    background-color      #fff !important

  .kdlistitemview
    overflow              visible
  .avatar-change-menu
    overflow              visible

    .arrow
      abs                 5px 0 0 -5px
      size                0px 0px
      border-top          5px solid transparent
      border-bottom       5px solid transparent
      border-right        5px solid #454545
      z-index             10

    .wrapper
      overflow            hidden
      height              20px
    .avatar-button
      height              19px
      box-shadow          0px 1px #7b7b7b
      font-weight         normal
      line-height         10px
      border-radius       15px
      min-width           97px
      margin              0 3px

      &.icon-only
        width             20px !important
        min-width         20px
        gradient          #5e5e5e, #464646

        .icon
          kdfsprite()
          size          15px, 15px
          &.okay
            bg            position,-84px -504px
          &.cross
            bg            position,-83px -483px

      &.cancel
        min-width         45px !important
        float             right
        padding           0
        margin-right      5px
        width             auto !important
        color             #3f3f3f
        box-shadow        none

      &.confirm
        float             right

    .avatar-holder
      box-shadow          inset 0px 25px 10px -20px rgba(0, 0, 0, 0.5),
                          inset 0px 7px 20px -10px rgba(0,0,0,0.5),
                          0 7px 20px -7px rgba(0,0,0,0.8)
      vendor              transition-duration, 200ms
      overflow            hidden
      border-radius       0 0 5px 5px
      background          #ededed
      abs                 26px, 0, 0, 5px
      size                300px, 0px
      opacity             0.6
      &.opened
        opacity           1
        height            300px
        &.wide
          height          225px
          video
          canvas
            width         300px
            abs           0px

      .webcam-tip
        background        transparent url(/images/photo.png) center 40px no-repeat
        text-align        center
        color             #676767
        cite
          display         block
          font-style      normal
          font-size       14px
          margin-top      150px
          padding         0 50px

      .take-photo
        position          absolute
        z-index           2
        top               210px
        left              50%
        margin-left       -18px
        margin-top        -35px
        width             35px
        height            35px
        text-indent       -9999px
        background        url(/images/take-photo.png)
        vendor            transition-duration, 400ms

        &:hover
          vendor          transform, rotate(270deg) scale(1.2)

      .avatarview
        background-size   auto 300px
        box-shadow        inset 0px 7px 20px -10px rgba(0,0,0,0.5),
                          0 7px 20px -7px rgba(0,0,0,0.8)

      .file-droparea
        background        url(/images/drag.png) center 90px no-repeat
        &.hover
          box-shadow      inset 10px 10px 0px #e4d4be, inset -10px -10px 0px #e4d4be
          .file-drop
            content       "Drop your avatar here"
        .file-drop
          font-weight     normal
          font-size       14px
          color           #676767
          top             170px

    .avatar-change-header
      .kdloader
        float             right
        margin-right      10px
        margin-top        2px
      button
        outline           0

      strong
        font-size         14px
        font-weight       bold
        margin-left       5px
        line-height       20px

        &.loading
          padding-left    15px
          background      url(/images/small-loader.gif) left center no-repeat


.kdwebcamview
  width             auto
  height            auto
  display           inline-block
  background-color  #000

  video
    abs             0px 0 0 0px
    z-index         2
    width           100%
    vendor          transition-duration, 2s
    &.invisible
      opacity       0

  .snap-button
    abs             0 0px 0px 0
    z-index         1
    height          35px
    background-color #444
    color           #ff9200
    rounded         5px
    margin          10px
    kalc            width, 100% \- 20px, !important
    opacity         0.8
    font-weight     bold
    border          2px solid #333
    &:hover
      opacity       0.9

    &.save
      kalc            width, 50% \- 15px, !important
      background-color green
      color           #fff

    &.retake
      kalc            width, 50% \- 15px, !important
      abs             0 0 0px 0px

.kdwebcamview-flash
  abs               0px 0 0 0px
  z-index           10002
  background-color  #ffffff
  opacity           0.95
  &.flashed
    vendor        transition-property, opacity
    vendor        transition-duration, 500ms
    opacity       0



/** Markdown Styling **/
p.status-body

  /* Headings */
  h1, h2, h3, h4, h5, h6
    color         #50595a
    font-weight   600
    margin        0 0 12px
  h1
    font-size     22px
  h2
    font-size     20px
  h3
    font-size     18px
  h4
    font-size     16px
  h5
    font-size     14px
  h6
    font-size     12px

  /* Lists */
  ol,ul
    padding               0 25px 12px
    list-style            none
    display               block
    position              relative
    li
      position            relative
    li:before
      color               #c4c4c9
      left                -20px
      abs()
  ol
    counter-reset         i 0
    li:before
      content             counter(i)
      counter-increment   i
  ul
    li:before
      content             "\2022"
      font-size           20px

  /* Paragraphs and other text */
  p
    padding               0 0 12px
  em
    font-style            italic
  strong
    font-weight           600
  a
    color                 inherit
  hr
    height                1px
    background            #c4c4c9
    border                none










