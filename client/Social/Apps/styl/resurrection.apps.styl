@import "../../../Framework/themes/default/kdfn"
@import "../../../Main/styl/appfn"
@import "../../../Main/styl/app.fonts"

@css {
/*
Activity stylesheet
resurrection.apps.styl
*/
}

.app-details
  overflow-x      hidden

.app-logo

  color           white
  padding         55px
  font-size       22px
  margin-top      20px
  width           37px
  height          27px

  border-top-left-radius      2px
  border-bottom-left-radius   2px

  .logo
    border        1px solid #eee
    border-radius 2px
    padding       4px 10px 4px 10px


.app-info

  top             20px
  background      white
  left            147px
  padding         20px
  height          97px
  width           600px
  overflow        scroll
  abs()

  h3
    display         block
    font-size       14px
    line-height     14px
    margin          0 0 10px 0

    a
      color           #333
      font-weight     bold
      display         inline-block
      text-decoration none

  h4
    font-size       11px
    color           gray
    margin-top      -8px

  article
    color                 #353535
    font-size             13px
    line-height           1.5
    margin-top            5px
    overflow              scroll

.installerbar

  background-color #545454
  width            220px
  height           136px
  color            white
  top              21px
  right            0
  border-bottom-left-radius   3px
  border-bottom-right-radius  3px
  abs()

  .action-buttons
    bottom                     0
    left                       0
    width                      100%
    height                     32px
    abs()

    .kdbutton
      border                     none
      font-size                  13px
      color                      #fff
      height                     32px
      abs()

    .kdbutton.run
      background                 #37b298
      text-align                 left
      padding-left               12px
      border-bottom-left-radius  3px
      border-bottom-right-radius 3px
      left                       0
      width                      100%
      abs()

    .kdbutton.delete
      z-index                    1
      right                      0
      background                 #BA4B3A
      border-bottom-right-radius 3px
      width                      70px

    .kdbutton.approve
      z-index                    2
      right                      70px
      background                 #1FCE6E
      width                      85px

  .versionstats
    font-size                  12px
    padding                    10px
    line-height                20px

.content-page.appstore.singleapp
  padding-top                  0