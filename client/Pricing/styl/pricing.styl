      i
        z-index       1
        display       block
        top           50%
        left          50%
        margin-top    -1px
        margin-left   -20px
        size          40px 2px
        bg            color #cacaca
        abs()
        &:last-child
          margin-left -1px
          margin-top  -20px
          size        2px 40px




  .kdloader
