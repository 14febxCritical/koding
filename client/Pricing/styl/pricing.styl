.content-page.pricing
  margin                55px auto 0
  width                 auto
  max-width             100%
  padding               0

  h3.pricing-title
    text-align          center
    display             block
    font-size           28px
    font-weight         200
    color               #666666
    margin              56px 0 4px

  h6.pricing-subtitle
    text-align          center
    display             block
    font-size           18px
    font-weight         400
    color               #666666
    opacity             .5
    margin-bottom       55px

.content-page.pricing .resource-pack-plan
  size                  100% auto
  padding               150px 0 84px
  margin-top            -100px
  background            url('/a/images/home/speedometer.jpg') no-repeat center center
  background-size       cover

  .inner-container
    max-width           1091px
    margin              0 auto

    >p
      text-align        center
      font-size         28px
      color             #dfdfdf
      font-weight       200
      line-height       38px
      margin-bottom     84px

      a
        font-weight     400
        color           #1aaf5d
        border-bottom   1px solid #1aaf5d
        padding-bottom  2px
        noTextDeco()

      strong
        font-size       20px
        color           #a0a0a0
        display         block

  .plan-selection
    rel()
    size                380px 204px
    border-top          1px solid transparent
    rounded             12px 0 12px 12px
    margin              0 auto
    overflow            visible
    background          #27ae60
    vendor              transform, translateX(-85px)

    h6
      font-size         24px
      font-weight       400
      color             #fff
      margin            32px 0 0 34px
      display           block
      width             100%

    .resource
      color             #135830
      font-size         15px
      font-weight       500
      line-height       25px
      margin-left       22px
      margin-top        24px
      border-top        1px solid transparent
      fl()

      &.disk
        min-width       88px

      &:first-of-type
        margin-left     34px

      i
        margin-right    12px
        fl()

      &.cpu i
        r-sprite        "home", "cpu"

      &.ram i
        r-sprite        "home", "ram"

      &.disk i
        r-sprite        "home", "disk"
        margin-top      3px

      &.always-on i
        r-sprite        "home", "alwayson"
        margin-top      6px

    .sliderbar-outer-container
      abs               0 0 0px 0px
      size              100%, 70px
      bg                color, #1c2224
      rounded           0 0 12px 12px

    .sliderbar-container
      height            7px
      border            none
      background        #1e884b
      margin            32px auto 0
      shadow            -24px 0 0 #1e884b \,
                        24px 0 0 #1e884b

    .handle
      size              36px, 43px
      top               -19px
      margin            0 0 0 -17px
      border            none
      background        #27ae60
      shadow            none

      &:after
        background      none
        width           0
        height          0
        border          8px solid transparent
        border-bottom   8px solid #27ae60
        top             -16px
        margin          0 0 0 -8px

      &:before
        background      #1b8247
        border          none
        height          14px
        top             14px
        margin          0
        shadow          4px 0 0 #1b8247 \,
                        -4px 0 0 #1b8247

    .sliderbar-label
      color             transparent
      top               -32px

      &:after
        size            2px, 4px
        background      #1c2224

  .selected-plan
    size                170px, 180px
    rounded             0 12px 12px 0
    abs                 0px 0 0 100%
    background          #283032

    .price
      color             #fff
      font-size         62px
      font-weight       600
      margin            22px 0 0
      width             100%
      text-align        center

      cite
        font-size       20px
        font-weight     200
        vertical-align  super

      .period
        display         block
        font-size       15px
        font-weight     400
        color           rgba(255, 255, 255, .5)

    .promotion
      display           block
      text-align        center
      font-size         14px
      color             rgba(255, 255, 255, .4)
      margin-top        8px
      line-height       17px

    .buy-now
      abs               100% 0 0 50%
      margin            -24px 0 0 -63px

