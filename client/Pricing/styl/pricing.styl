/* Pricing sign-in - register */
section.pricing-sign-in
  kalc                padding-left, \(100% \- 1030px\)/2
  kalc                padding-right, \(100% \- 1030px\)/2
  margin-bottom       56px

  .pricing-title
    margin-bottom     54px !important

  .kdformview
    size              521px, 49px
