  margin              85px auto 0
  width               auto
  max-width           100%
  padding             0

  h1
    font-size      32px
    color          #1aaf5d
    text-align     center
    margin-bottom  30px

  > p
    font-size      24px
    color          #686868
    text-align     center
    margin-bottom  80px

  .resource-pack-selection
    rel()
    color white

    .top
      > div
        display      inline-block
        borderBox()
        padding      58px 0

      .left
        width          400px
        text-align     center
        vertical-align top
        background     #1aaf5d
        border-top-left-radius    5px

        .description
          font-size  22px

      .right
        max-width                 355px
        background                #313b3d
        padding                   28px 60px 29px
        border-top-right-radius   5px
        margin-left               -4px

        .price
          font-size     45px

        .unit
          font-size     26px

        .buy-now
          display       block
          width         100px
          font-size     16px
          text-align    center
          color         white
          background    #e87f04
          padding       10px
          margin        0 auto
          border-radius 5px

      .multiplier
        abs             30px 0 0 355px
        display         inline-block
        font-size       30px
        font-weight     500
        text-align      center
        color           #1aaf5d
        background      #313b3d
        padding         19px
        border          5px solid #1aaf5d
        border-radius   42px

