@import "../../Framework/src/themes/default/kdfn"
@import "../../Core/styl/appfn"

@css {
/*
Pricing stylesheet
pricing.styl
*/
}

body.pricing
  #main-header
    .inner-container
      -webkit-font-smoothing  antialiased

    .logotype
      color             #424242
      line-height       20px
      font-size         26px

    nav
      a
        color           #3B3B3B

        &.login
          border-color  #ADADAD

    #koding-logo
      margin            0 7px 0 0

      cite
        r-sprite        home, 'logo-black'

.content-page.pricing
  width                 auto
  max-width             100%
  padding               0
  border-top            1px solid transparent

  .pricing-heading
    font-size           38px
    color               #37B542
    line-height         52px
    margin              178px auto 17px
    text-align          center
    padding             0 40px
    border              none
    font-weight         200
    opacity             .99

  p.pricing-description
    max-width           678px
    font-size           18px
    line-height         28px
    color               #5A5A5A
    font-weight         200
    opacity             .99
    text-align          center
    margin              0 auto 115px

  p.pricing-footer
    margin-top         68px
    text-align         center
    color              #5A5A5A
    font-weight        200
    font-size          14px
    line-height        28px
    opacity            .99

    span
      font-weight      400
      color            #5a5a5a

  .learn-more
    line-height        28px
    font-size          14px
    margin-top         4px
    display            block
    text-align         center
    color              #01B05A

  section.plans
    margin              0 auto
    max-width           882px
    padding             0 45px
    width               auto
    borderBox()

    .single-plan
      background        #FAFAFA
      width             25%
      z-index           10
      border            1px solid #E3E3E3
      border-left       none
      overflow          hidden
      borderBox()
      fl()

      &:first-of-type
        border-left     1px solid #E3E3E3
        rounded         7px 0 0 7px

      &.current
        &:after
          content       'Current Plan'
          display       block
          size          107px, 17px
          vendor        transform, rotateZ(-45deg)
          font-size     10px
          color         #959595
          background    #E8E8E8
          text-align    center
          line-height   17px
          abs           23px 0 0 -23px
          borderBox()

      &:nth-of-type(4)
        rounded         0 7px 7px 0

      .plan-title
        border          none
        color           #8B8B8B
        font-size       12px
        text-align      center
        height          auto
        margin          0
        letter-spacing  .16em

        span
          padding       0
          margin        0

        cite
          display       block
          font-size     38px
          color         #35B040
          line-height   38px
          margin        40px 0 4px
          position      relative

          &:before
            content     '$'
            display     inline-block
            color       #35B040
            font-size   19px
            vertical-align super
            line-height 26px

      .plan-summary
        padding         17px 20px
        text-align      center
        font-size       10px
        color           #575757
        line-height     14px
        font-weight     400
        opacity         .99
        borderBox()

      .plan-features
        padding         0 47px
        color           #575757
        line-height     23px
        font-size       14px
        borderBox()

      .plan-buy-button
        background      transparent
        border          1px solid #37B542
        outline         none
        shadow          none
        margin          29px auto 34px
        display         block
        color           #37B542
        padding         8px 34px
        font-size       14px
        letter-spacing  .16em
        rounded         3px
        vendor          transition, background .2s ease

      &:nth-of-type(2)
        background      #fff
        vendor          transform, scale(1.05)
        border          1px solid #909090
        rounded         7px
        z-index         100

        .plan-title cite
          color         #F8AC1D

          &:before
            color       #F8AC1D

        .plan-buy-button
          border-color  #F8AC1D
          background    #F8AC1D
          color         #fff
          margin-top    23px
          margin-bottom 40px
