      margin            18px 18px 0 0
      a
        font-size       14px
        visibility      visible

.content-page.pricing
  margin                55px auto 0
  width                 auto
  max-width             100%
  padding               0

  .payment-workflow
    min-height            600px

    .kdview.kdloader
      top                 160px
      left                50%
      margin              0 0 0 -20px
      z-index             10
      abs()

    .kdbutton .kdloader
      margin              0

  h3.pricing-title
    text-align          center
    display             block
    font-size           28px
    font-weight         200
    color               #666666
    margin              56px 0 8px

  h6.pricing-subtitle
    text-align          center
    display             block
    font-size           18px
    font-weight         400
    color               #666666
