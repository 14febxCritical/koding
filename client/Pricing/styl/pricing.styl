          shadow              inset 1px 1px 0 rgba(0, 0, 0, .16) \,
                              0 0 0 1px #dadada

      .pricing-show-details
          abs                 174px -30px 0 0

  .how-it-works
    bg                        color, #f1f1f1
    border                    1px solid #d3d3d3
    border-radius             12px
    max-width                 913px
    padding                   24px
    color                     #747474
    vendor                    column-count, 3
    vendor                    column-gap, 24px
    position                  relative
    margin-top                -88px
