.tw-show-activity-widget
  abs()
  top                           14px
  left                          206px
  background                    transparent
  border                        none
  .icon
    r-sprite                      app "account-notifications"

.tw-activity-widget
  size                          506px, 100%
  abs()
  top                           0
  left                          0
  vendor                        transition .3s linear
  vendor                        transform translateX(0)
  padding                       20px
  overflow                      visible
  z-index                       10
  background                    #f0f0f0
  shadow                        20px 0 40px rgba(0,0,0,0.5)
  &.collapsed
    vendor                      transform translateX(-546px)
    shadow                      none
    .toggle
      abs                       -2px -6px
      vendor                    transform translate(-2px, -6px)
      padding                   3px 6px 4px 6px
  .close-tab
    abs()
    top                         5px
    right                       2px
    bg                          color transparent
    r-sprite                      app '20-close-tab'
    border                      none
    &:hover
      pointer()
  .notification
    size                        auto auto
    background                  lightyellow
    font-size                   12px
    margin                      10px 0
    padding                     10px 30px 10px 10px
    border                      1px solid lightgray
    border-radius               5px
    .close-tab
      abs()
      top                       4px
      right                     4px
      bg                        color, transparent
      r-sprite                    app '20-close-tab'
    a
      color                     #3aaaab
      noTextDeco()
