    margin-bottom               3px

.pulsing
  vendor                        transition, margin .6s ease-in-out //\, opacity .3s ease-in-out
  vendor                        animation, pulse 1.5s ease-in-out 100
  &.out
    opacity                     0
    vendor                      animation, pulse-to-fade-out .75s ease-in-out
    vendor                      animation-iteration-count, 1

.tw-loading
  .loading-animation
    abs                         50% 0 0 50%
    margin                      -66px 0 0 -66px
    r-sprite                    "teamwork", "teampunk-big"
    &:after
    &:before
    span
      content                   ""
      abs                       0 0
      size                      100%, 100%
      rounded                   50%
      border                    1px solid #f2c500
      vendor                    transform, scale(.91)
      vendor                    animation, borderPulse 2.1s infinite ease
      borderBox()
    &:before
      vendor                    animation-delay, .3s
    span
      vendor                    animation-delay, .6s
  .tw-loader-text
    color                       #7a8285
    text-align                  center
    position                    relative
    top                         50%
    margin-top                  96px

.tw-ply-icon
    position                    relative
    top                         10px

.tw-modal
  bg                            color, #E4E4E4
  .kdmodal-inner
    bg                          color, #E4E4E4
    margin                      22px
    .kdmodal-title
      margin-bottom             25px !important
      .title
        font-size               16px !important
        color                   #747778
  .kdmodal-content
    p
      font-size                 14px
      margin-bottom             15px

@-moz-keyframes borderPulse
  15%
    opacity                     1
  100%
    -moz-transform              scale(1.3)
    opacity                     0

@-webkit-keyframes borderPulse
  15%
    opacity                     1
  100%
    -webkit-transform           scale(1.3)
    opacity                     0