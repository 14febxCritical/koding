@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"
@import "../../Main/styl/app.fonts"


@css {
/*
ACE STYLES
app.aceeditor.styl
*/
}

.ace_editor
  size                    100%, 100%

.ace_gutter
  .ace_gutter-cell.ace_error
    bg                    image, url("data:image/png;base64,")
  .ace_gutter-cell.ace_warning
    bg                    image, url("data:image/png;base64,")

.kdnotification.editor.mini
  shadow                  0 1px 3px rgba(0, 0, 0, 0.3)
  rounded                 2px
  margin-top              15px
  .kdnotification-title
    text-shadow           none
    font-size             10px
    line-height           10px
    padding               0 10px


.kdtabhandle
  .inactive
    color                 rgba(255,255,255,0.85)
    text-shadow           0 -1px 0 rgba(0,0,0,.61)
    bg                    color,rgba(255,255,255,.2)
    span.close-tab
      bg                  color,transparent

.save-file-container
  bg                      color, #eee
  borderBox()
  &.save-as-dialog
    border                1px solid #bbb
.save-as-dialog
  .kddialog-buttons
    .modal-clean-gray
      margin              10px 10px 10px 0
    .modal-cancel
      margin              9px 5px 0 0

.split-placeholder
  background              #5C5853
  background              -webkit-radial-gradient(circle, #5C5853, #3B3631)
  background              -moz-radial-gradient(circle, #5C5853, #3B3631)
  background              -ms-radial-gradient(circle, #5C5853, #3B3631)
  > div
    abs()
    size                  100%,auto
    top                   50%
    margin                0
    padding               0 50px
    color                 #8d8880
    font-size             16px
    text-align            center
    line-height           24px
    text-shadow           0 1px 0 rgba(0,0,0,.32)
    borderBox()
    a
      color               #f99200
      noTextDeco()
      &.close
        font-size         13px
        opacity           .6

.editor-main
  bg                      color, #161616
  .code-wrapper
    size(100%,100%)
    .ace_scroller
      overflow-x          none
      cursor              text

  .ace_content
    cursor                text

  &.not-editable
    .ace_cursor.ace_hidden
      display             none

.mini-code-wrapper
  size                    100%, 100%

.ace-find-replace-view
  display                 block
  bottom                  20px
  gradient                #f9f9f9 #e7e7e7
  color                   #282828
  border                  1px solid #e2e2e2
  border-top-color        #dadada
  z-index                 1000
  borderBox()
  padding-top             3px
  abs()

  .ace-find-replace-settings
    width                 100px
    abs()
    left                  0

  .ace-find-replace-inputs
    padding               0 194px 0 102px
    width                 auto

  .ace-replace-input
    position              relative
    top                   3px

  .ace-find-replace-buttons
    width                 170px
    abs()
    right                 13px
    top                   3px

  .ace-replace-button
    top                   3px

  .kdinput
    width                 100%

  .close-icon
    bg                    position,-80px -222px

  button
    width                 80px

  .multiple-choice
    fl()
    position              relative
    margin-left           12px
    a
      text-indent         -10000px
      size                26px, 24px
      borderBox()
      kdfsprite()
      &.multiple-choice-case-sensitive
        bg                position, -197px -459px
        &.active
          bg              position, -217px -459px
      &.multiple-choice-regex
        bg                position, -198px -479px
        &.active
          bg              position, -218px -479px
      &.multiple-choice-whole-word
        bg                position, -198px -498px
        &.active
          bg              position, -218px -498px
      &.active
        border-color      #cfcfcf !important

.editor-bottom-bar
  color                   #282828
  border                  1px solid #e2e2e2
  border-top-color        #dadada
  gradient                #f9f9f9,#e7e7e7
  abs()
  size                    100%,20px
  z-index                 1000
  borderBox()
  &.clearfix
    bottom                0

  .kdbuttonwithmenu-wrapper.editor-advanced-settings-menu
    border-left           1px solid #e2e2e2
    fr()

  button.kdbutton
    span.icon.cog-white
      bg                  position,-82px -301px

  .section
    padding               3px
    font-size             10px
    line-height           12px
    color                 #282828
    size                  auto,12px
    fl()
    &.caret-position
      width               48px
      text-align          center
      color               #333
      margin              0
      span
        margin            0 2px
    &.command-line
      padding             0px
      size                50%,18px
      gradient            #e7e7e7, #f9f9f9
      border              1px solid #e2e2e2
      border-width        0 1px
      &.focus
        span.icon
          bg              position, -82px -400px
        input.terminal
          color           green
      span.icon
        abs()
        top               0
        left              0
        display           block
        size              14px,18px
        bg                position, -82px -420px
        kdfsprite()
      input.terminal
        border-width      0
        font-size         10px
        size              100%, 18px
        line-height       1
        padding           2px 2px 2px 12px
        line-height       1
        color             #777
        bg                color,transparent
        rounded           0
        borderBox()


.editor-search-wrapper
  border                  1px solid #ddd
  border-top-width        0
  line-height             40px
  size                    100%,39px
  bg                      color,#f2f2f2
  z-index                 0
  margin-top              -39px
  borderBox()
  form
    padding               0 10px 0 50px

    button.kdbutton.to-right
      fr()
    button.kdbutton
      margin              8px 0 0 10px
      padding             5px 13px 6px 13px
      fl()

    button.kdbutton.icon-only
      padding             1px 4px 1px 4px

    button.kdbutton.with-icon
      padding             1px 13px 1px 4px
      line-height         20px
      .icon
        margin            0
        padding           0

    input.kdinput
      margin              8px 0 0 10px
      clear               none
      fl()
      &:first-child
        margin-left       0

.terminal-tab
  border                  1px solid #ddd
  borderBox()

  input.kdinput.text
    color                 #28fe14
    font-family           mono
    border                none
    display               block
    line-height           initial
    rounded               0
    size                  100%, initial
    shadow                none
    bg                    color, transparent

  .anyterm-screen
    size                  100%, 100%
    padding               2px
    margin                0
    color                 #28fe14
    bg                    color, #111
    bg                    image, url("/images/gterminal.png")
    bg                    repeat, no-repeat
    bg                    size, cover
    borderBox()
    span.cursor
      bg                  color, transparent
      border              1px solid #b4b4b4

  &.terminal-on-focus
    span.cursor
      border              0
      margin              0
      bg                  color,transparent
      bg                  image,url("/images/blinking-cursor.gif")
      bg                  repeat,no-repeat

.kdview.shell-output
  color                   #28fe14
  font-family             mono
  white-space             pre
  bg                      color, black
  size                    auto, auto

.recent-files-menu .arrow
  top                     8px

.kdmodal.goto
  .close-icon
    hidden()

  .title
    line-height           30px

  button
    abs                   14px, 14px
    width                 auto
    padding               2px 10px !important

  .kdformview .formline
    padding               11px

    .input-wrapper > input
      min-width           0
