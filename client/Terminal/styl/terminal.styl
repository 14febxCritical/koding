@import "../../Framework/themes/default/kdfn"
@import "../../Main/styl/appfn"

@css {
/*
TERMINAL stylesheet
app.terminal.styl
*/
}
body.terminal #main-header
  shadow        none

.offscreen
  position      absolute
  bottom        0
  left          -100px
  opacity       0

.terminal

  .console
    > div[contenteditable="true"]
      height     100%
      &:focus
        outline  none

  .message-pane
    color       #aaa
    top         50%
    margin-top  5px
    z-index     1
    width       100%
    text-align  center
    abs()

    &.light
      color        #eee
      a
        color      #fff
        &:visited
          color    #eee
    a
      color      #eee
      &:hover
        color    #fff
      &:visited
        color    #eee

  .kdtabpaneview.intro
    overflow        auto

    main
      size          100% auto
      margin        0 auto
      max-width     984px

      > figure
        size        700px 393px
        margin      0 auto
        border      3px solid #252e30
        borderBox()

      ul
        size            700px auto
        color           #999
        margin          0 auto
        li
          display             block
          line-height         30px
          font-size           14px
          font-weight         200
          border-bottom       1px solid #252e30
          padding-left        30px
          cursor              pointer
          borderBox()
          rel()
          &:hover figure
            opacity           1
          &.ready i
            color             logoBg
          &.off
            // cursor            default
            i
              color           #FF7379
            // &:hover
            //   figure
            //     opacity       .4

          figure
            top               9px
            left              6px
            opacity           .4
            display           block
            r-sprite          environments 'terminal'
            abs()
          .kdloader
            top               -2px
            left              0
            bg                color #1D2628
            size              30px 30px
            display           block
            abs()
          i
            text-transform    uppercase
            right             6px
            top               1px
            font-size         11px
            font-weight       400
            min-width         200px
            text-align        right
            abs()


    h1
      font-size     32px
      font-weight   100
      line-height   1
      padding       40px 0 0
      text-align    center
      color         logoBg

    h2
    h3
      font-size     18px
      font-weight   200
      line-height   1
      padding       20px 0 40px
      text-align    center
      color         #999

    h3
      margin        0 auto
      size          700px auto
      padding       30px 0 10px 6px
      text-align    left
      borderBox()

.application-tab-handle-holder.terminal

  .kdtabhandle.intro
    padding         0
    bg              color #252e30
    size            40px 37px
    max-width       40px !important

    span.home
      display       block
      r-sprite      'app' '20-home-icon'
      margin        8px 10px

.vm-info

  padding      5px
  font-family  monospace
  font-size    13px

  &:hover
    cursor     pointer
    color      green

.kdmodal.terminal-command-warning
  strong
    font-weight         400

  p
    padding             0 0 12px

  pre
    padding             10px 0
    display             block
    line-height         16px
    font-size           12px
    font-family         monoFamily
    padding             14px
    color               white
    bg                  color, #28292A
