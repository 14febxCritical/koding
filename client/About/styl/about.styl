body.about
  #main-header
    .inner-container
      bg            color, transparent
  #dock
  .account-area
    hidden()
  #koding-logo
    margin              10px
    size                45px 45px
    bg                  color, logoBg
    fl()

    cite
      r-sprite          home 'logo'
      margin            14px
      display           block

.kdtabpaneview.about

  bg                color #f1f3f2

h1.team-title
  font-size         64px
  line-height       128px
  height            128px
  text-align        center
  font-weight       300
  border-bottom     none

.kdlistview-team
  margin           40px 0

.kdlistitemview-team
  fl()
  size              190px auto
  text-align        center

  figure
    margin          0 auto
    rounded         4px
    size            160px 160px
    display         block

  .avatarview
    rounded         80px
    size            160px 160px
    display         block
    // opacity         .00001
    // vendor          transition, opacity .3s .3s ease
    // &.in
    //   opacity       1

  figcaption
    margin          15px 0

  a.profile
    text-decoration none
    color           #333
    display         block
  cite
    font-size       12px
    color           #999