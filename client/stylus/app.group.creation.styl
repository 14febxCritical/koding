@import "nib/vendor"

@css {
/*
Group Creation Modal Styles
*/
}

.group-admin-modal

  .kdview.formline.type.group-type
    padding                     0
    border-bottom               none
  .group-type
    margin                      11px 0
    .kd-radio-holder
      height                    60px
      line-height               60px
      padding                   0 20px
      rel()
      label
        display                 block
        font-size               14px
      input
        display                 none

      &.active
        bg                      color, rgba(0, 0, 0, .05)
        label
          &:before
            bg                    position, -460px -620px
            opacity               .9
          &.company:before
            bg                    position, -460px -680px
          &.project:before
            bg                    position, -460px -740px
          &.custom:before
            bg                    position, -460px -800px

      &:hover
        bg                      color, rgba(0, 0, 0, .05)

      label
        &:before
          content                 ""
          size                    60px, 60px
          bg                      color, pink
          bg                      position, -400px -620px
          top                     5px
          opacity                 .4
          float                   left
          margin-right            10px
          sprite()
        &.company:before
          bg                      position, -400px -680px
        &.project:before
          bg                      position, -400px -740px
        &.custom:before
          bg                      position, -400px -800px

  div.general-settings > .kdformview
    margin-top                5px
    > .formline
      width                   100%
      overflow                auto
      padding                 5px 0px 7px 18px
      borderBox()
      &.Slug
        label
          color               transparent
        .input-wrapper
          line-height         24px
          color               #888
      &.privacy
        .kdselectbox
          margin-right        22px
          fr()
          &.visibility
            margin-right      5px
      &.group-vm
        .kdinput.on-off
          margin-right        22px
          fr()
        .kdinput.on-off > span
          hidden()

      &.button-field
        padding-right         20px
        padding-top           10px
      .input-wrapper
        overflow              visible

  div.vm-settings
    .kdselectbox
      fr()