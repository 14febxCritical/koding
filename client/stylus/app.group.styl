.content-page.groups

  // .kdlistview-everything

  .kdlistitemview-groups
    borderBox()
    border-bottom           1px solid #f5f5f5
    min-height              127px
    clear                   none
    width                   50%
    display                 inline-block
    height auto
    vertical-align top


    &:nth-child(2n+1)
      border-right           1px solid #f5f5f5

    span.avatar
      margin 20px 20px 5px 20px
      padding         1px
      border          1px solid #E3E3E3
      fl()
      display         block
      size(60px,60px)
      .avatar-image
        display         block
        text-decoration   none
        background-size   cover
        background-position   center
        size(60px,60px)

    .content
      width 100%
      margin-left : 70px
      borderBox()
      padding-top 7px
      h3
        padding-bottom 10px
        margin-top 10px
        a
          color black
          noTextDeco()

      article
        borderBox()
        width auto
        margin-right 10px
        padding-bottom 10px

    .topicmeta
      clear both
      margin-left 20px
      .topicstats
        .posts
        .followers
          display inline-block
          a
            color black
            font-weight bold
            noTextDeco()
      .edit-actions
        h4
          display inline-block
        ul
          display inline-block
          li
            display inline-block

    .button-container
      abs()
      right 15px
      bottom 15px





