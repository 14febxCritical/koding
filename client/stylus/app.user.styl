
@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"


.slideable
  vendor transition, margin-top 0.5s linear
.slide-down
  margin-top 51px


.profile-landing
  height                100%
  width                 100%
  z-index               99
  abs()
  bg image,             url("../images/koding-new-bg.png");
  bg repeat,            repeat-x
  vendor transition,    opacity 1s ease

  shadow 0 0 50px 20px rgba(0,0,0,0.4)
  &.profile-leaving
    rel()
  &.profile-shrinking
    height 0
  &.profile-fading
    opacity             0
  &.profile-hidden
    z-index             1
    display             none

.profile-header
  width                 100%
  height                51px
  display               none

.profile-personal-wrapper
  height                100%
  width                 160px
  fl()

.profile-avatar
  height                76px
  width                 160px
  background-position   center center
  background-repeat     no-repeat
  vendor background-size, 160px auto
  shadow                inset 0 0 13px 0 rgba(0,0,0,0.6)


.profile-buttons
  height                27px
  border-top            1px solid #403d37
  width                 100%
  bg color,             rgba(0,0,0,0.2)

.profile-content-wrapper
  margin-left           160px
  height                100%
  width                 auto
  bg color,             white
  borderBox()

.profile-title
  borderBox()
  height                77px
  width                 auto
  bg                    color, white
  border-bottom         1px solid rgb(229,229,229)
  shadow                inset 0 3px 1px 3px rgba(250,250,250,.5)
  gradient              rgb(255,255,255),rgb(242,242,242)
  padding 20px 23px
  .profile-title-wrapper
    height auto
    width auto
  .profile-name
    borderBox()
    color #ff9200
    font-size 16px
    width auto
    display inline-block
  .profile-bio
    borderBox()
    color #888
    font-size 12px
    height 29px
    overflow-y scroll
    width auto
    font-weight 300

.profile-nickname
  borderBox()
  font-size 14px
  width auto
  display inline-block
  color #aaa
  padding 5px 5px 0 13px

.profile-links
  margin                24px 0 27px 15px
  ul
    li
      a
        color             #adadad!important
        noTextDeco()
        font-size         14px
        font-weight       300
      line-height       20px
      margin-bottom     4px
      span.icon
        sprite()
        fl()
        size            20px, 20px
        margin-right    18px
      &.blog
        span.icon
          bg position,  0 -80px
      &.twitter
        span.icon
          bg position,  0 -100px
      &.github
        span.icon
          bg position,  0 -280px

  ul.admin
    li
      a
        padding-top 3px
        font-size         11px
  hr
    border-top          1px solid rgba(44,41,36,0.5)
    border-bottom       1px solid rgba(255,255,255,0.07)
    width               auto
    height              0
    margin              20px 20px 10px 6px
    padding             0 11px


.profile-content-links
  margin-right          0px
  width                 139px
  height                100%
  border-right          1px solid #e8e8e8
  padding               19px 23px 19px 23px
  fl()
  borderBox()
  li
    vendor transition, opacity .1s linear
    &.disabled
      opacity               0.5
      cursor                default


  h4
    text-transform      uppercase
    font-size           9px
    color               #9f9d9a
    font-weight         400
    margin-bottom       9px

  li
    color               #7c603b
    font-weight         normal
    noTextDeco()
    cursor              pointer
    line-height         16px
    font-size           12px
    vertical-align      baseline
    margin-bottom       6px

.profile-koding-logo
  height 100%
  .logo
    cursor pointer
    sprite()
    width 120px
    height 30px
    bg position, -240px -40px
    position fixed
    bottom 12px
    left 15px
    &.animate
      vendor transition, top 0.5s ease-in-out
    &.top
      top 12px!important
      bottom none

  vertical-align bottom

.profile-show-more-wrapper
  height 50px
  width auto
  button
    text-shadow none
    border none
    bg image, none
    rounded 0
    bg color, white
    width 100%
    &:hover
     text-shadow none
     border none
     bg image, none
     bg color #f5f5f5

.profile-splitview
  height 100%

.profile-content-list
  overflow-y auto
  height 100%
  margin-left 125px

.profile-admin-customize
.profile-admin-message
  margin-left 10px
  fr()
  width auto
  a span.title
    color #aaa
    noTextDeco()
    font-weight 300
    text-shadow 2px 2px 3px rgba(0,0,0,0.05)
    &:hover
      color #444

.kdlistview.kdview.profile-content
.profile-content
  overflow auto
  borderBox()
  height 100%
  width auto

  .new-blogpost
    abs()
    right 10px
    top 10px

  .content-item
    border-bottom 1px solid #e8e8e8
    height auto
    &.default-item
      padding-top 35px
      padding-left 35px
    > .title
      span.text
        max-width 600px
        display block
        margin-bottom 10px
      font-size 18px
      font-weight 600
      color #444
      bg color, #fbfbfb
      span.create-date
        display block
        font-size 14px
        font-weight 300
        color #aaa

      padding 20px 30px
      border-bottom 1px solid #e8e8e8
    .has-markdown
      max-width 600px
      padding 30px
      margin-bottom 30px
      text-align justify
      text-rendering geometricPrecision


.profile-stream-switch
  span
    font-size 10px

.disable-static-page-modal
.enable-static-page-modal
  .modalformline p
    line-height 1.5
    margin-bottom 5px

.new-blogpost-modal
  .formline
    borderBox()
    width 100%
    padding 20px
  textarea.kdinput.markdown-input
    margin-top 15px
    borderBox()
    height 200px
    width 100%
  input.kdinput.title-input
    borderBox()
    width 100%

.static-profile-tooltip
  padding 0px
  margin 0
  borderBox()

  .tooltip-formline
    border-bottom 1px solid rgba(0,0,0,0.1)
    padding 10px
    borderBox()
    &:last-child
      border none
  a.user-profile-link
    font-size         14px
    font-weight       300
    line-height       25px
    color  #ff9200 //#0A92BA
    noTextDeco()
    display block

  .static-page-switch
    width auto
    span
      font-size 12px
      font-weight 300
      color #a5a5a5
  button.static-page-settings-button
    > span.icon
      size 15px 15px
      sprite()
      bg position, -20px -320px


