
@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"


.profile-landing
  height 100%
  width 100%
  z-index 10000
  abs()
  bg image, url("../images/koding-new-bg.png");
  bg repeat, repeat-x
  opacity 1
  vendor transition, opacity 1s linear
  &.profile-fading
    opacity 0
  &.profile-hidden
    z-index 1
.profile-header
  width 100%
  height 51px
  // bg color, rgba(255,255,255,0.1)

.profile-personal-wrapper
  height 100%
  width 160px
  fl()

.profile-avatar
  height 76px
  width 160px
  background-position center center
  background-repeat no-repeat
  vendor background-size, 160px auto

.profile-buttons
  height 27px
  border-top 1px solid #403d37
  width 100%
  bg color, rgba(0,0,0,0.2)

.profile-content-wrapper
  margin-left 160px
  height 100%
  width 100%
  bg color, white

.profile-title
  borderBox()
  height 77px
  width 100%
  bg                    color, white
  border-bottom         1px solid rgb(229,229,229)
  shadow                inset 0 3px 1px 3px rgba(250,250,250,.5)
  gradient              rgb(255,255,255),rgb(242,242,242)



.profile-content-links
  width 125px
  height 100%
  border-right 1px solid #e8e8e8
  padding 19px 23px

  h4
    text-transform uppercase
    font-size: 9px;
    color: #9f9d9a;
    font-weight 400
    margin-bottom 9px

  li
    color #7c603b
    font-weight normal
    noTextDeco()
    cursor pointer
    line-height 16px
    font-size 12px
    vertical-align baseline
    margin-bottom 6px

