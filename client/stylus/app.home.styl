// NEW TRY

div#home-intro
  size                    100%, 436px
  color                   white
  vendor                  transition, height .3s linear
  shadow                  inset 0 -5px 10px rgba(0,0,0,.1)
  bg                      color, #000
  bg                      image, url('../images/space.jpg')
  bg                      size, cover
  bg                      position, 0 -51px
  &.out
    height                0

  > div
    width                 62%
    padding               30px 60px
    fl()
    borderBox()

  > aside
    width                 38%
    padding               42px 50px 50px 0
    fl()
    borderBox()

  h2.slogan
  h3.slogan-continues
    font-weight           300
    text-shadow           0 1px 0 rgba(0, 0, 0, .5)

  h2.slogan
    font-size             60px

  h3.slogan-continues
    font-size             28px
    margin-top            30px
    line-height           1.6em

  .toc
    width                 300px
    margin-top            14px
    font-weight           300
    font-size             12px
    line-height           18px
    opacity               .5
    a
      color               linkColor1
      noTextDeco()

  form
    .formline
      border              none
      height              44px
      line-height         44px
      margin-bottom       6px
      padding             0
      width               300px
      overflow            visible
      > .input-wrapper
        size              100%, 100%
        overflow          visible
      // &.gh
      //   margin-bottom     17px
      &.or
        font-weight       300
        font-size         16px
        height            34px
        line-height       34px
        span
          display         block
          text-align      center
          color           #777

    .button-field
      bg                  color, transparent
      margin-top          17px

    button
      size              100%, 100%
      margin            0
      font-size         19px
      border            none
      font-weight       400
      rounded           5px

      &.orange
        gradient        #fca520, #c46325
        shadow          inset 0 1px 0 rgba(255, 255, 255, .5)\,\
                        0 1px 1px rgba(0, 0, 0, .5)
        text-shadow     0 -1px 0 rgba(0, 0, 0, .8)
        color           white
        letter-spacing  1px
        &:active
          gradient      #c46325, #fca520
          text-shadow   0 1px 0 rgba(0, 0, 0, .8)
        &:active
        &:focus
          shadow        inset 0 1px 0 rgba(255, 255, 255, .5)\,\
                        0 1px 1px rgba(0, 0, 0, .5)\,\
                        0 0 9px 3px rgba(255,187,4,0.33)

      &.gh-gray
        gradient        #f1f1f1, #a8a8a8
        shadow          inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)
        font-weight     600
        text-shadow     0 1px 0 white
        color           #444
        &:active
          gradient      #a8a8a8, #f1f1f1
          text-shadow   0 -1px 0 white
        &:active
        &:focus
          shadow        inset 0 1px 0 white\,\
                        0 1px 1px rgba(0, 0, 0, .5)\,\
                        0 0 9px 3px rgba(255,255,255,0.3)
        .button-title
          margin-left   -15px
          line-height   41px
        .icon.octocat
          size            30px, 28px
          padding         0
          margin          6px 0 0 20px
          bg              position, -575px -45px
          vertical-align  top

    input
      size                100%, 100%
      line-height         34px
      border              none
      padding             5px 15px
      font-size           16px
      font-weight         300
      rounded             5px
      shadow              0 1px 1px rgba(0,0,0,.5)
      outline             none
      borderBox()
      &.half
        width             calc(50%\-3px)
        min-width         0
        fl()
        &:first-child
          margin-right    6px

      &:focus
        shadow            0 1px 1px rgba(0,0,0,.5)\,\
                          0 0 9px 3px rgba(255,187,4,0.44)

  aside
    ul
      size                  100%, 200px
      margin-top            0
      li
        size                auto, 100%
        margin              0
        border              1px solid rgba(255, 255, 255, .2)
        padding             1px
        shadow              0 3px 8px rgba(0, 0, 0, .5)
        rel()
        &:active
          size              auto, 100%
          margin            0
          i
            top             80px
        i
          display           block
          size              40px, 40px
          top               80px
          left              50%
          margin            0 0 0 -20px
          sprite()
          bg                position, -580px 0px
          abs()
        a
          display           block
          size              auto, 100%
        img
          size              auto, 100%

  ul
    size                  100%, 60px
    margin-top            20px
    li
      size                100px, 60px
      margin              0 12px 0 0
      border              1px solid rgba(255, 255, 255, .2)
      padding             1px
      shadow              0 1px 3px rgba(0, 0, 0, .5)
      fl()
      rel()
      &:active
        size              96px, 56px
        margin            2px 14px 0 2px
        i
          top             10px
      i
        display           block
        size              40px, 40px
        top               12px
        left              50%
        margin            0 0 0 -20px
        sprite()
        bg                position, -580px 0px
        abs()
      a
        display           block
        size              100%, 100%
      img
        size              100%, 100%

#content-page-home
  > footer
    size                100%, 200px
    bg                  color, #393630
    bg                  image, url('../images/koding-new-bg.png')
    bg                  repeat, repeat-x
    bg                  position, 0 -900px

    shadow              inset 0 5px 15px rgba(0, 0, 0, .75)

  .home-links
    size                100%, 80px
    text-align          left
    opacity             0
    transition          opacity .15s ease-in-out
    overflow            hidden
    margin-top          -80px
    text-align          center
    bg                  color, transparent
    abs()
    &.in
      opacity           1

    .overlay
      abs()
      size              100%, 100%
      z-index           10
      bg                color, transparent
    > ul
      size              auto, 100%
      z-index           0
      font-size         0
      display           inline-block
      vertical-align    top
      li
        size            auto, 100%
        display         inline-block
        padding         15px 0 0 15px
        overflow        visible
        vertical-align  top
        borderBox()
        rel()
        &:hover
          z-index       1
        &:last-child
          padding       15px 15px 0 15px

    .custom-link-view.button
      size              auto, 50px
      padding           0 26px 0 16px
      rounded           25px
      line-height       50px
      text-align        left
      gradient          #666, #4a4a4a
      // border            1px solid rgba(0,0,0,.2)
      // border-top        none
      border            none
      shadow            0 4px 12px rgba(0, 0, 0, .3)\,\
                        0 1px 1px rgba(255, 255, 255, .5) inset\,\
                        0 -1px 1px rgba(0, 0, 0, .4) inset
      overflow          hidden
      vertical-align    top
      borderBox()
      &:first-child
        padding-top     0
      .title
        color           rgba(255,255,255,.9)
        width           100%
        font-size       17px
        text-shadow     0 -1px 0 rgba(0,0,0,.9)
      .icon
        margin          15px 3px 0 0
      &:hover
        .title
          color         rgba(255,255,255,1)
      &.open
        .icon
          bg            position, -200px -340px
      &.customize
        .icon
          bg            position, -200px -380px
      &.invitation-pending
      &.request-pending
      &.request
        .icon
          bg            position, -200px -360px
      &.join
        .icon
          bg            position, -220px -379px
      &.browse
        .icon
          bg            position, -220px -399px
      &.green
        text-shadow     0 -1px 0 rgba(0,0,0,.6)
        gradient        #68B43B, #5B9D33
      &.orange
        text-shadow     0 -1px 0 rgba(0,0,0,.6)
        gradient        rgb(233, 142, 27), rgb(223, 118, 4)
    .custom-link-view
      display           block
      text-align        left
      &:first-child
        padding-top     4px
      span.title
        font-size       12px
        color           white
        text-shadow     0 1px 0 rgba(0,0,0,.9)

      &.register
        .icon
          bg            position, -220px -341px
      &.logout
        .icon
          bg            position, -200px -320px
      &.login
        .icon
          bg            position, -220px -320px


#home-counter-bar
  shadow                inset 0 1px 0 rgba(255, 255, 255, .1)
  padding               30px 0
  gradient              #37332C ,#1D1B18
  text-align            center
  min-height            90px
  borderBox()

figure.counter
  display               inline-block
  margin                0 3% 0 0
  &:last-child
    margin-right        0
  > div
    padding             2px
    bg                  color, rgba(0,0,0,.2)
    fl()
    rel()
  h6.title
    font-size           14px
    color               white
    text-transform      uppercase
    text-shadow         0 -1px 0 black
    size                auto, 26px
    line-height         26px
    white-space         nowrap
    font-weight         300
    margin              2px 10px 0 0
    fl()
    // vendor              font-smoothing, antialiased
    // vendor              text-rendering, geometricPrecision
    // abs()
  i
    display             inline-block
    font-family         UbuntuMono//SourceCodePro
    font-size           1.7em
    font-weight         bold
    padding             0 0.13em
    line-height         1.1
    color               rgb(255,255,255)
    gradient            #42403A, #454340
    margin-right        1px
    font-style          normal
    vendor              font-smoothing, antialiased
    vendor              text-rendering, geometricPrecision
    shadow              inset 0 .08em .16em -.08em rgba(0,0,0,.5)
    rel()
    &:last-child
      margin-right      0
    span
      size              100%, 50%
      top               -1px
      left              0
      margin            0
      bg                color, rgba(0,0,0,.1)
      border-bottom     1px solid rgba(0,0,0,.3)
      shadow            0 1px 0 rgba(255,255,255,.1)
      abs()

#content-page-home.extra-narrow
#content-page-home.narrow
  figure.counter
    h6.title
      font-size     10px
    i
      font-size     1.3em
  .home-links
    height          50px
    margin-top      -50px
    text-align      center
    > ul
      > li
        padding     5px 0 0 5px
        &:last-child
          padding   5px 5px 0 5px

    .custom-link-view.button
      padding         0 7px 0 5px
      height          30px
      line-height     29px
      font-size       11px
      .icon
        margin-top    5px
      .title
        font-size     12px
    .custom-link-view
      line-height     15px
      &:first-child
        padding-top   0
      span.title
        font-size     10px
      span.icon
        margin-top    -3px

#content-page-home.medium
  figure.counter
    h6.title
      font-size     12px
    i
      font-size     1.5em
  .home-links
    height          60px
    margin-top      -60px
    text-align      center
    > ul
      > li
        padding     10px 0 0 10px
        &:last-child
          padding   10px 10px 0 10px
    .custom-link-view.button
      padding         0 13px 0 10px
      height          40px
      line-height     39px
      font-size       12px
      .icon
        margin-top    10px
      .title
        font-size     14px
    .custom-link-view
      line-height     18px
      &:first-child
        padding-top   0
      span.title
        font-size     12px

#content-page-home.extra-wide
  #home-counter-bar
    text-align      left
    padding         30px 5%
  figure.counter
    width           30%
    margin-right    4.5%
    &:nth-child(3n)
      margin-right  0
    > div
      clear         right
      fr()

#content-page-home.wide
#content-page-home.medium
#content-page-home.narrow
  #home-counter-bar
    text-align      left
    padding         20px 8%
  figure.counter
    width           45%
    margin-right    10%
    &:nth-child(2n)
      margin-right  0
    > div
      clear         right
      fr()

#content-page-home.narrow
  #home-counter-bar
    text-align      left
    padding         10px 5%
  figure.counter
    width           47.5%
    margin-right    5%
    h6.title
      height        22px
      line-height   22px
      margin        0


#content-page-home.extra-narrow
  #home-counter-bar
    text-align      left
    padding         10px 15%
  figure.counter
    width           100%
    margin-right    0
    h6.title
      height        20px
      line-height   20px
      margin        0
    > div
      clear         right
      fr()

