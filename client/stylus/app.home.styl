// NEW TRY

body.group
  div.screenshots
    > section
      height              auto

  .group-desc
    margin                30px
    line-height           30px
    font-size             16px
    color                 white
    text-shadow           0 1px 0 rgba(0, 0, 0, .75)
    bg                    color, transparent
    max-width             800px
    text-align            left

  .readme
    margin                30px
    max-width             800px
    text-align            left

div.screenshots
  rel()
  height                  auto
  z-index                 1000

  .arrow
    abs()
    display               block
    top                   107px
    size                  30px, 503px
    shadow                0 10px 25px rgba(0, 0, 0, .4)
    bg                    color, rgba(0, 0, 0, .5)
    vendor                transition, left  .15s ease-in-out\,\
                                      right .15s ease-in-out\,\
                                      width .15s ease-in-out
    z-index               1
    border                1px solid transparent
    border-color          rgba(255, 255, 255, .2)\
                          rgba(0, 0, 0, .1)\
                          rgba(0, 0, 0, .3)
    borderBox()
    &.left
      left                0
      rounded             0 4px 4px 0
      border-width        1px 1px 1px 0
      span
        right             10px
        bg                position, -220px -100px
    &.right
      right               0
      rounded             4px 0 0 4px
      border-width        1px 0 1px 1px
      span
        left              20px
        bg                position, -200px -100px
    &:hover
      width               40px


    span
      abs()
      display             block
      top                 50%
      margin-top          -15px
      margin-left         -10px
      size                20px, 30px
      sprite()

  > section
    size                  100%, 506px
    overflow              hidden
    text-align            center
    padding               30px 0
    background            transparent url("../images/bg/blurred/4.jpg") no-repeat 0 0
    background-size       cover
    shadow                inset 0 5px 15px rgba(0, 0, 0, .2)

  ul
    margin                0
    size                  600%, 506px
    z-index               0

    li
      rel()
      size                16.6667%, 506px
      overflow            visible
      fl()

      p
        abs()
        size              auto, auto
        bottom            20px
        right             50%
        max-width         600px
        padding           10px 40px
        margin-right      -410px
        font-size         20px
        line-height       30px
        text-align        right
        color             #FFF
        opacity           .9
        text-shadow       0 1px 0 rgba(0,0,0,0.4)
        gradient          rgba(255, 146, 0, 0.8), rgba(209, 107, 13, 0.8)
        bg                color, #ff9200
        shadow            0 0 10px rgba(0,0,0,0.5)
        rounded           2px
        borderBox()
        span
          font-style      italic
          font-size       12px
          line-height     20px
          color           rgba(255, 255, 255, .85)
          display         block

      > div
      > img
        display           inline-block
        width             90%
        max-width         800px
        min-width         500px
        max-height        503px
        rounded           4px
        shadow            0 10px 25px rgba(0,0,0,0.5)
        overflow          hidden
      > div
        background        rgba(0, 0, 0, .4)
        iframe
          padding         10px
          borderBox()

  .home-links
    size                auto, auto
    text-align          left
    gradient            #fff, #eee

    .custom-link-view
      size              25%, 50px
      padding           0 26px 0 20px
      margin            0
      // rounded           4px
      line-height       49px
      gradient          #666, #505050
      // border-right      1px solid rgba(255,255,255,.2)
      border-top        1px solid rgba(255,255,255,.3)
      border-left       1px solid rgba(0,0,0,.1)
      text-shadow       0 1px 0 rgba(0,0,0,.9)
      shadow            0 -1px 0 rgba(0, 0, 0, .3)\,\
                        0 1px 0 rgba(255, 255, 255, .6)
      borderBox()
      fl()
      .title
        color           rgba(255,255,255,.9)
      .icon
        margin          15px 1px 0 0
      &:hover
        .title
          color         rgba(255,255,255,1)
      &.open
        .icon
          bg            position, -200px -340px
      &.logout
        .icon
          bg            position, -200px -320px
      &.login
        .icon
          bg            position, -220px -320px
      &.register
        .icon
          bg            position, -220px -341px
      &.customize
        .icon
          bg            position, -200px -380px
      &.request
        .icon
          bg            position, -200px -360px
      &.join
        .icon
          bg            position, -220px -379px
      &.browse
        .icon
          bg            position, -220px -400px
      &.green
        border-top      1px solid rgba(255,255,255,.4)
        gradient        #68B43B, #5B9D33
      &.orange
        border-top      1px solid rgba(255,255,255,.4)
        gradient        rgb(233, 142, 27), rgb(223, 118, 4)

