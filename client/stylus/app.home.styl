    display               block
    top                   50%
    margin-top            -40px
    size                  40px, 80px
    shadow                0 10px 25px rgba(0,0,0,0.5)
    bg                    color, rgba(0,0,0,0.5)
    vendor                transition, all .15s ease-in-out
    z-index               1
    &:hover
      width               50px
      span
        opacity           1
    &.left
      left                0
      rounded             0 4px 4px 0
      span
        bg                position, -220px -100px
        right             20px
    &.right
