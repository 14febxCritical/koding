.terminal-tab
  width               100%
  height              100%
  border              1px solid #ddd //ccc
  vendor(box-sizing,border-box)
  input.kdinput.text
    color           #28fe14
    font-family     mono
    border          none
    display         block
    line-height     initial
    //text-indent     -2px
    width           100%
    height          initial
    
    rounded(0)
    shadow(none)
    background      transparent
    //vendor(box-sizing,border-box)

  .terminal-screen
    width             100%
    height            100%
    padding           0px
    margin            0
    color             #28fe14
    background        #111
    background        -moz-radial-gradient(center, ellipse cover,  #333333 0%, #111111 100%) /* FF3.6+ */
    background        -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#333333), color-stop(100%,#111111)) /* Chrome,Safari4+ */
    background        -webkit-radial-gradient(center, ellipse cover,  #333333 0%,#111111 100%) /* Chrome10+,Safari5.1+ */
    background        -o-radial-gradient(center, ellipse cover,  #333333 0%,#111111 100%) /* Opera 12+ */
    background        -ms-radial-gradient(center, ellipse cover,  #333333 0%,#111111 100%) /* IE10+ */
    background        radial-gradient(center, ellipse cover,  #333333 0%,#111111 100%) /* W3C */

    borderBox()
    span.cursor
      background      transparent
      border          1px solid rgb(180,180,180)

  &.terminal-on-focus
    span.cursor
      border          0
      margin          0
      background      transparent url("../../../images/blinking-cursor.gif") no-repeat
  
  .shell-advanced-settings-wrapper
    position          absolute
    bottom            6px
    right             6px
    width             17px
    height            17px
    border-top        1px solid rgba(255,255,255,.2)
    border-left       1px solid rgba(255,255,255,.1)
    button.kdbutton
      span.icon.cog-white
        bg            position,-82px -301px

.kdtabhandle
  .icon.terminal
    width         14px
    height        15px
    margin-top    4px
    margin-right  4px
    background    transparent url("../../../images/_kd.sprites.png") no-repeat -102px -300px
    display       block
    float         left


