/* StartTab */
.start-tab
  text-align          center
  background          #ffffff /* Old browsers */
  background          -moz-radial-gradient(center, ellipse cover,  #ffffff 0%, #d9d9d9 100%) /* FF3.6+ */
  background          -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#ffffff), color-stop(100%,#d9d9d9)) /* Chrome,Safari4+ */
  background          -webkit-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* Chrome10+,Safari5.1+ */
  background          -o-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* Opera 12+ */
  background          -ms-radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* IE10+ */
  background          radial-gradient(center, ellipse cover,  #ffffff 0%,#d9d9d9 100%) /* W3C */
  /* IE6-9 fallback on horizontal gradient */
  /* filter              progid:DXImageTransform.Microsoft.gradient( startColorstr='#ffffff', endColorstr='#d9d9d9',GradientType=1 ) */
  position            relative
  border              6px solid white
  box-shadow          inset 0 0 2px rgba(0,0,0,0.25)
  box-sizing          border-box

  .kdview
    height          auto

.start-tab-app-container
  overflow-y        visible
  padding-bottom    30px
  text-shadow       0 1px 0 white

  .start-tab-header
    color           #34312E
    font-size       18px
    font-weight     600
    height          auto
    margin-bottom   20px
    padding-top     50px
    text-align      center
    
    span
      color           #6A645E
      display         block
      font-size       13px
      font-weight     normal
      padding-top     5px
  
.app-item-container
  padding         20px 0
  width           100%
  
  figure
    color           #333
    display         inline-block
    min-width       120px
    max-width       200px
    overflow        visible
    padding         20px
    text-align      center
    vertical-align  top
    width           20%
    rounded         4px
    vendor          transition, width .2s ease-out\, height .2s ease-out
    borderBox()
    noTextDeco()
    
    .kdloader
      position      absolute
      top           50%
      left          50%
      margin        -20px 0 0 -20px
      z-index       1000
    
    p
      rounded       4px

    img
      width         100%
    
    strong
      font-size     13px
      display       block
    
    span
      color         #333
      noTextDeco()

    span > span
      font-size     11px
  
    &.disabled
      padding-bottom      40px
      
      img
      strong
      span.data
        opacity         .5
        
      &:after
        background        black
        border-radius     0 0 4px 4px
        bottom            0
        color             #FF9200
        content           'Coming Soon'
        display           block
        left              0
        position          absolute
        opacity           0
        padding           5px 0
        transition        opacity .3s linear
        text-shadow       none
        visibility        none
        width             100%
        
      &:hover:after
        display           block
        opacity           1
        visibility        visible
    
    &:hover
      background        rgba(255, 255, 255, 0.50)
      box-shadow        0 0 20px rgba(0,0,0,0.25)
        
.start-tab-recent-container
  background-color  white
  border            1px solid rgba(0, 0, 0, 0.07)
  box-sizing        border-box
  bottom            0
  left              0
  height            120px
  padding           0
  position          absolute
  
  h3
    background-color  rgba(255, 255, 255, 0.90);
    border-bottom     1px solid rgba(0, 0, 0, 0.07)
    box-sizing        border-box
    color             #4F4F4F
    font-size         13px
    font-weight       300
    height            28px
    line-height       12px
    padding           7px 0 7px 17px
    text-align        left
    top               0
    z-index           2
    
  .start-tab-recent-file
    border-bottom     1px solid rgba(0, 0, 0, 0.07)
    border-right      1px solid rgba(0, 0, 0, 0.07)
    box-sizing        border-box
    color             #333
    display           block
    float             left
    font-size         11px
    height            44px
    line-height       20px
    margin            0
    width             20%
    overflow          hidden
    padding           12px 20px
    text-align        left
    transition        all .1s ease-in-out
    
    .title
      margin            0
      overflow          hidden
      text-overflow     ellipsis
    
    &:hover
      bg                color, #ff9200
  
  .start-tab-no-recent-files
    font-size         14px
    padding-top       30px
 
.start-tab-split-options
  height              80px
  position            absolute
  width               100%
  bottom              -146px
  text-align          center
  transition          all .5s ease-in-out
  padding-bottom      10px
  &.expanded
    bottom            126px
  
  h3
    text-shadow       0 1px 0 white
    font-weight       400
    margin            0 0 20px 0
    
.start-tab-split-option
  background        white
  display           inline-block
  vertical-align    top
  margin-right      10px
  padding           3px
  size              42px, 32px
  vendor            transition, width .3s ease-in-out\, height .3s ease-in-out
  rounded           3px
  shadow            0 0 1px rgba(0,0,0,0.30)
  borderBox()
  
  
  span
    background        #D7D6D5
    display           block
    vendor            transition, width .3s ease-in-out\, height .3s ease-in-out
    rounded           2px
    size              100%, 100%
    overflow          hidden
    padding           0 1px
    &.w50
      width           50%
      padding         0
    &.h50
      height          50%
      margin-bottom   1px
      padding         0
    &.fl
      margin-left     -1px
    &.fr
      margin-right    -1px
    &.full-t
      margin-left     -1px
      padding         0 1px
    &.full-r
      padding-top     1px
    &.full-b
      margin-left     -1px
      padding         0 1px
    &.full-l
      padding-top     1px

  &:hover
    box-shadow        0 0 8px rgba(0,0,0,0.30)

    > div
      background        #FF9200
    

@media only screen and (max-width: 820px), (max-height: 600px)
  .start-tab 
    .start-tab-app-container 
      .start-tab-header
        font-size       16px
        margin-bottom   10px
        padding-top     10px
        
        span
          font-size       12px
          
      .app-item-container
        height          175px
        overflow-y      auto
        padding         6px 0
      
        .start-tab-item:hover
          box-shadow        0 0 6px rgba(0,0,0,0.25)
        
    .start-tab-recent-container
      background-color  white
      border            1px solid rgba(0, 0, 0, 0.07)
      bottom            0
      left              0
      height            47px
      padding           0
      position          absolute
      
      h3
        color             #4F4F4F
        font-size         13px
        height            18px
        line-height       12px
        padding           3px 0 3px 17px
        
      .start-tab-recent-file
        font-size         11px
        height            30px
        line-height       14px
        padding           4px 20px
        
    .start-tab-split-options.expanded
      bottom            52px
      height            auto
      
      h3
        font-size         13px
        margin            0 0 6px 0
      
      .start-tab-split-option
        height            21px
        width             31px
        
        .full-hor-b
          margin-top        9px
          

