.point
  abs()
  bottom              380px
  left                500px
  top                 auto
  display             block
  z-index             99999
  width               20px
  height              20px
  border              3px solid white
  background          rgba(255,146,0,1)
  transition          left 2s, top 2s
  border-radius       50%
  shadow              0px 1px 3px 0px rgba(0,0,0,0.2)


// Click Animation for pointer
.point
  border-radius       50%
  &.clickPulse
    vendor              animation, clickAnimate 1s ease-in-out
    vendor              animation-fill-mode, forwards
@keyframes clickAnimate
  0%
    vendor              transform, scale(1)
    shadow              0 0 0 0 rgba(255,146,0,0)
  15%
    vendor              transform, scale(0.6)
  25%
    vendor              transform, scale(1)
  50%
    shadow              0 0 0 10px rgba(255,146,0,.8)
  100%
    shadow              0 0 0 25px rgba(255,146,0,0)


// Intro animation for 'Show me how!' button

.cta_button
  vendor                animation, bounceIn .6s ease-in-out

@keyframes bounceIn
  0%
    vendor              transform, scale(0)
    opacity             0
  50%
    vendor              transform, scale(1.1)
    opacity             1
  75%
    vendor              transform, scale(0.9)
  100%
    vendor              transform, scale(1)