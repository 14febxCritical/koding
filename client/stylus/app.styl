#main-koding-loader
  abs()
  top               0
  left              0
  z-index           1000
  background        #332F2A url(../images/koding-new-bg.png) repeat-x scroll 0 0

@keyframes pulse
  0%
    opacity .5
  50%
    opacity 1
  100%
    opacity .5

@keyframes shrink
  0%
    vendor       transform, scale(1)
  70%
    vendor       transform, scale(1)
  100%
    vendor       transform, scale(0)

@keyframes fade-in-out
  0%
    opacity      0
  16%
    opacity      1
  84%
    opacity      1
  100%
    opacity      0

.pulsing
  vendor            transition, margin .6s ease-in-out\, opacity .3s ease-in-out
  vendor            animation, pulse 1.5s ease-in-out 100

.main-loading
  vendor            animation, shrink 5s ease-in-out
  vendor            animation-iteration-count, 1
  vendor            transform, scale(0)
  size              100%, 100%
  rel()
  ul
    opacity         0
    transition      opacity 1s ease-in
    top             50%
    left            50%
    margin          -75px 0 0 -57px
    size            115px, 149px
    abs()
    &.in
      opacity       1
    li
      margin-bottom 12px
      size          100%, 12px
      gradient      #f8f8f8, #d0d0d0
      shadow        0 1px 1px rgba(0,0,0,.5)
      &:first-child
        size        100%, 35px
        gradient    #ff9600, #ff7800
      &:nth-child(3)
        width       81px
      &:last-child
        width       69px

