@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"

#static-landing-page
  z-index                     99
  size                        100%, 100%
  top                         0
  bg image,                   url("../images/koding-new-bg.png");
  bg repeat,                  repeat-x
  vendor transition,          top .3s ease
  // shadow                     0 0 50px 20px rgba(0,0,0,0.4)
  overflow                    visible
  abs()
  // &.out
  //   opacity                 0
  &.down
    top                       -100%
    #group-splash-wrapper
      margin-top                0
      shadow                    0 0 20px rgba(0,0,0,0.4)


#group-splash-wrapper
  height                      200px
  margin-top                  -200px
  bg                          color, rgba(0, 0, 0, .75)
  rel()


h3#group-logo
  font-family                 Ubuntu
  size                        auto, 30px
  padding                     2px
  bottom                      0
  right                       10px
  margin-bottom               -42px
  font-size                   20px
  max-width                   80%
  z-index                     10
  display                     inline-block
  overflow                    visible
  color                       rgba(255, 255, 255, .5)
  gradient                    #d64b4b, #ab2c2c
  shadow                      0 0 5px rgba(0, 0, 0, 0.5)\,\
                              inset 0 0 2px 5px rgba(255, 255, 255, 0.1)
  transition                  top .3s ease-in
  abs()
  &.out
    top                       -42px


  a
    border              1px dashed rgba(0, 0, 0, 0.2)
    color               white
    text-shadow         #541313 0 1px 0
    font-weight         400
    display             block
    size                100%, 100%
    line-height         26px
    padding             0 20px
    noTextDeco()
    borderBox()
  i
    top                 -8px
    display             block
    size                2px, 8px
    z-index             0
    bg                  color, #999
    abs()
    &:nth-child(2n+1)
      left              15px
    &:nth-child(2n)
      right             17px
