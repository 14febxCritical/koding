// form bits
.content-display-wrapper
  .content-display
    .profileinfo
      .active

        button.clean-red
        button.cupid-green
          display         inline-block
          margin-right    8px
          padding         16px 20px
          vertical-align  middle
          width           auto

    // .profilestats
    //   > div.contact
    //     min-width           250px

.content-display-wrapper
  .content-display
    .profileinfo
      .action-wrapper
        position            absolute
        top                 -27px
        height              27px
        right               25px
        .custom-link-view
          margin-top        4px
          margin-right      -3px
          span.title
            color           #999
          &:hover
            span.title
              color       linkColor1
          &.edit
            &:hover
              span.icon
                bg          position, -260px -400px
                opacity     1
            .icon
              bg            position, -240px -400px
              opacity       .4
        button.kdbutton
          width             auto
          margin            1px 0 0 10px
          padding           5px 15px 4px
          display           inline-block
          font-size         12px
          font-weight       400

      .kdcontenteditableview
        overflow    visible
        width       auto

        > *
          display         inline-block
          min-width       5px
          padding         4px

        > [contenteditable="true"]
          background      white
          padding         3px
          border          1px solid #C7C7C7
          border-radius   5px

        &.firstName
          > [contenteditable="true"]
            border-right  none
            rounded       5px 0 0 5px

        &.lastName
          > [contenteditable="true"]
            padding-left  5px
            margin-left   -1px
            rounded       0 5px 5px 0

        &.bio > *[contenteditable="true"]
          min-height      80px
          width           600px

      .kdcontenteditableview.placeholder
        color       #B1B1B1

      .profilelocation-form
        display             inline-block
        vertical-align		  baseline

        p
          color               #A5A5A5
          font-size           16px
          font-weight         300
          margin              0 4px 0 8px
          width               auto

      .personal-profile-about
        p
          font-size         15px
          font-weight       300
          margin            3px 4px
          max-width         750px

          &:hover
            background-color      #FFFBD3


      .personal-profile-about.active
        p
          display     none

  .profilearea.own-profile
    .kdcontenteditableview
      > [contenteditable="false"]:hover
        background-color  #FFFBD3

.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        button.clean-red
        button.cupid-green
          margin          8px 0 0 0

.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        span
          border          none
          height          auto
          width           auto
          margin-bottom   0

      .profileavatar-form.active
        button.clean-red
        button.cupid-green
          display         block
          margin          8px 0 0 0

.content-display.member
  .profilearea
    // overflow              visible
    &.own-profile
      .external-profiles
        .external-profile
          visible()
    .external-profiles
      display             inline-block
      vertical-align      top
      margin-top          10px
      .external-profile
        size              24px, 24px
        margin            0 2px 0 0
        sprite()
        fl()
        hidden()
        &.linked
          background-position-y     -860px !important
          visible()
        &.facebook
          bg              position, 0 -890px
        &.twitter
          bg              position, -25px -890px
        &.linkedin
          bg              position, -50px -890px
        &.google
          bg              position, -75px -890px
        &.github
          bg              position, -100px -890px
        &.odesk
          bg              position, -125px -890px
        &.bitbucket
          bg              position, -150px -890px

    a.tag
      color               white

    .kdfileupload
      height              88px
      min-width           10px
      width               88px

      .kdfileuploadarea
        height            88px
        min-width         10px
        width             88px

        span
          bg              color,rgba(255,255,255,.5)
          color           #333
          line-height     24px
          size            82px,82px

    .skilltagslabel
      font-size           12px
      color               #a5a5a5
      margin              0
      width               50px
      fl()

    .tip
      line-height         21px
      font-size           12px
      color               #a5a5a5
      margin-bottom       6px
      fl()

    .skilltagadd
      font-size           11px
      line-height         18px
      margin              0 4px
      noTextDeco()
      fl()

    .personal-skilltags
      span.noskilltags
        display           none

      span.skilltagadd
        background        none
        color             #333
        display           inline-block
        font-weight       300

      .kdlistitemview
        bg                color,#e80
        color             #fff
        border            none
        display           inline-block
        font-size         10px
        font-weight       700
        rounded(3px)
        margin            0 5px 6px 0
        padding           0 20px 0 0
        width             auto

      .form-actions-holder
        padding-top       6px

      form.kdformview
        .kdview.kdautocompletedlistitem
          bg              color,linkColor1
          line-height     18px
          height          18px
          border          none
          margin          2px 5px 6px 0
          padding         0
          rounded         3px
          transition      padding .1s ease-in-out
          a
            color         white
            cursor        pointer
            margin        0

          span.close-icon
            sprite()
            display       none
            z-index       10
            bg            position,-60px -240px
            top           -1px

        .kdautocompletewrapper
          display         none
          width           560px
          background      none
          border          none
          margin          0 0 0 50px
          outline         none

          input.kdinput
            width         100%

        .button-container
          width           70%
          display         none
          margin-top      8px
          text-align      right

          button
            padding       10px 18px
            margin        0 0 0 8px
            width         auto

      form.kdformview.active
        // background-color  #FFFBD3
        .kdautocompletewrapper
          display         block

        .skilltagadd
          display         none

        .kdview.kdautocompletedlistitem
          padding         0 20px 0 0
          span.close-icon
            display       inline-block

        input.kdinput
        .button-container
          display         block

.avatar-container
  .kdmodal-content
    overflow              hidden!important

.avatar-menu
  overflow                visible

  .kdlistview
    background-color      #fff !important

  .kdlistitemview
    overflow              visible
  .avatar-change-menu
    overflow              visible
    .wrapper
      overflow            hidden
      height              24px
    .avatar-button
      border-radius       15px
      width               126px
      margin              0 4px

      &.cancel
      &.take
        width             80px
        float             right

      &.retake
      &.save
        width             195px

      &.gravatar-confirm
        float             right

    .avatar-holder
      box-shadow          inset 0px 7px 20px -10px rgba(0,0,0,0.5),
                          0 7px 20px -7px rgba(0,0,0,0.8)
      vendor              transition-delay,    300ms
      vendor              transition-property, height
      vendor              transition-duration, 700ms
      overflow            hidden
      border-radius       0 0 5px 5px
      background          #ededed url(/images/photo.png) center center no-repeat
      abs                 30px, 0, 0, 5px
      size                400px, 0px
      &.opened
        height            400px
        &.webcam
          height          300px
          video
          canvas
            width         400px
            abs           0px

      .avatarview
        box-shadow        inset 0px 7px 20px -10px rgba(0,0,0,0.5),
                          0 7px 20px -7px rgba(0,0,0,0.8)

    article

      button
        outline           0

      strong
        font-size         14px
        font-weight       bold
        margin-left       10px
        line-height       24px

      &:first-of-type
        vendor            transition-duration, 100ms

    &.photoview
      article:first-of-type
        margin-top        -24px
        opacity           0

    &.saveview
      article:first-of-type
        margin-top        -48px
        opacity           0

    &.gravatar-confirm
      article:first-of-type
        margin-top        -72px
        opacity           0

    &.loading
      article:first-of-type
        margin-top        -96px
        opacity           0


.kdwebcamview
  width             auto
  height            auto
  display           inline-block
  background-color  #000

  video
    abs             0px 0 0 0px
    z-index         2
    width           100%
    vendor          transition-duration, 2s
    &.invisible
      opacity       0

  .snap-button
    abs             0 0px 0px 0
    z-index         1
    height          35px
    background-color #444
    color           #ff9200
    rounded         5px
    margin          10px
    kalc            width, 100% \- 20px, !important
    opacity         0.8
    font-weight     bold
    border          2px solid #333
    &:hover
      opacity       0.9

    &.save
      kalc            width, 50% \- 15px, !important
      background-color green
      color           #fff

    &.retake
      kalc            width, 50% \- 15px, !important
      abs             0 0 0px 0px

.kdwebcamview-flash
  abs               0px 0 0 0px
  z-index           10002
  background-color  #ffffff
  opacity           0.95
  &.flashed
    vendor        transition-property, opacity
    vendor        transition-duration, 500ms
    opacity       0