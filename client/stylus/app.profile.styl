}

// form bits
.content-display-wrapper
  .content-display
    .profileinfo
      .active

        button.clean-red
        button.cupid-green
          display         inline-block
          margin-right    8px
          padding         16px 20px
          vertical-align  middle
          width           auto

    // .profilestats
    //   > div.contact
    //     min-width           250px

.content-display-wrapper
  .content-display
    .profileinfo
      button
        width       auto
        position    absolute
        top         10px
        padding     5px 10px

      button.edit
        right       10px

      button.save
        right       80px

      button.cancel
        right       15px

      .kdcontenteditableview
        overflow    visible
        width       auto

        > *
          display         inline-block
          min-width       5px
          padding         4px

        > [contenteditable="true"]
          background      white
          padding         3px
          border          1px solid #C7C7C7
          border-radius   5px

        &.firstName
          > [contenteditable="true"]
            border-right  none

        &.lastName
          > [contenteditable="true"]
            padding-left  5px
            border-left   none

        &.firstName
        &.lastName
          > [contenteditable="true"]
            border-radius 0

        &.bio > *[contenteditable="true"]
          min-height      80px
          width           600px

      .kdcontenteditableview.placeholder
        color       #B1B1B1

      .profilelocation-form
        display             inline-block
        vertical-align		  baseline

        p
          color               #A5A5A5
          font-size           16px
          font-weight         300
          margin              0 4px 0 8px
          width               auto

          &:hover
            background-color  #FFFBD3

      .personal-profile-about
        p
          font-size         15px
          font-weight       300
          margin            3px 4px
          max-width         750px

          &:hover
            background-color      #FFFBD3


      .personal-profile-about.active
        p
          display     none

  .profilearea.own-profile
    .kdcontenteditableview
      > [contenteditable="false"]:hover
        background-color  #FFFBD3

.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        button.clean-red
        button.cupid-green
          margin          8px 0 0 0

.content-display-wrapper
  .content-display
    .profileleft
      .profileavatar-form
        span
          border          none
          height          auto
          width           auto
          margin-bottom   0

      .profileavatar-form.active
        button.clean-red
        button.cupid-green
          display         block
          margin          8px 0 0 0

.content-display.member
  .profilearea
    // overflow              visible

    a.tag
      color               white

    .kdfileupload
      height              88px
      min-width           10px
      width               88px

      .kdfileuploadarea
        height            88px
        min-width         10px
        width             88px

        span
          bg              color,rgba(255,255,255,.5)
          color           #333
          line-height     24px
          size            82px,82px

    .skilltagslabel
      font-size           12px
      color               #a5a5a5
      margin              0 0 0 4px
      width               74px
      fl()

    .tip
      line-height         1.8em
      font-size           12px
      color               #a5a5a5
      fl()

    .skilltagadd
      font-size           11px
      line-height         18px
      margin              0 4px
      noTextDeco()
      fl()

    .personal-skilltags
      span.noskilltags
        display           none

      span.skilltagadd
        background        none
        color             #333
        display           inline-block
        font-weight       300

      .kdlistitemview
        bg                color,#e80
        color             #fff
        border            none
        display           inline-block
        font-size         10px
        font-weight       700
        rounded(3px)
        margin            0 5px 6px 0
        padding           0 20px 0 0
        width             auto

      .form-actions-holder
        padding-top       6px
        &:hover
          background-color      #FFFBD3

      form.kdformview
        .kdview.kdautocompletedlistitem
          bg              color,linkColor1
          line-height     18px
          height          18px
          border          none
          margin          0 5px 6px 0
          padding         0
          rounded(3px)
          transition      padding .1s ease-in-out
          &:hover
            bg            color,#0A92BA
            a
              bg          color,#0A92BA
          a
            color         white
            cursor        pointer
            margin        0
            &:hover
              bg          color,#0A92BA

          span.close-icon
            sprite()
            display       none
            z-index       10
            bg            position,-60px -240px
            top           -1px

        .kdautocompletewrapper
          display         none
          width           70%
          background      none
          border          none
          margin          8px 0
          outline         none

          input.kdinput
            width         100%

        .button-container
          width           70%
          display         none
          margin-top      8px
          text-align      right

          button
            padding       10px 18px
            margin        0 0 0 8px
            width         auto

      form.kdformview.active
        // background-color  #FFFBD3
        .kdautocompletewrapper
          display         block

        .skilltagadd
          display         none

        .kdview.kdautocompletedlistitem
          padding         0 20px 0 0
          span.close-icon
            display       inline-block

        input.kdinput
        .button-container
          display         block
