@import "./client/Framework/themes/default/kdfn"
@import "./client/stylus/appfn"
@import "nib"
@import "nib/gradients"
@import "nib/vendor"


#static-landing-page
  &.group-leaving
    rel()
  &.group-shrinking
    height              0
  &.group-fading
    opacity             0
  &.group-hidden
    z-index             1
    display             none

  #main-loader > span
    margin              20px 0px 20px 60px

.group-header
  width                 100%
  height                51px
  display               none

.group-personal-wrapper
  height                100%
  width                 160px
  fl()

.group-avatar
  vendor background-size, 160px auto
  shadow                  inset 0 0 13px 0 rgba(0,0,0,0.6)
  vendor transition,      margin-left 0.6s ease-in-out\,height 0.5s linear
  height                  120px
  width                   160px
  background-position     center center
  background-repeat       no-repeat


.group-avatar-drop
  abs()
  size                  60px, 60px
  left                  48px
  bottom                66px
  opacity               .4
  padding               0
  border                1px solid rgba(0,0,0,0.5)
  rounded               60px
  background            rgba(0,0,0,0.25)
  shadow                0 2px 6px rgba(0,0,0,0.5),inset 0 8px rgba(255,255,255,0.1),inset 0 0px rgba(255,255,255,0.2),inset 0 11px 28px rgba(255,255,255,0.25),inset 0 -15px 30px rgba(0,0,0,0.3);
  vendor transition,    opacity 0.4s ease-in-out
  background-position   15px
  background-size       30px
  background-repeat     no-repeat
  &:hover
    opacity             1

#landing-page-avatar-drop
  position              fixed
  background-image      url('/images/logos/50.png')


.group-buttons
  min-height                27px
  border-top            1px solid #403d37
  width                 100%
  bg color,             rgba(0,0,0,0.2)
  padding 0 5px 5px 0
  borderBox()


.group-title
  borderBox()
  rel()
  size                      100%, 160px
  // padding                   0 50px 0
  z-index                   10

  .group-title-wrapper
    // bg color,                 rgba(0,0,0,0.2)
    // padding                 30px 40px
    height                  100px

  .group-name
    borderBox()
    vendor                  font-smoothing, antialiased
    vendor                  text-rendering, geometricPrecision
    font-size               42px
    width                   100%
    display                 inline-block
    color                   rgba(255,255,255,.9)
    white-space             nowrap
    text-overflow           ellipsis
    font-weight             900
    headerFont()


  .group-bio
    borderBox()
    vendor                  font-smoothing, antialiased
    vendor                  text-rendering, geometricPrecision
    color                   rgba(255,255,255,.8)
    font-size               14px
    text-overflow           ellipsis
    max-width               800px
    font-weight             300
    display                 block
    headerFont()

    #landing-page-sidebar
      width                       auto
      height                      auto
      display                     inline-block
      padding                     0
      margin-right                -3px

      .kdlistview-navigation
        text-align                center
        width                     100%
        margin                    0px

        .navigation-item
          border                  none
          width                   auto
          min-width               10px
          display                 inline-block
          z-index                 1000
          margin                  0 5px 0 0

          &.selected
            margin                0 5px 0 0
            bg color,             transparent

.group-content-wrapper
  height                        100%
  width                         auto
  bg color,                     white
  borderBox()

  bg size,                      cover
  bg repeat,                    no-repeat
  bg position,                  center center
  bg image,                     url("http://www.wallpowper.com/wallpaper/2012/07/23/wood-background-dark-flooring-desktop-562248.jpg")

  &.edit
    .group-splitview
      .group-loading-content
        .content-item.front
          vendor transform,rotateY(-180deg)
        .content-item.back
          vendor transform, rotateY(0deg)

.group-splitview
  overflow                     auto
  size                         100%, 100%
  borderBox()
  vendor perspective-origin-x, 50%
  vendor perspective-origin-y, 50%

  // &.vignette
  //   gradient2               50% 50%, circle farthest-corner, transparent 25%, rgba(0,0,0,.4) 100%



.kdlistview.kdview.group-loading-content
.group-loading-content
  vendor                transition, background-color 0.2s linear
  vendor                perspective, 800px
  overflow              auto
  height                100%
  width                 auto
  borderBox()
  rel()

  .content-item
    padding             0 50px 100px
    height              auto
    vendor              transform-style, preserve-3d
    vendor              transition, all .4s ease-in;
    vendor              backface-visibility, hidden
    borderBox()

    &.front
      z-index           2

    &.back
      abs()
      top               0
      vendor            transform, rotateY(180deg);

  .content-item-scroll-wrapper
    padding                             40px
    margin                              0 auto
    rounded                             0 0 5px 5px
    bg                                  color, rgba(0,0,0,.2)
    borderBox()

  .has-markdown
    color                               rgba(255,255,255,.9)
    borderBox()
    h1, h2, h3, h4, h5, h6

.group-nickname
  borderBox()
  font-size 14px
  width auto
  display inline-block
  color #aaa
  padding 5px 5px 0 13px

.group-links
  margin                24px 0 27px 15px
  ul li
    line-height       20px
    margin-bottom     4px
    a
      color             #adadad!important
      noTextDeco()
      font-size         14px
      font-weight       300
    span.icon
      sprite()
      fl()
      size            20px, 20px
      margin-right    18px
    &.blog
      span.icon
        bg position,  0 -80px
    &.twitter
      span.icon
        bg position,  0 -100px
    &.github
      span.icon
        bg position,  0 -280px

  ul.admin li a
    padding-top 3px
    font-size         11px
  hr
    border-top          1px solid rgba(44,41,36,0.5)
    border-bottom       1px solid rgba(255,255,255,0.07)
    width               auto
    height              0
    margin              20px 20px 10px 6px
    padding             0 11px

.group-content-links
  margin-right          0px
  width                 139px
  height                100%
  border-right          1px solid #e8e8e8
  padding               19px 23px 19px 23px
  fl()
  borderBox()

  h4
    text-transform      uppercase
    font-size           9px
    color               #9f9d9a
    font-weight         400
    margin-bottom       9px

  li
    color               #7c603b
    font-weight         normal
    noTextDeco()
    cursor              pointer
    line-height         16px
    font-size           12px
    vertical-align      baseline
    margin-bottom       6px

    &.selected
      color:                #ff9200;
      font-weight:          bold;


.custom-image-selectitemview
  borderBox()
  rel()
  vendor transition,                    width 0.2s linear
  rounded                               3px
  bg size,                              cover
  cursor                                pointer
  width                                 50%
  height                                auto
  // min-height                            100px
  display                               inline-block
  padding                               5px //5px 2px
  border                                1px solid transparent
  vertical-align                        top
  text-align                            center

  span.data
    abs()
    borderBox()
    bg color,                           rgba(200,200,200,0.5)
    top                                 5px
    left                                5px
    right                               5px
    padding                             5px 8px 3px
    display                             block
    text-shadow                         0 0 3px rgba(0,0,0,0.5)
    color                               #fbfbfb
    border-bottom                       1px solid rgba(255,255,255,0.1)

  &.selected
    bg color,                           rgba(0,0,0,0.2)
    shadow                              inset 0 0 5px 0px rgba(0,0,0,0.2)
    border 1px solid                    rgba(0,0,0,0.1)

    span
      color                             white

@media (min-width: 0)
  .custom-image-selectitemview
    size                               100%

@media (min-width: 480px) and (max-width: 599px)
  .custom-image-selectitemview
    size                               50%

@media (min-width: 600px) and (max-width: 799px)
  .custom-image-selectitemview
    size                               33.33333%

@media (min-width: 800px) and (max-width: 1199px)
  .custom-image-selectitemview
    size                               25%

@media (min-width: 1200px) and (max-width: 1599px)
  .custom-image-selectitemview
    size                               16.6666667%

@media (min-width: 1600px)
  .custom-image-selectitemview
    size                               10%


.custom-color-picker
.custom-image-default
.custom-color-default
.custom-image-upload
  borderBox()
  width                                 100%
  height                                120px
  rounded                               3px
  display                               block

.custom-color-default
  border                                1px solid rgba(0,0,0,0.05)

.custom-select-background-view
  width                                 100%
  height                                auto
  borderBox()
  margin                                10px 0 20px 0

  span.title
    display                             block
    margin-bottom                       10px
  .listview-wrapper
    height                              auto

.custom-select-background-upload-view
  hidden()

.custom-color-picker
  padding-top                           35px
  text-align                            center

  .kdinput.text.color-picker
    width                               80%
    height                              auto
    text-align                          center
    margin                              auto auto
    bg color,                           rgba(255,255,255,0.5)
    shadow                              0 1px 0 rgba(255,255,255,0.5)
    &:hover
      border                            1px solid rgba(0,0,0,0.2)
      shadow                            none //0 1px 0 rgba(0,0,0,0.2)
    &:focus
      border                            1px solid rgba(0,0,0,0.5)
      shadow                            none //0 1px 0 rgba(0,0,0,0.5)

.group-customize-view
  overflow-y                            auto

  h1.customize-title
    display                             block
    font-size                           24px
    font-weight                         300
    color                               #444
    margin-bottom                       20px
    span.settings-span
      font-size                         14px
      display                           inline-block
      .settings-link
        margin                          2px

  .back-button
    fr()
    margin-right                        5px


  .save-button
    margin                              10px 5px

.custom-image-upload + span.data
  border-bottom                         1px dashed rgba(125,190,241,0.5)

.custom-image-upload
  bg size,                              cover
  border                                1px dashed rgba(125,190,241,0.5)

  .image-uploader
    min-width                           100%
    height                              93px
    border                              1px solid transparent

  .kdview.kdfileupload

    .kdfileuploadarea
      height                            100%
      shadow                            none
      border                            none