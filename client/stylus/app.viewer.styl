.previewer-body
  width               100%
  height              100%
  padding-bottom      45px
  
  iframe
    box-sizing          content-box
    height              100%

.viewer-header
  height                37px
  color                 #888
  border                1px solid #e2e2e2
  border-bottom-color   #dadada
  background-image      -moz-linear-gradient(bottom, #e7e7e7 0%, #f9f9f9 100%)
  background-image      -webkit-linear-gradient(bottom, #e7e7e7 0%, #f9f9f9 100%)
  background-image      linear-gradient(bottom, #e7e7e7 0%, #f9f9f9 100%)
  border-radius         3px
  box-shadow            0 1px 4px rgba(0,0,0,0.1)
  width                 auto
  
  .viewer-title
    display             inline-block
    height              auto
    width               auto
    line-height         20px
    padding             9px 15px
    font-size           11px
    text-shadow         0 1px 0 #FFF
  
  button
    float                 right
    margin                5px 5px 0 0
    height                25px
    padding               2px
    .refresh-btn
      display               block
      height                16px
      width                 16px
      background-image      url(../images/_kd.sprites.png)
      background-position   -1px -521px


.kdcontextmenu.editor-advanced-settings-menu
  button.kdbutton.with-icon span.icon.cog-white
    bg          position,-81px -301px
  
  .kdcontextmenutreeview
    .kdtreeitemview
      input.kdinput.text
        display   block
        float     right
        margin    0 10px 0 0
        width     52px
        

