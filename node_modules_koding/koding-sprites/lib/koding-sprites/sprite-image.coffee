"use strict"

{ basename } = require 'path'

module.exports = class SpriteImage

  constructor: ({ @name, @sprite, @isRetina, @options, props: { @width, @height, x: @left, y: @top, path: @srcPath, @data } }) ->
    if @isRetina
      @width          //= 2
      @height         //= 2
      @left           //= 2
      @top            //= 2
      @sprite.width   //= 2
      @sprite.height  //= 2

    @filename = basename @sprite.src
