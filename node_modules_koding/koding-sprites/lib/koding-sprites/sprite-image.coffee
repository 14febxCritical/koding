{ basename } = require 'path'

module.exports = class SpriteImage

  constructor: ({ @name, @sprite, @options, props: { @width, @height, x: @left, y: @top, path: @srcPath, @data } }) ->

  retina: ->
    {
      width   : @width / 2
      height  : @height / 2
      top     : @top / 2
      left    : @left / 2
      sprite  :
        src   : @sprite.src
        width : @sprite.width / 2
        height: @sprite.height / 2
    }

  filename: -> basename @sprite.src
