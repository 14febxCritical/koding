# kite worker example
{Worker} = require 'koding-kite'

class MathWorker extends Worker
  @kiteName = 'mathworker'
  @username = 'devrim'
  square: (request, callback)->
    console.log "square called !", arguments
    request.remoteKite.tell "log", "received args"
    callback null, request.args * request.args

mathworker = new MathWorker
mathworker.runServer()
