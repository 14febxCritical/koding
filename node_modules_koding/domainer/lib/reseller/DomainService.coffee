  isDomainAvailable:(domainName, tld, callback)->
    params =
      "domain-name"         : domainName
      "tlds"                : tld
      "suggest-alternative" : false

    options =
      service    : "domains"
      action     : "available"
      parameters : params

    @makeRequestToResellerApi options, (err, apiResponseBody) =>
      domainKey   = "#{domainName}.#{tld}"
      status      = apiResponseBody?[domainKey]?.status
      if status isnt "available"
        @getDomainSuggestion domainName, (suggestions)->
          callback err, status, suggestions
      callback err, status


  getDomainSuggestion: (domainName, callback) ->
    domainr.search domainName, (suggestionResponse) =>
      suggestions = (domain.domain for domain in suggestionResponse.results when \
        domain.availability is "available" and
        splitDomain(domain.domain).extension in availableTLDs)
      callback suggestions


