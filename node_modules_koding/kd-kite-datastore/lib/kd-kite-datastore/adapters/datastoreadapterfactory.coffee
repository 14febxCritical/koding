MergenAdapter = require './mergenadapter'
DummyAdapter = require './dummyadapter'
DataStore = require '../index'

module.exports = class KiteDataStoreAdapterFactory
  # default data store is mergen. (https://github.com/ybrs/mergen)
  @create:(name="mergen", config, callback) =>
    switch name
      when 'mergen' then callback new MergenAdapter config
      when 'dummy'  then callback new DummyAdapter config
      else throw new Error 'Unsupported adapter name'
