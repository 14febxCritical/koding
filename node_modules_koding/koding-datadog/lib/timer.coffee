module.exports = class Timer

  constructor : (startOnCreate = true) -> @start()  if startOnCreate


  startTime : 0


  stopTime : 0


  elapsedTime : 0


  start : -> @startTime = Date.now()


  stop : -> @stopTime = Date.now()


  getElapsedTimeInMilliSecs : ->

    @stop()
    @elapsedTime = (@stopTime - @startTime)
    @stopTime    = 0
    @startTime   = 0

    return @elapsedTime


  getElapsedTimeInSecs : -> @getElapsedTimeInMilliSecs() / 1000


