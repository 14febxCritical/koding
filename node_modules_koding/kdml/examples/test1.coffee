KDML = require '../lib/kdml'

k = (class)

api =
	KDView: k
	KDListView: k
	SearchFacet: k

kdml = new KDML {api}

kdml.on 'error', (err)->
  console.log "Idiotic XML error: #{err}"

kdml.parse """
<view>
	<listView name="searchFacets">
		<listItemView class="SearchFacet">Everything</listItemView>
		<listItemView class="SearchFacet">Followed</listItemView>
	</listView>
	<buttonView cssClass="clean-gray inside-button" />
</view>
"""

kdml.resume()