<VirtualHost *:80>
  ServerName {{.Hostname}}
  ServerAlias {{.HostnameAliasesLine}}
  DocumentRoot /home/{{.SitesHomeName}}/Web

  <Directory />
    Options FollowSymLinks
    AllowOverride None
  </Directory>
  <Directory /home/{{.SitesHomeName}}/Web/>
    Options Indexes FollowSymLinks MultiViews +ExecCGI
    AddHandler cgi-script .cgi .pl .rb .py
    AllowOverride All
    Order allow,deny
    allow from all
  </Directory>

  ErrorLog ${APACHE_LOG_DIR}/error.log
  LogLevel warn

  CustomLog ${APACHE_LOG_DIR}/access.log vhost_combined
</VirtualHost>
