logpath=<%= @logpath %>/mongod.log
logappend=true
fork = true
port = <%= @port %>
dbpath=<%= @dbpath %>
<% if @journal %>
journal=true
<% else -%>
nojournal=true
<% end -%>

<% if @auth %>
auth = true
<% else -%>
noauth = true
<% end -%>


<% if @httpinterface %>
rest=true
<% else -%>
nohttpinterface=false
<% end -%>

<% if @master %>
master=true
<% if @oplogsize %>
oplogSize = <% @oplogsize %>
<% end -%>
<% end -%>

<% if @slave %>
slave=true
source = <% @source %>
<% end -%>

