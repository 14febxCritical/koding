#!/usr/bin/env coffee

{argv}   = require 'optimist'
{exec}   = require 'child_process'
fs       = require 'fs'
log      = console.log
 
build = (o)->
 
	exec "cd node_modules_koding/koding-broker-client && cake build",->
		log "koding-broker-client is built."
	 
	  buildClient = ->
	    boo = require('./Builder')
	    b = new boo
	    b.buildSpritesAndClient {}


	  buildClient "",()->
	    log "client is built."
 
 
build()