import Options
from os import unlink, symlink, popen
from os.path import exists 

srcdir = "."
blddir = "../../../build/app/src/nodejs/controller"
VERSION = "0.0.1"

def set_options(opt):
  opt.tool_options("compiler_cxx")

def configure(conf):
  conf.check_tool("compiler_cxx")
  conf.check_tool("node_addon")

def build(bld):
  obj = bld.new_task_gen("cxx", "shlib", "node_addon")
  obj.target = "terminal_controller"
  obj.source = ["src/controller.cpp","../screen/src/screen_wrap.cpp","../terminal/src/terminal_wrap.cpp","src/main.cpp"]
  obj.install_path ="../../../nodejs/lib"
  obj.cxxflags = ["-g","-I../../../libraries/log/include","-I../../../libraries/terminal/include","-I../../../../sdk/include","-I../../../../sdk/include/pbe","-I../../../../../src/nodejs/common/src","-I../../../../../src/nodejs/screen/src","-I../../../../../src/nodejs/terminal/src"]
  obj.linkflags = ["-g","-lpthread","-lutil","-L../../../libraries/terminal/lib","-lterm","-L../../../libraries/log/lib","-llog","-L../../../../sdk/lib.static/boost","-lboost_thread-mt","-lboost_system-mt","-lboost_log-mt","-lboost_filesystem-mt","-L../../../../sdk/lib.static/pbe","-lpbe"]


