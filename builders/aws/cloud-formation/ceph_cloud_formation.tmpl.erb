{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Deploy Ceph OSD",
    "Parameters": {
        "KeyName": {
            "Default" : "koding",
            "Description": "Name of an existing EC2 KeyPair to enable SSH access into the OSD server",
            "Type": "String"
        },
        "InstanceType": {
            "Default": "m1.small",
            "Description": "The type of EC2 instance used for the ceph OSD server",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9\\.]+"
        },
        "OsdID": {
            "Description": "The osd ID",
            "Type": "String",
            "AllowedPattern": "[0-9]+"
        },
        "HostedZone" : {
            "Default": "prod.aws.koding.com",
            "Type": "String",
            "Description": "The DNS name of an existing Amazon Route 53 hosted zone"
        },
        "AWSZone": {
            "Default" : "us-east-1a",
            "Type": "String",
            "Description": "AWS availability zone us-east-1a|us-east-1b|us-east-1c|us-east-1d ",
            "AllowedPattern": "[a-z0-9\\-]+"
        }
    },

    "Mappings": {
        "AWSZoneMap": {
            "us-east-1a" : {
                "subnet" : "subnet-dcd019b6"
            },
            "us-east-1b" : {
                "subnet" : "subnet-1ef90373"
            },
            "us-east-1c" : {
                "subnet" : "subnet-71fe041c"
            },
            "us-east-1d" : {
                "subnet" : "subnet-c5fe04a8"
            }
        }
    },

    "Resources": {
        "CephInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-3d4ff254",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SubnetId": { "Fn::FindInMap" : [ "AWSZoneMap", { "Ref" : "AWSZone" }, "subnet" ]},
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {"Fn::Join": ["",["osd",{"Ref": "OsdID"},"-",{"Ref" : "AWSZone"} ]]}
                    },
                    {
                        "Key": "CephType",
                        "Value": "osd"
                    },
                    {
                        "Key": "CephID",
                        "Value": {
                            "Ref": "OsdID"
                        }
                    }
                ],
                "SecurityGroupIds": [
                    "sg-b17399de"
                 ],
                 "UserData":{"Fn::Base64": {"Fn::Join": ["",[ 
                                        <%= bootstrap_script.to_json %>,
                                        "hostname: ",
                                        { "Fn::Join" : [ "", ["osd",{"Ref" : "OsdID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"} ,"."]]}
                                        ],
                                        "\nfqdn: ",
                                        { "Fn::Join" : [ "", ["osd",{"Ref" : "OsdID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"} ,"."]]}
                                    ] 
                                } 
                            }
            }
        },
        "CephHostRecord":{
            "Type": "AWS::Route53::RecordSet",
            "Properties":{
                "HostedZoneName": { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
                "Name" : { "Fn::Join" : [ "", ["osd",{"Ref" : "OsdID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"} ,"."]]},
                "Type" : "A",
                "TTL" : "900",
                "ResourceRecords" : [ { "Fn::GetAtt" : [ "CephInstance", "PrivateIp" ] } ]
            }
        }
    },
    "Outputs":{
        "InstanceId" : {
          "Description" : "InstanceId of the newly created EC2 instance",
          "Value" : { "Ref" : "CephInstance" }
        },
        "CephID" : {
          "Description" : "ID of the newly created OSD server ",
          "Value" : { "Ref" : "OsdID" }
        },
        "AZ" : {
          "Description" : "Availability Zone of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "CephInstance", "AvailabilityZone" ] }
        },
        "PrivateIP" : {
          "Description" : "Private IP address of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "CephInstance", "PrivateIp" ] }
        },
        "DomainName": {
            "Description":"FQDN of newly created EC2 instamce",
            "Value":{ "Fn::Join" : [ "", ["osd",{"Ref" : "OsdID"}, "-", {"Fn::GetAtt" : [ "CephInstance", "AvailabilityZone" ]}, ".", {"Ref" : "HostedZone"} ,"."]]} 
        }

    }
        

}
