{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Development Web Server: <%= username %>",

    "Resources": {
        "WebInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "InstanceType" : "c1.medium",
                "ImageId": "ami-3d4ff254",
                "KeyName": "koding",
                "UserData":{"Fn::Base64": <%= bootstrap_script.to_json %>}
            }
        },
        "WebHostName":{
            "Type" : "AWS::Route53::RecordSet",
            "Properties" : {
                "HostedZoneName" : "dev.aws.koding.com.",
                "Comment" : "...",
                "Name" : "<%= username %>.dev.aws.koding.com",
                "Type" : "CNAME",
                "TTL" : "900",
                "ResourceRecords" : [ { "Fn::GetAtt" : [ "WebInstance", "PublicDnsName" ] } ]
            }
        }
    },
    "Outputs":{
        "InstanceId" : {
          "Description" : "InstanceId of the newly created EC2 instance",
          "Value" : { "Ref" : "WebInstance" }
        },
        "AZ" : {
          "Description" : "Availability Zone of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "WebInstance", "AvailabilityZone" ] }
        },
        "PrivateIP" : {
          "Description" : "Private IP address of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "WebInstance", "PrivateIp" ] }
        },
        "DomainName": {
            "Description":"FQDN of newly created EC2 instamce",
            "Value": { "Ref" : "WebHostName"}
        }

    }
}
