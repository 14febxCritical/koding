{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Deploy Ceph <%= type %>",
    "Parameters": {
        "KeyName": {
            "Default" : "koding",
            "Description": "Name of an existing EC2 KeyPair to enable SSH access into the <%= type %> server",
            "Type": "String"
        },
        "InstanceType": {
            "Default": "m1.small",
            "Description": "The type of EC2 instance used for the ceph <%= type %> server",
            "Type": "String",
            "AllowedPattern": "[a-zA-Z0-9\\.]+"
        },
        "<%= type %>ID": {
            "Description": "The <%= type %> ID",
            "Type": "String",
            <% if type == 'mon' %>
            "AllowedPattern": "[a-z]+"
            <% elsif type == 'osd' %>
            "AllowedPattern": "[0-9]+"
            <% end %>
        },
        "HostedZone" : {
            "Default": "prod.aws.koding.com",
            "Type": "String",
            "Description": "The DNS name of an existing Amazon Route 53 hosted zone"
        },
        "AWSZone": {
            "Default" : "us-east-1a",
            "Type": "String",
            "Description": "AWS availability zone us-east-1a|us-east-1b|us-east-1c|us-east-1d ",
            "AllowedPattern": "[a-z0-9\\-]+"
        <% if type == 'mon' %>
        }
        <% end %>
        <% if type == 'osd' %>
        },
        "VolumeSize": {
            "Type": "String",
            "Description": "EBS volume size in GiBs. Two volumes will be attached for LVM striping",
            "AllowedPattern": "[0-9]+"
        }
        <% end %>
    },

    "Mappings": {
        "AWSZoneMap": {
            "us-east-1a" : {
                "subnet" : "subnet-dcd019b6"
            },
            "us-east-1b" : {
                "subnet" : "subnet-1ef90373"
            },
            "us-east-1c" : {
                "subnet" : "subnet-71fe041c"
            },
            "us-east-1d" : {
                "subnet" : "subnet-c5fe04a8"
            }
        }
    },

    "Resources": {
        <% if type == 'osd' %>
        "Volume0": {
            "Type": "AWS::EC2::Volume",
            "Properties": { 
                "AvailabilityZone": { "Ref" : "AWSZone" },
                "Size": { "Ref" : "VolumeSize"},
                "Tags": [
                    {"Key": "Name", "Value":{"Fn::Join": ["",["<%= type %>","-",{"Ref": "<%= type %>ID"},"-",{"Ref" : "AWSZone"} ]]}  }
                ]
             }
        },
        "Volume1": {
            "Type": "AWS::EC2::Volume",
            "Properties": { 
                "AvailabilityZone": { "Ref" : "AWSZone" },
                "Size": { "Ref" : "VolumeSize"},
                "Tags": [
                    {"Key": "Name", "Value":{"Fn::Join": ["",["<%= type %>","-",{"Ref": "<%= type %>ID"},"-",{"Ref" : "AWSZone"} ]]} }
                ]
             }
        },
        <% end %>
        "CephInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "ImageId": "ami-3d4ff254",
                "KeyName": {
                    "Ref": "KeyName"
                },
                "SubnetId": { "Fn::FindInMap" : [ "AWSZoneMap", { "Ref" : "AWSZone" }, "subnet" ]},
                <% if type == 'osd' %>
                "Volumes": [
                    {
                        "Device": "/dev/sdf",
                        "VolumeId": {"Ref": "Volume0"}
                    },
                    {
                        "Device": "/dev/sdg",
                        "VolumeId": {"Ref": "Volume1"}
                    }
                ],
                <% end %>
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": {"Fn::Join": ["",["<%= type %>","-",{"Ref": "<%= type %>ID"},"-",{"Ref" : "AWSZone"} ]]}
                    },
                    {
                        "Key": "CephType",
                        "Value": "<%= type %>"
                    },
                    {
                        "Key": "CephID",
                        "Value": {
                            "Ref": "<%= type %>ID"
                        }
                    }
                ],
                "SecurityGroupIds": [
                    "sg-b17399de"
                 ],
                 "UserData":{"Fn::Base64": {"Fn::Join": ["",[ 
                                        <%= bootstrap_script.to_json %>,
                                        "hostname: ",
                                        { "Fn::Join" : [ "", ["<%= type %>","-",{"Ref" : "<%= type %>ID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"}]]},
                                        "\nfqdn: ",
                                        { "Fn::Join" : [ "", ["<%= type %>","-",{"Ref" : "<%= type %>ID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"} ,"."]]}
                                    ] 
                                  ]
                                } 
                            }
            }
        },
        "CephHostRecord":{
            "Type": "AWS::Route53::RecordSet",
            "Properties":{
                "HostedZoneName": { "Fn::Join" : [ "", [{"Ref" : "HostedZone"}, "." ]]},
                "Name" : { "Fn::Join" : [ "", ["<%= type %>","-",{"Ref" : "<%= type %>ID"}, "-",{"Ref" : "AWSZone"} , ".", {"Ref" : "HostedZone"} ,"."]]},
                "Type" : "A",
                "TTL" : "900",
                "ResourceRecords" : [ { "Fn::GetAtt" : [ "CephInstance", "PrivateIp" ] } ]
            }
        }
    },
    "Outputs":{
        "InstanceId" : {
          "Description" : "InstanceId of the newly created EC2 instance",
          "Value" : { "Ref" : "CephInstance" }
        },
        "CephID" : {
          "Description" : "ID of the newly created <%= type %> server ",
          "Value" : { "Ref" : "<%= type %>ID" }
        },
        "AZ" : {
          "Description" : "Availability Zone of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "CephInstance", "AvailabilityZone" ] }
        },
        "PrivateIP" : {
          "Description" : "Private IP address of the newly created EC2 instance",
          "Value" : { "Fn::GetAtt" : [ "CephInstance", "PrivateIp" ] }
        },
        "DomainName": {
            "Description":"FQDN of newly created EC2 instamce",
            "Value":{ "Fn::Join" : [ "", ["<%= type %>","-",{"Ref" : "<%= type %>ID"}, "-", {"Fn::GetAtt" : [ "CephInstance", "AvailabilityZone" ]}, ".", {"Ref" : "HostedZone"} ,"."]]} 
        }

    }
        

}
