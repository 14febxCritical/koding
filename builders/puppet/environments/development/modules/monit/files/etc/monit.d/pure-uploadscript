check process pure-uploadscript
	with pidfile /var/run/pure-uploadscript.pid
	start program = "/etc/monit.d/scripts/pure-uploadscript.sh start"
		with timeout 30 seconds
	stop program = "/etc/monit.d/scripts/pure-uploadscript.sh stop"
		with timeout 30 seconds

	if changed pid then alert
	if totalcpu > 15% for 2 cycles then alert
	if totalmem > 400 MB for 2 cycles then alert
	if 3 restarts within 5 cycles then timeout
