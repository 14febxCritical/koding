check process kiteCake
	with pidfile /var/run/node/kiteCake.pid
	start program = "/etc/monit.d/scripts/kiteCake.sh start"
		with timeout 30 seconds
	stop program = "/etc/monit.d/scripts/kiteCake.sh stop"
		with timeout 30 seconds

	if changed pid then alert
	if totalcpu > 15% for 2 cycles then alert
	if totalmem > 50 MB for 2 cycles then alert
	if 3 restarts within 5 cycles then timeout
