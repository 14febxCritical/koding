check process terminal
	with pidfile /var/run/node/terminal.pid
	start program = "/etc/monit.d/scripts/terminal.sh start"
		with timeout 30 seconds
	stop program = "/etc/monit.d/scripts/terminal.sh stop"
		with timeout 30 seconds

	if changed pid then alert
	if totalcpu > 25% for 2 cycles then alert
	if totalmem > 300 MB for 2 cycles then alert
	if 3 restarts within 5 cycles then timeout
