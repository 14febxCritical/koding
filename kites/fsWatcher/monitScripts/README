# add following lines to  /etc/monit.d/fsWatcher:

check process fsWatcher
    with pidfile /var/run/fsWatcher.pid
    start program = "/opt/kfmjs/kites/fsWatcher/monitScripts/fsWatcher.sh start"
        with timeout 30 seconds
    stop program = "/opt/kfmjs/kites/fsWatcher/monitScripts/fsWatcher.sh stop"
        with timeout 30 seconds

    if changed pid then alert
    if totalcpu > 5% for 2 cycles then alert
    if totalmem > 30 MB for 2 cycles then alert
    if 3 restarts within 5 cycles then timeout